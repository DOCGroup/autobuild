<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/web/www/Doxygen/staging_area/Current/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/web/www/Doxygen/staging_area/Current/ACE_wrappers/TAO"/>
        <environment name="CVSROOT"         value=":ext:isisbuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="/usr/bin/ssh" />

        <variable name="root"     value="/web/www/Doxygen/staging_area/Current" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/web/users/isisbuilds/auto_compile_logs/tao_TAO_doxygen" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32001" />
    <command name="log"               options="on" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-doxygen.h\x22\n'" />
    <command name="print_os_version" />
    <command name="print_ace_config" />
    <command name="check_compiler" options="doxygen" />

    <command name="shell" options="$HOME/autobuild/configs/autobuild/tao_isis/auto_doxygen.pl" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
</autobuild>
