<!-- $Id$ -->

<autobuild>
    <configuration>
        <environment name="ACE_ROOT"     value="C:\bczar\builds\ACE_wrappers" />
        <environment name="TAO_ROOT"     value="C:\bczar\builds\ACE_wrappers\TAO" />
        <environment name="CIAO_ROOT"    value="C:\bczar\builds\ACE_wrappers\TAO\CIAO" />
        <environment name="CVSROOT"      value=":ext:isisbuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"      value="plink.exe" />
        <environment name="XERCESCROOT"  value="C:\etc\xerces-c" />
        <environment name="PATH"         value="C:\bczar\builds\ACE_wrappers\bin;C:\bczar\builds\ACE_wrappers\lib;C:\bczar\builds\ACE_wrappers\TAO\CIAO\bin"
                                         type="prefix" />

        <variable name="configs"         value="Win32 VC71 No Inline" />
        <variable name="name"            value="WinXP CIAO No Inline" />
        <variable name="root"	         value="C:\bczar\builds" />
        <variable name="project_root"    value="C:\bczar\builds\ACE_wrappers" />
        <variable name="log_root"        value="C:\bczar\builds" />
        <variable name="log_file"        value="log.txt" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="win32make"         options="msvc_mpc_auto_compile -vc71 -ALL -Debug -k -clean" />

    <command name="log"               options="ON" />

    <!-- checkout a fresh copy of ACE_wrappers and ACE_MPC -->
    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_MPC" />

    <!-- create the config.h file and download cidlc -->
    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n#include \x22ace/config-win32.h\x22\n'" />
    <command name="anonymous_shell"   options="pscp -C hillj@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/CIDLC/Win32/cidlc.exe ACE_wrappers/TAO/CIAO/bin" />

    <!-- print some useful configuration information -->
    <command name="print_os_version" />
    <command name="check_compiler" options="msvc" />
    <command name="print_ace_config" />
    <command name="print_cidlc_version" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <!-- Insert the compile_flag that controls inline expansion (disabled) and build -->
    <command name="generate_workspace" options="dirs=TAO/CIAO -type vc71 -value_template compile_flags+=/Ob0 CIAO_TAO_DAnCE.mwc"/>
    <command name="win32make"          options="msvc_mpc_auto_compile -dirs TAO/CIAO -vc71 -ALL -Debug -k" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean=5 index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="anonymous_shell"   options="pscp -p -C *.txt *.html hillj@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/auto_compile_logs/isislab/blade10" />
</autobuild>
