<!-- $Id$ -->
<autobuild>
    <configuration>
        <include name="fc6-env.xml" />

        <variable name="root"     value="/isisbuilds/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/proj/autobuilds/logs/CP_Metrics/" />
        <variable name="configs"  value="Linux Exceptions" />
        <environment name="LOG_ROOT"  value="/proj/autobuilds/logs/CP_Metrics/" />

    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32001" />

    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_HAS_MONITOR_FRAMEWORK 0\n#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='use_dep_libs=0\ncidl=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\ndebug=0\noptimize=1\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='cidl=1\n'" />

    <command name="anonymous_shell"   options="scp -C bczar@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/CIDLC/gnu-linux/cidlc ACE_wrappers/TAO/CIAO/bin" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_cidlc_version" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-exclude TAO -type gnuace" />
    <command name="generate_workspace" options="dirs=TAO -exclude TAO_*.mwc,CIAO -type gnuace" />
    <command name="generate_workspace" options="dirs=TAO/CIAO -type gnuace" />

    <command name="make"              options="-k --dry-run > $LOG_ROOT/metrics/targets" />
    <command name="make"              options="-k CXX=$ACE_ROOT/bin/g++_metric.sh" />
    <command name="make"              options="-k -C TAO/TAO_IDL" />
    <command name="make"              options="-k -C TAO idl_stubs" />
    <command name="make"              options="-k -C TAO/CIAO/tools/IDL3_to_IDL2" />
    <command name="make"              options="-k -C TAO/CIAO idl_stubs" />
    <command name="make"              options="-k -C TAO --dry-run >> $LOG_ROOT/metrics/targets" />
    <command name="make"              options="-k -C TAO/TAO_IDL realclean find=*akefile" />
    <command name="make"              options="-k -C TAO CXX=$ACE_ROOT/bin/g++_metric.sh" />
    <command name="make"              options="-k -C TAO/CIAO --dry-run >> $LOG_ROOT/metrics/targets" />
    <command name="make"              options="-k -C TAO/CIAO/tools/IDL3_to_IDL2 realclean find=*akefile" />
    <command name="make"              options="-k -C TAO/CIAO CXX=$ACE_ROOT/bin/g++_metric.sh" />

    <command name="log"               options="off" />

    <command name="shell"             options="$ACE_ROOT/bin/generate_compile_stats.sh /isisbuilds/build.txt $LOG_ROOT/metrics/x/ $LOG_ROOT/metrics/targets Compilation" />

    <command name="process_logs"      options="clean=2 move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="scp -r $LOG_ROOT/metrics/x/ bczar@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/Stats/CP" />
</autobuild>
