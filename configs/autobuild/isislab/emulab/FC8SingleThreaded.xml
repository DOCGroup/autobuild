<!-- $Id$ -->
<autobuild>
    <configuration>
        <include name="fc8-env.xml" />
        <variable name="root"     value="/isisbuilds/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/proj/autobuilds/logs/SingleThreaded" />
        <variable name="configs"  value="Linux ST Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32007" />
    <command name="log"               options="on" />


    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='inline=0\nthreads=0\ndebug=0\nexceptions=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\nxerces2=1\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='xerces2=1\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-exclude TAO,build.mwc -type gnuautobuild" />
    <command name="generate_workspace" options="dirs=TAO -exclude TAO_*.mwc,CIAO -type gnuautobuild" />
    <command name="generate_workspace" options="dirs=TAO/CIAO -exclude CIAO_*.mwc -type gnuautobuild" />

    <command name="make"              options="-k -j 2" />
    <command name="make"              options="-k -j 2 -C TAO/TAO_IDL" />
    <command name="make"              options="-k -j 2 -C TAO" />
    <command name="make"              options="-k -j 2 -C TAO/CIAO" />

    <command name="auto_run_tests"    options="-a -o -t -C" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=2 move prettify index" />
    <command name="status"            options="off" />
</autobuild>
