<!-- $Id$ -->
<autobuild>
    <configuration>
        <include name="fc6-env.xml" />
        <variable name="root"     value="/isisbuilds/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/proj/autobuilds/logs/ace_for_tao/" />
        <variable name="configs"  value="Linux CIAO Core SSL ACE_FOR_TAO" />
    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32001" />

    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n#define TAO_HAS_NAMED_RT_MUTEXES 1\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='ssl=1\nprobe=1\nace_for_tao=1\n\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\nCCFLAGS += -pedantic -Wno-long-long -Wno-variadic-macros -Wwrite-strings -Wcast-align\n\nxerces2=1\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=1\nace_for_tao=1\n\nxerces2=1\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-exclude TAO/TAO_*.mwc,TAO/CIAO/CIAO_*.mwc -type gnuautobuild" />

    <command name="make"              options="-j 6 -k" />

    <command name="auto_run_tests" options=" -a -o -t -C" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=2 move prettify index" />
    <command name="status"            options="off" />
</autobuild>
