<!-- $Id$ -->
<autobuild>
    <configuration>

        <include name="fc6-env.xml" />
        <variable    name="valgrind_opts"         value="-q --tool=memcheck --num-callers=25 --leak-check=yes --trace-children=yes --suppressions="
                                                  join=""
                                                  variable="BUILD_CONFIG_PATH"
                                                  join="dir"
                                                  value="FC6valgrind.supp" />
        <environment name="VALGRIND_OPTS"         variable="valgrind_opts" />
        <environment name="ACE_RUN_VALGRIND_CMD"  value="valgrind" />

        <variable name="root"     value="/isisbuilds/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/proj/autobuilds/logs/valgrind/" />
        <variable name="configs"  value="Linux Exceptions SSL Valgrind" />
    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32001" />

    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_HAS_VALGRIND\n#include \x22ace/config-linux.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='cidl=1\nssl=1\ninline=0\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\nxerces2=1\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='cidl=1\nssl=1\nxerces2=1\n'" />

    <command name="anonymous_shell"   options="scp -C bczar@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/CIDLC/gnu-linux/cidlc ACE_wrappers/TAO/CIAO/bin" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_cidlc_version" />
    <command name="print_make_version" />
    <command name="print_perl_version" />
    <command name="print_valgrind_version" />

    <command name="generate_workspace" options="-exclude TAO/TAO_*.mwc,TAO/CIAO/CIAO_*.mwc -type gnuautobuild" />

    <command name="make"              options="-k -j 5" />

    <command name="auto_run_tests"    options="-a -o -t -C" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=2 move prettify index" />

    <command name="status"            options="off" />
</autobuild>
