<!-- $Id$ -->
<autobuild>
    <configuration>
        <include name="fc8-env.xml" />
        <variable name="root"     value="/isisbuilds/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/proj/autobuilds/logs/fc8_autoconf/" />
        <variable name="configs"  value="Linux Exceptions" />

    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32004" />

    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output=''" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_autotools_version" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="shell"             options="cd ACE_wrappers; autoreconf --install --force -I m4" />
    <command name="shell"             options="mkdir ACE_wrappers/build" />
    <command name="shell"             options="cd ACE_wrappers/build; ../configure" />
    <command name="make"              options="dir=build -j 2 -k" />

    <command name="log"               options="off" />

    <command name="process_logs"      options="clean=2 move prettify index" />
    <command name="status"            options="off" />
</autobuild>
