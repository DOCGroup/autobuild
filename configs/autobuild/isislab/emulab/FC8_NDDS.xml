<!-- $Id$ -->
<autobuild>
    <configuration>
        <include name="fc8-env.xml" />

        <variable name="root"     value="/isisbuilds/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/proj/autobuilds/logs/FC8NDDS" />
        <variable name="configs"  value="Linux NDDS SSL Exceptions ZLIB" />
        <environment name="DDS4CCM_DEFAULT_DOMAIN_ID"        value="1"/>

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32005" />
    <command name="log"               options="ON" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/branches/dds_ports/sets/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_LACKS_DEPRECATED_MACROS\n#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='debug=0\nexceptions=1\nrt_corba=1\nsmart_proxies=1\ninterface_repo=1\ninterceptors=1\nssl=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\nxerces3=1\ndds4ccm_ndds=1\nndds=1\nCCFLAGS += -fno-strict-aliasing\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=1\n\nxerces3=1\ndds4ccm_ndds=1\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="g++" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="anonymous_shell"   options="sh /proj/autobuilds/data/autobuild/configs/autobuild/isislab/emulab/copy_rti_dds.sh" />

    <command name="generate_workspace" options="dirs=TAO/CIAO CIAO_TAO.mwc -type gnuautobuild" />
    <command name="make"              options="-k -j 6" />
    <command name="auto_run_tests"    options="-C" />
    <command name="process_logs"      options="clean" />
    <command name="log"               options="OFF" />
    <command name="process_logs"      options="clean=2 move prettify index" />
    <command name="status"            options="off" />

</autobuild>
