<!-- $Id$ -->
<autobuild>
    <configuration>
        <include name="fc8-env.xml" />

        <variable name="root"     value="/isisbuilds/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/proj/autobuilds/logs/ORB_Core" />
        <variable name="configs"  value="Linux NDDS Exceptions" />
        <environment name="DDS4CCM_DEFAULT_DOMAIN_ID"        value="14"/>
    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32004" />
    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />


    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_LACKS_DEPRECATED_MACROS\n#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='dds4ccm_ndds=1\nndds=1\nCCFLAGS += -fno-strict-aliasing\n# Perform some stricter C/C++ checking\nCCFLAGS += -Wwrite-strings -Wcast-align\n\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n\ndebug=0\n'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=1\nxerces3=1\nndds4ccm_ndds=1\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />

    <command name="anonymous_shell"   options="sh /proj/autobuilds/data/autobuild/configs/autobuild/isislab/emulab/copy_rti_dds.sh" />

    <command name="generate_workspace" options="-exclude TAO,build.mwc -type gnuautobuild" />

    <command name="generate_workspace" options="dirs=TAO -exclude TAO_*.mwc,CIAO -type gnuautobuild" />

    <command name="generate_workspace" options="dirs=TAO/CIAO -exclude CIAO_*.mwc,tests,DAnCE -type gnuautobuild" />

    <command name="make"              options="-k -j 6 -C ace" />
    <command name="make"              options="-k -j 6 -C tests" />
    <command name="make"              options="-k -j 6 -C protocols" />
    <command name="make"              options="-k -j 6 -C apps/gperf/src" />
    <command name="make"              options="-k -j 6 -C TAO/TAO_IDL" />
    <command name="make"              options="-k -j 6 -C TAO/tao" />
    <command name="make"              options="-k -j 6 -C TAO/tests idl_stubs" />
    <command name="make"              options="-k -j 6 -C TAO/tests" />
    <command name="make"              options="-k -j 6 -C TAO/DevGuideExamples idl_stubs" />
    <command name="make"              options="-k -j 6 -C TAO/DevGuideExamples" />
    <command name="auto_run_tests"    options="-a -o" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=2 move prettify index" />
    <command name="status"            options="off" />
</autobuild>
