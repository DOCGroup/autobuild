<!-- $Id$ -->
<autobuild>
    <configuration>
        <include name="fc6-env.xml" />

        <variable name="root"     value="/isisbuilds/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/proj/autobuilds/logs/Full" />
        <variable name="configs"  value="Linux SSL Exceptions ZLIB" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32005" />
    <command name="log"               options="ON" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_LACKS_DEPRECATED_MACROS\n#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='debug=0\nexceptions=1\nrt_corba=1\nsmart_proxies=1\ninterface_repo=1\ninterceptors=1\nssl=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\nxerces2=1\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=1\nzlib=1\nzzip=1\nxerces2=1\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="g++" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <!-- Uses ACE.mwc -->
    <command name="generate_workspace" options="-exclude TAO,build.mwc -type gnuautobuild" />
    <!-- Uses TAO/TAO.mwc -->
    <command name="generate_workspace" options="dirs=TAO -exclude TAO_*.mwc,CIAO -type gnuautobuild" />

    <command name="generate_workspace" options="dirs=TAO/CIAO -exclude CIAO_*.mwc -type gnuautobuild" />

    <command name="make"              options="-k -j 2" />
    <command name="make"              options="-k -j 2 -C TAO/TAO_IDL" />
    <command name="make"              options="-k -j 2 -C TAO" />
    <command name="make"              options="-k -j 2 -C TAO/CIAO" />
    <command name="auto_run_tests"    options="-a -o -t -C" />
    <command name="process_logs"      options="clean" />
    <command name="log"               options="OFF" />
    <command name="process_logs"      options="clean=2 move prettify index" />
    <command name="status"            options="off" />

</autobuild>
