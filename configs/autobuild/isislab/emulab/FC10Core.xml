<!-- $Id$ -->
<autobuild>
    <configuration>
        <include name="fc10-env.xml" />

        <variable name="root"     value="/isisbuilds/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/proj/autobuilds/logs/Core10" />
        <variable name="configs"  value="Linux NDDS Exceptions" />
        <environment name="DDS4CCM_DEFAULT_DOMAIN_ID"        value="22"/>
    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32003" />
    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_LACKS_DEPRECATED_MACROS\n#define TAO_HAS_COIOP 1\n#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='mcpp=0\ndebug=0\ninterface_repo=1\nssl=1\nndds=1\n# Perform some stricter C/C++ checking\nCCFLAGS += -Wwrite-strings -Wcast-align\n\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='mcpp=0\nssl=1\nzlib=1\nzzip=1\nxerces3=1\njaws=0\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />

    <command name="anonymous_shell"   options="sh /proj/autobuilds/data/autobuild/configs/autobuild/isislab/emulab/copy_rti_dds.sh" />

    <command name="generate_workspace" options="TAO/CIAO/CIAO_TAO.mwc -type gnuautobuild" />

    <command name="make"              options="-j 6 -C TAO/CIAO -k" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=2 move prettify index" />
    <command name="status"            options="off" />
</autobuild>
