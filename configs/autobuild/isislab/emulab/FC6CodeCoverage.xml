<!-- $Id$ -->

<autobuild>
    <configuration>
        <include name="fc6-env.xml" />
        <variable name="root"     value="/isisbuilds/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/proj/autobuilds/logs/codecoverage/" />
        <variable name="configs"  value="Linux CIAO Core" />
    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32002" />

    <command name="log"               options="ON" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='VDIR=.libs/\nVSHDIR=.libs/\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\ndebug=0\nexceptions=1\nrt_corba=1\nsmart_proxies=1\ninterface_repo=1\ninterceptors=1\nssl=1\nxt_reactor=0\nfl_reactor=0\ntk_reactor=0\nqt_reactor=0\ngtk_reactor=0\noptimize=0\ndebug=0\ninline=0\nqt=0\ncidl=0\n\n# Perform some stricter C/C++ checking using the -pedantic flag, but\n# disable the long long warnings since we need to support that type\n# in ACE/TAO.\nCCFLAGS += -Wno-long-long -Wwrite-strings -Wcast-align\n\n# Enable code coverage support\nCCFLAGS += -fprofile-arcs -ftest-coverage\nLDFLAGS += -fprofile-arcs -ftest-coverage\n\n# For QT headers\n#PLATFORM_QT_CPPFLAGS = -I/usr/include/qt3\n\n# For TK headers\nPLATFORM_TK_CPPFLAGS = -I/usr/include/tcl8.4\n\n# For TCL library\n#PLATFORM_TK_LIBS += -ltk8.4 -ltcl8.4\n\n# Additional XtReactor flags\n#PLATFORM_XT_LIBS += -lXm\n\n# Override default ACE settings.  Debian deprecates the single threaded Qt library.\n#PLATFORM_QT_LIBS=-lqt-mt\n\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='rwho=0\nqt=0\nxt_reactor=0\nssl=1\ncidl=0\nexceptions=1\nzlib=1\nzzip=1\n\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-exclude TAO/CIAO -type gnuautobuild" />

    <command name="make"              options="-k -j 4" />

    <command name="auto_run_tests"    options=" -a -o -t" />

    <command name="anonymous_shell"   options="lcov --base-directory /isisbuilds/ACE_wrappers --directory /isisbuilds/ACE_wrappers --ignore-errors gcov,source --capture --output-file /isisbuilds/lcovace.info" />
    <command name="anonymous_shell"   options="lcov --base-directory /isisbuilds/ACE_wrappers/TAO --directory /isisbuilds/ACE_wrappers --ignore-errors gcov,source --capture --output-file /isisbuilds/lcovtao.info" />
    <command name="anonymous_shell"   options="genhtml --output-directory=/isisbuilds/LCOV --legend --frames --show-details /isisbuilds/lcovace.info /isisbuilds/lcovtao.info" />

    <command name="process_logs"      options="clean" />
    <command name="log"               options="OFF" />
    <command name="process_logs"      options="clean=2 move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z /isisbuilds/LCOV/* bczar@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/Coverage" />
</autobuild>
