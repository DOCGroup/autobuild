<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/bczar/builds/wchar/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/home/bczar/builds/wchar/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"        value="/home/bczar/builds/wchar/ACE_wrappers/TAO/CIAO"/>
        <environment name="LD_LIBRARY_PATH" value="/home/bczar/builds/utils/xerces/lib:/home/bczar/builds/wchar/ACE_wrappers/lib:/usr/local/lib" />
