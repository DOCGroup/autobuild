<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/bczar/builds/CORBAecompact/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/home/bczar/builds/CORBAecompact/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"       value="/home/bczar/builds/CORBAecompact/ACE_wrappers/TAO/CIAO"/>
        <environment name="XERCESCROOT"     value="/home/bczar/xerces"/>
        <environment name="LD_LIBRARY_PATH" value="/home/bczar/xerces/lib:/home/bczar/builds/CORBAecompact/ACE_wrappers/lib" />
        <environment name="ZLIB_ROOT"       value="/usr/" />
        <environment name="ZZIP_ROOT"       value="/usr/" />

        <variable name="root"     value="/home/bczar/builds/CORBAecompact/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/bczar/builds/CORBAecompact/" />
        <variable name="configs"  value="Linux NoInterceptor Core" />
    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32003" />
    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='CC=gcc32\nCXX=g++32\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n\ndebug=0\ninterceptors=0\n\n\n\n# Perform some stricter C/C++ checking\nCCFLAGS += -Wwrite-strings -Wcast-align\n\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='corba_e_compact=1\nzlib=0\nzzip=0\n'" />

    <command name="anonymous_shell"   options="scp bczar@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/CIDLC/gnu-linux/cidlc ACE_wrappers/TAO/CIAO/bin" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_cidlc_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k realclean" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="generate_workspace" options="-exclude TAO_*.mwc,TAO/CIAO/CIAO_*.mwc" />

    <command name="make"              options="-k" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
    <command name="anonymous_shell"   options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers/ --include  *.txt --include *.html --exclude ** ./  bczar@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/auto_compile_logs/isislab/blade47/CORBA_e_compact"/>
</autobuild>
