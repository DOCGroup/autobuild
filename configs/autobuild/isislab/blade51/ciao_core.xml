<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/bczar/builds/ciaocore/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/home/bczar/builds/ciaocore/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"        value="/home/bczar/builds/ciaocore/ACE_wrappers/TAO/CIAO"/>
        <environment name="XERCESCROOT"     value="/home/bczar/xerces"/>
        <environment name="LD_LIBRARY_PATH" value="/home/bczar/xerces/lib:/home/bczar/builds/ciaocore/ACE_wrappers/lib" />

        <variable name="root"     value="/home/bczar/builds/ciaocore/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/bczar/builds/ciaocore/" />
        <variable name="configs"  value="Linux CIAO Core" />

    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32001" />

    <command name="log"               options="on" />

    <!-- Clean out the workspace before regenerating the Makefiles. -->
    <command name="make"              options="-k -C TAO/CIAO realclean" />

    <!-- Delete all the Makefiles so the cvs checkout won't complain. -->
    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n#define TAO_HAS_NAMED_RT_MUTEXES 1\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=0\ncidl=0\n'" />

    <command name="anonymous_shell"   options="scp bczar@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/CIDLC/gnu-linux/cidlc ACE_wrappers/TAO/CIAO/bin" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_cidlc_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="dirs=TAO/CIAO CIAO_TAO.mwc" />

    <command name="make"              options="-j 2 -k -C TAO/CIAO" />

    <command name="auto_run_tests"     options="-C -envmod LD_ASSUME_KERNEL=2.4.19" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />

    <command name="anonymous_shell"   options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include  *.txt --include *.html --exclude ** ./  bczar@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/auto_compile_logs/isislab/blade51"/>
</autobuild>
