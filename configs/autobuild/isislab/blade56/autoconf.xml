<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/bczar/builds/autoconf/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/home/bczar/builds/autoconf/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"       value="/home/bczar/builds/autoconf/ACE_wrappers/TAO/CIAO"/>
        <environment name="LD_LIBRARY_PATH" value="/home/bczar/builds/autoconf/ACE_wrappers/lib" />
        <environment name="XERCESCROOT"     value="/home/bczar/xerces"/>
        <environment name="PATH"            value="/usr/local/bin" type="prefix" />

        <variable name="root"     value="/home/bczar/builds/autoconf" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/bczar/builds/autoconf" />
        <variable name="configs"  value="Linux Exceptions" />

    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32004" />

    <command name="log"               options="on" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output=''" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_autotools_version" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="shell"             options="cd ACE_wrappers; autoreconf --install --force -I m4" />
    <command name="shell"             options="rm -rf ACE_wrappers/build" />
    <command name="shell"             options="mkdir ACE_wrappers/build" />
    <command name="shell"             options="cd ACE_wrappers/build; ../configure" />
    <command name="configure"         options="--preclean" />
    <command name="make"              options="dir=build -j 2 -k" />

    <command name="log"               options="off" />

    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />

    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ bczar@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/auto_compile_logs/isislab/blade56/autoconf" />
</autobuild>
