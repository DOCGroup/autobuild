<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/export/home/chipper/bugzilla/SOLARIS8_FORTE_UPDATE1_newbuild/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/export/home/chipper/bugzilla/SOLARIS8_FORTE_UPDATE1_newbuild/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/export/home/chipper/bugzilla/SOLARIS8_FORTE_UPDATE1_newbuild/ACE_wrappers/ace:/project/danzon/pkg/openssl/lib" />
        <environment name="CVSROOT"         value=":ext:wustlbuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="/project/danzon/pkg/OpenSSH/bin/ssh" />

        <variable name="root"     value="/export/home/chipper/bugzilla/SOLARIS8_FORTE_UPDATE1_newbuild" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/cs/group/bugzilla/.www-docs/auto_compile_logs/chipper_SOLARIS8_FORTE_UPDATE1_newbuild" />
        <variable name="configs"  value="SUNCC5_1 Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-sunos5.8.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='exceptions=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_sunos5_sunc++.GNU\n\n'" />

    <command name="print_os_version" />
    <command name="check_compiler"    options="sun_cc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-j 2 -k reverseclean" />
    <command name="make"              options="-j 2 -k -C TAO reverseclean" />
    <command name="make"              options="-j 2 -k" />
    <command name="make"              options="-j 2 -k -C TAO" />

    <command name="auto_run_tests"    options="" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
