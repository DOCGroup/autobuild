<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/export/project/rumbatmp/bugzilla/Debian_WChar/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/export/project/rumbatmp/bugzilla/Debian_WChar/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/export/project/rumbatmp/bugzilla/Debian_WChar/ACE_wrappers/ace" />
        <environment name="CVSROOT"         value=":ext:ucibuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />

        <variable name="root"     value="/export/project/rumbatmp/bugzilla/Debian_WChar" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/bugzilla/.www-docs/auto_compile_logs/rumba_Debian_WChar" />
        <variable name="configs"  value="Linux Exceptions" />
        <variable name="MAKEFLAGS" value="CC=gcc-3.2 CXX=g++-3.2 -j 2" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_HAS_WCHAR\n#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\ndebug=0\nexceptions=1\nrt_corba=1\nsmart_proxies=1\ninterface_repo=1\ninterceptors=1\nssl=1\nCC=gcc-3.2\nCXX=g++-3.2\n'" />

    <command name="print_os_version" options="gcc-3.2" />
    <command name="check_compiler" options="gcc-3.2" />
    <command name="print_ace_config" />

    <command name="make"              options="-k reverseclean" />
    <command name="make"              options="-k -C TAO reverseclean" />
    <command name="make"              options="-j 2 -k" />
    <command name="make"              options="-j 2 -k -C TAO" />

    <command name="auto_run_tests"    options="" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
