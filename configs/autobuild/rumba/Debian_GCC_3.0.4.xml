<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/export/project/rumbatmp/bugzilla/GCC_3.0/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/export/project/rumbatmp/bugzilla/GCC_3.0/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/export/project/rumbatmp/bugzilla/GCC_3.0/ACE_wrappers/ace" />
        <environment name="CVSROOT"         value=":ext:ucibuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />

        <variable name="root"     value="/export/project/rumbatmp/bugzilla/GCC_3.0" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/bugzilla/.www-docs/auto_compile_logs/rumba_GCC_3.0" />
        <variable name="configs"  value="Linux SSL Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\ndebug=0\nexceptions=1\nssl=1\n\n# Override -Wno-uninitiialized to verify that uninitialized variable\n# warnings actually work properly when exception handling is\n# enabled in gcc 3.0.\n\nCCFLAGS += -Wuninitialized\n\n# Perform some stricter C/C++ checking using the -pedantic flag, but\n# disable the long long warnings since we need to support that type\n# in ACE/TAO.\nCCFLAGS += -pedantic -Wno-long-long -Wwrite-strings -Wcast-align\n\nCC=gcc-3.0\nCXX=g++-3.0\n\n'" />

    <command name="print_os_version"  />
    <command name="check_compiler" options="gcc-3.0" />
    <command name="print_ace_config" />

    <command name="make"              options="-k reverseclean" />
    <command name="make"              options="-k -C TAO reverseclean" />
    <command name="make"              options="-j 2 -k" />
    <command name="make"              options="-j 2 -k -C TAO" />

    <command name="auto_run_tests"    options="" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
