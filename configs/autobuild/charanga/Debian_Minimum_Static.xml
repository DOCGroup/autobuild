<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/export/bugzilla/Minimum_newbuild/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/export/bugzilla/Minimum_newbuild/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/export/bugzilla/Minimum_newbuild/ACE_wrappers/lib" />
        <environment name="CVSROOT"         value=":ext:wustlbuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />

        <variable name="root"     value="/export/bugzilla/Minimum_newbuild" />
        <variable name="sam_root" value="/export/bugzilla/Minimum_newbuild/ACE_wrappers/samwise" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/project/acetmp/auto_compile_logs/charanga_Debian_Minimum_Static" />
        <variable name="configs"  value="Linux MINIMUM STATIC" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32002" />
    <command name="log"               options="on" />

    <!-- Delete all the Makefiles so the cvs checkout won't complain. -->
    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_MPC"/>
    <!-- Now, delete them again to insure a clean slate. -->
    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='static_libs_only=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\ndebug=0\noptimize=1\nminimum_corba=1\nexceptions=0\nCPPFLAGS += -DACE_USE_RCSID=0\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />

    <!-- Uses ACE.mwc -->
    <command name="generate_workspace" options="-exclude TAO,build.mwc " />
    <!-- Uses TAO/TAO.mwc -->
    <command name="generate_workspace" options="dirs=TAO -exclude TAO_*.mwc,CIAO " />

    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -C TAO realclean" />
    <command name="make"              options="-j 2 -k" />
    <command name="make"              options="-j 2 -k -C TAO" />

    <command name="auto_run_tests"    options=" -a -o -t -C" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
</autobuild>
