<autobuild>
    <configuration>
        <environment name="HOST_ROOT" value="/builds/Snow_Leopard_Static_Host/ACE_wrappers" />
        <environment name="ACE_ROOT" value="/builds/iPhone_3.1.2_Hardware/ACE_wrappers" />
        <environment name="TAO_ROOT" value="/builds/iPhone_3.1.2_Hardware/ACE_wrappers/TAO" />
        <environment name="CIAO_ROOT" value="/builds/iPhone_3.1.2_Hardware/ACE_wrappers/TAO/CIAO" />
        <environment name="DANCE_ROOT" value="/builds/iPhone_3.1.2_Hardware/ACE_wrappers/TAO/CIAO/DAnCE" />

        <environment name="IPHONE_TARGET" value="HARDWARE" />
        <environment name="IPHONE_VERSION" value="3.1.2" />

        <variable name="root"         value="/builds/iPhone_3.1.2_Hardware" />
        <variable name="remote_root"  value="/private/var/builds/iPhone_3.1.2_Hardware/ACE_wrappers" />
        <variable name="log_file"     value="build.txt" />
        <variable name="log_root"     value="/builds/iPhone_3.1.2_Hardware" />
        <variable name="remote_shell" value="ssh root@192.168.69.102" />
        <variable name="configs"      value="STATIC" />
    </configuration>

    <command name="status"            options="on" />

    <command name="log"               options="on" />
    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=0\ncross_compile=1'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-macosx-iphone-hardware.h\x22\n\n '" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='CROSS-COMPILE=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_macosx_iphone.GNU\n'" />

    <command name="print_os_version" />
    <command name="print_remote_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler"    options="gcc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k realclean" />
    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="generate_workspace" options="-type gnuautobuild -static" />
    <command name="make"              options="-k -j16" />
    <command name="anonymous_shell"   options="/usr/bin/rsync -rve /usr/bin/ssh --exclude='*.svn*' --exclude '*.o' --exclude '*.cpp' --exclude '*.h' --exclude '*.depend*' --exclude 'GNUmakefile*' --exclude '*.inl' --exclude '*.am' --exclude '*.mpb' --exclude '*.html' --exclude '*.jpg' --exclude '*.mpc' --exclude '*.idl' --exclude '*.pdf' --exclude '*.ppt' --exclude 'Change*' --exclude '*.a' -l ACE_wrappers root@192.168.69.102:/private/var/builds/iPhone_3.1.2_Hardware/" />
    <command name="auto_run_remote_tests"/>

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />

    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ bczar@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/zifnab/iPhone_3.1.2_Hardware" />
</autobuild>
