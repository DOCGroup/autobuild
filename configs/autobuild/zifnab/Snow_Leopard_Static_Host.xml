<autobuild>
    <configuration>
        <environment name="ACE_ROOT" value="/builds/Snow_Leopard_Static_Host/ACE_wrappers" />
        <environment name="TAO_ROOT" value="/builds/Snow_Leopard_Static_Host/ACE_wrappers/TAO" />

        <variable name="root"     value="/builds/Snow_Leopard_Static_Host" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/builds/Snow_Leopard_Static_Host" />
        <variable name="project_root" value="/builds/Snow_Leopard_Static_Host/ACE_wrappers/TAO" />
    </configuration>

    <command name="status"            options="on" />


    <command name="log"               options="on" />
    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />
    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-macosx-snowleopard.h\x22\n\n '" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_macosx_snowleopard.GNU\n'" />
    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler"    options="gcc" />
    <command name="print_ace_config" />
    <command name="generate_workspace" options="-type gnuace -static TAO_ACE.mwc" />
    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -j4" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />

    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ bczar@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/zifnab/Snow_Leopard_Static_Host" />
</autobuild>
