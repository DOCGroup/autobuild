<autobuild>
    <configuration>

        <environment name="ACE_ROOT"          value="/builds/gcc64/ACE_wrappers" />
        <environment name="TAO_ROOT"          value="/builds/gcc64/ACE_wrappers/TAO" />
        <environment name="CIAO_ROOT"          value="/builds/gcc64/ACE_wrappers/TAO/CIAO" />
        <environment name="DANCE_ROOT"          value="/builds/gcc64/ACE_wrappers/TAO/DAnCE" />
        <environment name="DYLD_LIBRARY_PATH" value="/builds/gcc64/ACE_wrappers/lib:/builds/utils/gcc64" />
        <environment name="XERCESCROOT"       value="/builds/utils/gcc64" />
        <environment name="SSL_ROOT"         value="/usr" />
        <environment name="NDDSHOME"         value="/build/ndds.4.5f"/>
        <environment name="NDDSARCHITECTURE" value="x64Darwin10gcc4.2.1"/>
        <environment name="RTI_LICENSE_FILE" value="/build/ndds.4.5f/rti_license.dat" />
	<!-- XALANHOME needed for rtiddsgen -->
        <environment name="XALANHOME" value="/builds/xalan-j_2_7_1" />
        <environment name="MACOSX_DEPLOYMENT_TARGET" value="10.6" />
        <variable name="root"     value="/builds/gcc64/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/builds/gcc64" />
        <variable name="project_root" value="/builds/gcc64/ACE_wrappers" />
        <variable name="configs"  value="Darwin" />
    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32002" />

    <command name="log"               options="on" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='xerces3=1\ndds4ccm_ndds=1\nndds=1\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-macosx-snowleopard.h\x22\n\n '" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='dds4ccm_ndds=1\nndds=1\ndebug=0\nstatic_libs_only=0\noptimize=0\nxerces3=1\nPLATFORM_NDDS_FLAGS=-ppPath cpp-4.2 -I.\ninclude $(ACE_ROOT)/include/makeinclude/platform_macosx_snowleopard.GNU\n'" />
    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler"    options="gcc" />
    <command name="print_ace_config" />

    <command name="generate_workspace" options="-exclude TAO/TAO_*.mwc,TAO/CIAO/CIAO_*.mwc -type gnuautobuild -workers 16" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="make"              options="-j 10 -k" />

    <!-- Build CIAO -->
    <command name="make"              options="-k -j 4 -C TAO/CIAO" />

    <command name="auto_run_tests"    options="-a -o -t -C" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=2 move prettify index" />

    <command name="status"            options="off" />
    <command name="shell"             options="rsync -e 'ssh -i /Users/wotte/.ssh/id_build' --progress --recursive --delete -z --exclude /.svn/ --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ bczar@anduril.dre.vanderbilt.edu:/export/webusers/isisbuilds/zifnab/gcc64" />
</autobuild>
