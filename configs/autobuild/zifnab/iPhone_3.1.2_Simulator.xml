<autobuild>
    <configuration>
        <environment name="default_PROCESS_START_WAIT_INTERVAL" value="240" />
        <environment name="default_PROCESS_STOP_WAIT_INTERVAL"  value="240" />

        <environment name="ACE_ROOT" value="/builds/iPhone_3.1.2_Simulator/ACE_wrappers" />
        <environment name="TAO_ROOT" value="/builds/iPhone_3.1.2_Simulator/ACE_wrappers/TAO" />

        <environment name="IPHONE_TARGET" value="SIMULATOR" />
        <environment name="IPHONE_VERSION" value="4.1" />

        <variable name="root"         value="/builds/iPhone_3.1.2_Simulator" />
        <variable name="log_file"     value="build.txt" />
        <variable name="log_root"     value="/builds/iPhone_3.1.2_Simulator" />
        <variable name="configs"      value="STATIC FIXED_BUGS_ONLY" />
    </configuration>

    <command name="status"            options="on" />

    <command name="log"               options="on" />
    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=0\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-macosx-iphone-simulator.h\x22\n\n '" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_macosx_iphone.GNU\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler"    options="gcc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k realclean" />
    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="generate_workspace" options="-type gnuautobuild -static" />
    <command name="make"              options="-k -j4" />
    <command name="auto_run_tests"    options=" -a -o -t" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=2 move prettify index" />

    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ bczar@anduril.dre.vanderbilt.edu:/export/webusers/isisbuilds/zifnab/iPhone_3.1.2_Simulator" />
</autobuild>
