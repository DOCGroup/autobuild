<autobuild>
    <configuration>
        <environment name="HOST_ROOT" value="/builds/Snow_Leopard_Static_Host/ACE_wrappers" />
        <environment name="ACE_ROOT" value="/builds/iPhone_3.1.2_Simulator/ACE_wrappers" />
        <environment name="TAO_ROOT" value="/builds/iPhone_3.1.2_Simulator/ACE_wrappers/TAO" />

        <environment name="IPHONE_TARGET" value="SIMULATOR" />
        <environment name="IPHONE_VERSION" value="3.1.2" />

        <variable name="root"         value="/builds/iPhone_3.1.2_Simulator" />
        <variable name="log_file"     value="build.txt" />
        <variable name="log_root"     value="/builds/iPhone_3.1.2_Simulator" />
        <variable name="project_root" value="/builds/iPhone_3.1.2_Simulator/ACE_wrappers/TAO" />
    </configuration>

    <command name="status"            options="on" />

    <command name="log"               options="on" />
    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />
    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=0\ncross_compile=1'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-macosx-iphone-simulator.h\x22\n\n '" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_macosx_iphone.GNU\n'" />
    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler"    options="gcc" />
    <command name="print_ace_config" />
    <command name="generate_workspace" options="-type gnuautobuild -static TAO_ACE.mwc" />
    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -j16" />
    <command name="auto_run_tests"    options=" -a -o -t" />
    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />

    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ bczar@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/zifnab/iPhone_3.1.2_Simulator" />
</autobuild>
