<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"     value="C:\ace\ACE_wrappers-repository" />
        <environment name="MPC_ROOT"     value="C:\ace\MPC" />
        <environment name="WINMAKE_CONFIGS"  value="Win32 (WCE emulator) Debug" />

        <variable name="root"     value="C:\ace\ACE_wrappers-repository" />
        <variable name="project_root" value="." />
	<variable name="log_file" value="ce4_debug.txt" />
        <variable name="log_root" value="G:\build_logs\dev\wince4_debug" />
        <variable name="name"     value="Windows CE .NET Debug" />
        <variable name="configs"  value="Win32 WinCE Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="log"               options="ON" />

    <command name="cvs"               options="update -P -d ." />

    <command name="print_os_version" />
    <command name="print_ace_config" />

    <command name="generate_workspace" options="-type em3 ace/ace.mwc" />
    <command name="generate_workspace" options="-type em3 tests/tests.mwc" />
    <command name="win32make"         options="perl bin/pippen.pl -evc3 -clean -recurse tests" />
    <!-- RMCast is defined as depending on ace, so clean ace, then rebuild RMCast to get both -->
    <command name="wincemake"         options="ace/ace.vcw /MAKE 'ACE - Win32 (WCE emulator) Debug' /CLEAN /USEENV" />
    <command name="wincemake"         options="ace/ace.vcw /MAKE 'RMCast - Win32 (WCE emulator) Debug' /REBUILD /CECONFIG 'STANDARDSDK' /USEENV" />
    <command name="win32make"         options="perl bin/pippen.pl -evc3 -recurse tests" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean=5 index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
