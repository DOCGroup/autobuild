<!-- chad_dev_studio12-64_release.xml - Solaris, Sun Studio 12 64-bit, wide-char release -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/acebuilds/ATCD/ACE/build/dev_studio12-64_release_wchar" />
        <environment name="LD_LIBRARY_PATH" value="/acebuilds/ATCD/ACE/build/dev_studio12-64_release_wchar/lib:." />
        <environment name="MPC_ROOT"        value="/acebuilds/MPC" />

        <variable name="root"         value="/acebuilds/ATCD/ACE" />
        <variable name="build_name"   value="dev_studio12-64_release_wchar" />
        <variable name="make_program" value="gmake" />
        <variable name="project_root" value="/acebuilds/ATCD/ACE/build/dev_studio12-64_release_wchar" />
        <variable name="log_file"     value="dev_studio12-64_release_wchar.txt" />
        <variable name="log_root"     value="/cinny/acebuilds/logs/chad/dev/studio12-64_release_wchar" />
        <variable name="local_features" value="/acebuilds/ATCD/ACE/local.features" />
        <variable name="configs"      value="Exceptions CHECK_RESOURCES" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="git"               options="dir=/acebuilds/MPC pull" />
    <command name="git"               options="checkout master" />
    <command name="git"               options="pull" />

    <command name="create_ace_build"  options="-a -v" />

    <command name="file_manipulation" options="type=create file=local.features output='qos=1\nipv6=1\nuses_wchar=1\n'" />
    <command name="generate_workspace" options="-feature_file /acebuilds/ATCD/ACE/local.features -relative ACE_ROOT=/acebuilds/ATCD/ACE/build/dev_studio12-64_release_wchar -type gnuace -exclude build,Kokyu" />

    <command name="file_manipulation" options="type=create file=build/dev_studio12-64_release_wchar/ace/config.h output='#include \x22ace/config-sunos5.10.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=build/dev_studio12-64_release_wchar/include/makeinclude/platform_macros.GNU output='exceptions=1\ndebug=0\noptimize=1\nbuildbits=64\ninclude $(ACE_ROOT)/include/makeinclude/platform_sunos5_sunc++.GNU\nCCFLAGS += -xport64\nLDFLAGS += -xport64\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler"    options="sun_cc" />
    <command name="print_ace_config" />

    <command name="make"              options="-k realclean find=*akefile" />
    <command name="make"              options="-j 2 -k" />

    <command name="auto_run_tests"    options="-a" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=5 move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
