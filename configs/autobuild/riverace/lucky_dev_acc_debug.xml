<!-- lucky_dev_acc_debug.xml - HP-UX 11iv2 (11.23) on PA-RISC w/ aCC -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/acebuilds/ATCD/ACE/build/dev_acc_debug" />
        <environment name="SHLIB_PATH"      value="/acebuilds/ATCD/ACE/build/dev_acc_debug/lib:/usr/lib" />
        <environment name="MPC_ROOT"        value="/acebuilds/MPC" />

        <variable name="root"         value="/acebuilds/ATCD/ACE" />
        <variable name="build_name"   value="dev_acc_debug" />
        <variable name="project_root" value="/acebuilds/ATCD/ACE/build/dev_acc_debug" />
        <variable name="log_file"     value="dev_acc_debug.txt" />
        <variable name="log_root"     value="/smokey/acebuilds/logs/lucky/dev/acc_debug" />
        <variable name="local_features" value="/acebuilds/ATCD/ACE/local.features" />
        <variable name="make_program" value="gmake" />
        <variable name="configs"      value="SSL Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="shell"             options="rsync --recursive --update --perms --times --progress smokey:/acebuilds/MPC ../.." />
    <command name="shell"             options="rsync --recursive --update --perms --times --exclude=ACE/build --progress smokey:/acebuilds/ATCD ../.." />
    <command name="git"               options="dir=/acebuilds/ATCD checkout master" />

    <command name="create_ace_build"  options="-a -v" />

    <!-- Delete the build's Makefiles before regenerating them. -->
    <command name="shell"             options="find build/dev_acc_debug -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=create file=local.features output='ssl=1\n'" />
    <command name="generate_workspace" options="-feature_file /acebuilds/ATCD/ACE/local.features -relative ACE_ROOT=/acebuilds/ATCD/ACE/build/dev_acc_debug -type gnuace" />

    <command name="file_manipulation" options="type=create file=build/dev_acc_debug/ace/config.h output='#include \x22ace/config-hpux-11.00.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=build/dev_acc_debug/include/makeinclude/platform_macros.GNU output='exceptions=1\ndebug=1\nssl=1\nSSL_ROOT=/opt/openssl\ninclude $(ACE_ROOT)/include/makeinclude/platform_hpux_aCC.GNU\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler"    options="aCC" />
    <command name="print_ace_config" />

    <command name="make"              options="-j 2 -k" />

    <command name="auto_run_tests"    options="-a" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=5 move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
