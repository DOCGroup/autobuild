<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/acebuilds/ACE_wrappers/build/studio10-64_release_wchar" />
        <environment name="LD_LIBRARY_PATH" value="/acebuilds/ACE_wrappers/build/studio10-64_release_wchar/lib:/usr/lib:/usr/sfw/lib" />
        <environment name="MPC_ROOT"        value="/acebuilds/MPC" />

        <variable name="root"         value="/acebuilds/ACE_wrappers" />
        <variable name="build_name"   value="studio10-64_release_wchar" />
        <variable name="make_program" value="gmake" />
        <variable name="project_root" value="/acebuilds/ACE_wrappers/build/studio10-64_release_wchar" />
        <variable name="log_file"     value="studio10-64_release_wchar.txt" />
        <variable name="log_root"     value="/cinny/acebuilds/logs/chad/dev/studio10-64_release_wchar" />
        <variable name="local_features" value="/acebuilds/ACE_wrappers/local.features" />
        <variable name="configs"      value="Exceptions CHECK_RESOURCES" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="svn"               options="dir=/acebuilds/MPC update --non-interactive" />
    <command name="svn"               options="update --non-interactive" />

    <command name="file_manipulation" options="type=delete file=.disable" />

    <command name="file_manipulation" options="type=mustnotexist file=build/studio10-64_release_wchar/.disable" />

    <command name="create_ace_build"  options="-a -v" />
    <command name="file_manipulation" options="type=create file=build/studio10-64_release_wchar/.disable output='RUNNING'" />

    <command name="file_manipulation" options="type=create file=local.features output='qos=1\nipv6=1\nuses_wchar=1\n'" />
    <command name="generate_workspace" options="-feature_file /acebuilds/ACE_wrappers/local.features -relative ACE_ROOT=/acebuilds/ACE_wrappers/build/studio10-64_release_wchar -type gnuace -exclude build,Kokyu" />

    <command name="file_manipulation" options="type=create file=build/studio10-64_release_wchar/ace/config.h output='#define ACE_USES_WCHAR\n#include \x22ace/config-sunos5.10.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=build/studio10-64_release_wchar/include/makeinclude/platform_macros.GNU output='exceptions=1\ndebug=0\noptimize=1\nbuildbits=64\ninclude $(ACE_ROOT)/include/makeinclude/platform_sunos5_sunc++.GNU\nCCFLAGS += -xport64\nLDFLAGS += -xport64\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler"    options="sun_cc" />
    <command name="print_ace_config" />

    <command name="make"              options="-k realclean find=*akefile" />
    <command name="make"              options="-j 2 -k" />

    <command name="auto_run_tests"    options="-a" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=5 move prettify index" />
    <command name="file_manipulation" options="type=delete file=build/studio10-64_release_wchar/.disable" />
    <command name="status"            options="off" />
</autobuild>
