<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"  value="/acebuilds/ACE_wrappers-repository/build/xlc7_debug" />
        <environment name="LIBPATH"   value="/acebuilds/ACE_wrappers-repository/build/xlc7_debug/lib:.:/usr/lib" />
        <environment name="CVSROOT"   value=":ext:shuston@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"   value="ssh" />
        <environment name="MPC_ROOT"  value="/acebuilds/MPC" />

        <variable name="root"         value="/acebuilds" />
        <variable name="build_name"   value="xlc7_debug" />
        <variable name="project_root" value="/acebuilds/ACE_wrappers-repository/build/xlc7_debug" />
        <variable name="log_file"     value="ACE_wrappers-repository/xlc7_debug.txt" />
        <variable name="log_root"     value="/cinny/acebuilds/logs/charlie/dev/xlc7_debug" />
        <variable name="make_program" value="gmake" />
        <variable name="configs"      value="Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=ACE_wrappers-repository/.disable" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="make"              options="-k realclean" />

    <command name="cvs"               options="checkout -P MPC" />
    <command name="cvs"               options="checkout -P ACE" />

    <command name="file_manipulation" options="type=delete file=ACE_wrappers-repository/.disable" />

    <command name="file_manipulation" options="type=mustnotexist file=ACE_wrappers-repository/build/xlc7_debug/.disable" />
    <command name="create_ace_build"  options="-a -v" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/build/xlc7_debug/.disable output='RUNNING'" />

    <!-- Delete the build's Makefiles before regenerating them. -->
    <command name="shell"             options="find ACE_wrappers-repository/build/xlc7_debug -name 'Makefile*' -exec rm '{}' ';'" />
    <command name="shell"             options="find ACE_wrappers-repository/build/xlc7_debug -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/local.features output='ssl=1\nqos=1\n'" />
    <command name="generate_workspace" options="-feature_file /acebuilds/ACE_wrappers-repository/local.features -relative ACE_ROOT=/acebuilds/ACE_wrappers-repository/build/xlc7_debug -type gnuace -exclude build,Kokyu" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/build/xlc7_debug/ace/config.h output='#define ACE_HAS_AIO_CALLS\n#include \x22ace/config-aix-5.x.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/build/xlc7_debug/include/makeinclude/platform_macros.GNU output='exceptions=1\ndebug=1\nssl=1\nSSL_ROOT=/opt/freeware\ninclude $(ACE_ROOT)/include/makeinclude/platform_aix_ibm.GNU\n'" />

    <command name="print_os_version" />
    <command name="check_compiler"    options="vacpp" />
    <command name="print_ace_config" />

    <!-- make -j 2 sometimes messes up the xlC version check -->
    <command name="make"              options="-k" />

    <command name="auto_run_tests"    options="-a" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=5 move prettify index" />
    <command name="file_manipulation" options="type=delete file=ACE_wrappers-repository/build/xlc7_debug/.disable" />
    <command name="status"            options="off" />
</autobuild>
