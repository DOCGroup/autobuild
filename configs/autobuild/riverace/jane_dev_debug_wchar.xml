<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/acebuilds/ACE_wrappers-repository/build/debug_wchar" />
        <environment name="LD_LIBRARY_PATH" value="/acebuilds/ACE_wrappers-repository/build/debug_wchar/lib:/usr/lib" />
        <environment name="CVSROOT"         value=":ext:shuston@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />
        <environment name="MPC_ROOT"        value="/acebuilds/MPC" />

        <variable name="root"         value="/acebuilds" />
        <variable name="build_name"   value="debug_wchar" />
        <variable name="project_root" value="/acebuilds/ACE_wrappers-repository/build/debug_wchar" />
        <variable name="log_file"     value="ACE_wrappers-repository/debug_wchar.txt" />
        <variable name="log_root"     value="/acebuilds/logs/jane/dev/debug_wchar" />
        <variable name="configs"      value="Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=ACE_wrappers-repository/.disable" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="make"              options="-k reverseclean" />

    <command name="cvs"               options="checkout -P MPC" />
    <command name="cvs"               options="checkout -P ACE" />

    <command name="file_manipulation" options="type=delete file=ACE_wrappers-repository/.disable" />

    <command name="file_manipulation" options="type=mustnotexist file=ACE_wrappers-repository/build/debug_wchar/.disable" />

    <command name="create_ace_build"  options="-a -v" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/build/debug_wchar/.disable output='RUNNING'" />

    <!-- Delete the build's Makefiles before regenerating them. -->
    <command name="shell"             options="find ACE_wrappers-repository/build/debug_wchar -name 'Makefile*' -exec rm '{}' ';'" />
    <command name="shell"             options="find ACE_wrappers-repository/build/debug_wchar -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/local.features output='ssl=1\nqos=1\n'" />
    <command name="generate_workspace" options="-feature_file /acebuilds/ACE_wrappers-repository/local.features -relative ACE_ROOT=/acebuilds/ACE_wrappers-repository/build/debug_wchar -type gnuace -hierarchy -make_coexistence" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/build/debug_wchar/ace/config.h output='#define ACE_USES_WCHAR\n#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/build/debug_wchar/include/makeinclude/platform_macros.GNU output='exceptions=1\ndebug=1\nssl=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />

    <command name="print_os_version" />
    <command name="check_compiler"    options="g++" />
    <command name="print_ace_config" />

    <command name="make"              options="-j 2 -k" />

    <command name="auto_run_tests"    options="-a" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=5 move prettify index" />
    <command name="file_manipulation" options="type=delete file=ACE_wrappers-repository/build/debug_wchar/.disable" />
    <command name="status"            options="off" />
</autobuild>
