<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/acebuilds/ACE_wrappers-repository/build/autoconf_gcc_debug" />
        <environment name="LD_LIBRARY_PATH" value="/acebuilds/ACE_wrappers-repository/build/autoconf_gcc_debug/lib:/usr/lib" />
        <environment name="CVSROOT"         value=":ext:shuston@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />
        <environment name="MPC_ROOT"        value="/acebuilds/MPC" />

        <variable name="root"         value="/acebuilds" />
        <variable name="build_name"   value="autoconf_gcc_debug" />
        <variable name="project_root" value="/acebuilds/ACE_wrappers-repository" />
        <variable name="log_file"     value="ACE_wrappers-repository/autoconf_gcc_debug.txt" />
        <variable name="log_root"     value="/jane/acebuilds/logs/bumbles/dev/autoconf_gcc_debug" />
        <variable name="configs"      value="Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=ACE_wrappers-repository/.disable" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <!-- Delete all the Makefile.am files so cvs checkout won't complain. -->
    <command name="shell"             options="find ACE_wrappers-repository -name 'Makefile.am' -exec rm '{}' ';'" />

    <command name="cvs"               options="checkout -P MPC" />
    <command name="cvs"               options="checkout -P ACE" />

    <!-- Now, delete them again to insure a clean slate. -->
    <command name="shell"             options="find ACE_wrappers-repository -name 'Makefile.am' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=delete file=ACE_wrappers-repository/.disable" />

    <command name="file_manipulation" options="type=mustnotexist file=ACE_wrappers-repository/build/autoconf_gcc_debug/.disable" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/build/autoconf_gcc_debug/.disable output='RUNNING'" />

    <command name="print_os_version" />
    <command name="check_compiler"    options="g++" />
    <command name="print_ace_config" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/local.features output='ssl=1\nqos=1\n'" />
    <command name="generate_workspace" options="dirs=/acebuilds/ACE_wrappers-repository -feature_file /acebuilds/ACE_wrappers-repository/local.features -relative ACE_ROOT=/acebuilds/ACE_wrappers-repository -type automake -hierarchy -make_coexistence -exclude build,Kokyu" />

    <command name="shell"             options="(cd ACE_wrappers-repository; ./bin/bootstrap)" />

    <command name="configure"         options="--preclean" />

    <command name="make"              options="dir=build/autoconf_gcc_debug -j 2 -k" />

    <command name="auto_run_tests"    options="dir=build/autoconf_gcc_debug -a" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=5 move prettify index" />
    <command name="file_manipulation" options="type=delete file=ACE_wrappers-repository/build/autoconf_gcc_debug/.disable" />
    <command name="status"            options="off" />
</autobuild>
