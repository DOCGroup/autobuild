<!-- ralphie_dev_xlc10_debug.xml - AIX 6.1 with XL/C 10 -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"  value="/acebuilds/ATCD/ACE/build/dev_xlc10_debug" />
        <!-- Setting LIBPATH with ...aix_xlc_patch makes DLL_Test hang -->
        <!-- environment name="LIBPATH"   value="/acebuilds/ATCD/ACE/build/dev_xlc10_debug/lib:.:/home/shuston/aix_xlc_patch/lib:/usr/lib" / -->
        <environment name="MPC_ROOT"  value="/acebuilds/MPC" />

        <variable name="root"         value="/acebuilds/ATCD/ACE" />
        <variable name="build_name"   value="dev_xlc10_debug" />
        <variable name="project_root" value="/acebuilds/ATCD/ACE/build/dev_xlc10_debug" />
        <variable name="log_file"     value="dev_xlc10_debug.txt" />
        <variable name="log_root"     value="/cinny/acebuilds/logs/ralphie/dev/xlc10_debug" />
        <variable name="make_program" value="gmake" />
        <variable name="local_features" value="/acebuilds/ATCD/ACE/local.features" />
        <variable name="configs"      value="Exceptions SSL CHECK_RESOURCES" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="git"               options="dir=/acebuilds/MPC pull origin master" />
    <command name="git"               options="checkout master" />
    <command name="git"               options="pull origin master" />

    <command name="create_ace_build"  options="-a -v" />

    <!-- Delete the build's Makefiles before regenerating them. -->
    <command name="shell"             options="find build/dev_xlc10_debug -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=create file=local.features output='ssl=1\nqos=1\nipv6=1\n'" />
    <command name="generate_workspace" options="-feature_file /acebuilds/ATCD/ACE/local.features -relative ACE_ROOT=/acebuilds/ATCD/ACE/build/dev_xlc10_debug -type gnuace -exclude build,Kokyu" />

    <command name="file_manipulation" options="type=create file=build/dev_xlc10_debug/ace/config.h output='#define ACE_HAS_AIO_CALLS\n#include \x22ace/config-aix-5.x.h\x22\n'" />

    <!-- This CCFLAGS mod is TEMPORARY until IBM releases a real patch!!! -->
    <command name="file_manipulation" options="type=create file=build/dev_xlc10_debug/include/makeinclude/platform_macros.GNU output='exceptions=1\ndebug=1\nssl=1\nCCFLAGS += -qpath=ILbc:/home/shuston/aix_xlc_patch/exe\ninclude $(ACE_ROOT)/include/makeinclude/platform_aix_ibm.GNU\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler"    options="vacpp" />
    <command name="print_ace_config" />

    <!-- make -j 2 sometimes messes up the xlC version check -->
    <command name="make"              options="-k" />

    <command name="auto_run_tests"    options="-a" />

    <command name="log"               options="off" />
    <!-- Can't do clean=5 index - AIX perl errors; see smokey clean_index_aix_builds.pl -->
    <command name="process_logs"      options="move prettify" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
