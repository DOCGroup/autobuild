<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"     value="C:\\ace\\ACE_wrappers" />
        <environment name="TAO_ROOT"     value="C:\\ace\\ACE_wrappers\\TAO" />
        <environment name="PATH"         value="C:\\ace\\ACE_wrappers\\lib" type="prefix" />
        <environment name="MPC_ROOT"     value="C:\\ace\\MPC" />

        <variable name="root"            value="C:\\ace\\ACE_wrappers" />
        <variable name="project_root"    value="C:\\ace\\ACE_wrappers" />
	<variable name="log_file"        value="vc71_tao_host.log" />
        <variable name="log_root"        value="g:\\build_logs\\dev\\vc71_tao_host" />
        <variable name="name"            value="Win32 TAO Host" />
        <variable name="configs"         value="Win32 Exceptions" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="vc7make"           options="/clean Debug TAO_HOST.sln" />
    <command name="file_manipulation" options="type=create file=ace/config.h output='#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n#include \x22ace/config-win32.h\x22\n'" />

    <command name="log"               options="ON" />

    <command name="svn"               options="dir=/ace/MPC update --non-interactive" />
    <command name="svn"               options="dir=/ace/ACE_wrappers update --non-interactive" />
    <command name="svn"               options="dir=/ace/ACE_wrappers/TAO update --non-interactive" />

    <command name="print_os_version" />
    <command name="check_compiler" options="msvc" />
    <command name="print_ace_config" />

    <command name="file_manipulation" options="type=create file=TAO-HOST.mwc output='workspace {\n  ace\n  apps/gperf\n  TAO/TAO_IDL\n}\n'" />
    <command name="generate_workspace" options="-type vc71 -relative ACE_ROOT=C:/ace/ACE_wrappers -relative TAO_ROOT=C:/ace/ACE_wrappers/TAO TAO-HOST.mwc" />
    <command name="vc7make"           options="/build Debug TAO_HOST.sln" />

    <!-- command name="auto_run_tests"    options="-a" / -->

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean=5 index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
