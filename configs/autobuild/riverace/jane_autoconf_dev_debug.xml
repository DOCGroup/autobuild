<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/acebuilds/autoconf/ACE_wrappers/build/debug" />
        <environment name="LD_LIBRARY_PATH" value="/acebuilds/autoconf/ACE_wrappers/build/debug/ace:/usr/lib" />
        <environment name="CVSROOT"         value=":ext:shuston@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />

        <variable name="root"         value="/acebuilds/autoconf/ACE_wrappers" />
        <variable name="build_name"   value="debug" />
        <variable name="project_root" value="build/debug" />
        <variable name="log_file"     value="autoconf_debug.txt" />
        <variable name="log_root"     value="/acebuilds/logs/jane/dev/autoconf_debug" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="cvs"               options="-z 3 -q update -P -d ." />

    <command name="file_manipulation" options="type=delete file=.disable" />

    <command name="file_manipulation" options="type=mustnotexist file=build/debug/.disable" />

    <command name="print_os_version" />
    <command name="check_compiler"    options="g++" />
    <command name="print_ace_config" />
    <command name="configure"         options="--preclean" />
    <command name="file_manipulation" options="type=create file=build/debug/.disable output='RUNNING'" />

    <command name="make"              options="-j 2 -k" />

    <command name="auto_run_tests"    options="-a" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=build/debug/.disable" />
    <command name="status"            options="off" />
</autobuild>
