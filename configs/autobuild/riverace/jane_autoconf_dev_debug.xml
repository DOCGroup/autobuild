<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/acebuilds/ACE_wrappers-repository" />
        <environment name="LD_LIBRARY_PATH" value="/acebuilds/ACE_wrappers-repository/build/autoconf_debug/ace/.libs:/acebuilds/ACE_wrappers-repository/build/autoconf_debug/tests/.libs:/usr/lib" />
        <environment name="CVSROOT"         value=":ext:shuston@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />
        <environment name="MPC_ROOT"        value="/acebuilds/MPC" />

        <variable name="root"         value="/acebuilds" />
        <variable name="build_name"   value="autoconf_debug" />
        <variable name="project_root" value="/acebuilds/ACE_wrappers-repository" />
        <variable name="log_file"     value="autoconf_debug.txt" />
        <variable name="log_root"     value="/acebuilds/logs/jane/dev/autoconf_debug" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=ACE_wrappers-repositrory/.disable" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <!-- Delete all the Makefile.am files so cvs checkout won't complain. -->
    <command name="shell"             options="find ACE_wrappers-repository -name 'Makefile.am' -exec rm '{}' ';'" />

    <command name="cvs"               options="checkout -P MPC" />
    <command name="cvs"               options="checkout -P ACE" />

    <!-- Now, delete them again to insure a clean slate. -->
    <command name="shell"             options="find ACE_wrappers-repository -name 'Makefile.am' -exec rm '{}' ';'" />

    <command name="print_os_version" />
    <command name="check_compiler"    options="g++" />
    <command name="print_ace_config" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/local.features output='ssl=1\nqos=1\n'" />
    <command name="generate_workspace" options="-feature_file /acebuilds/ACE_wrappers-repository/local.features -relative ACE_ROOT=/acebuilds/ACE_wrappers-repository -type automake -hierarchy -make_coexistence -exclude build,Kokyu" />

    <!-- For now, need to append this - MPC should do this eventually. -->
    <command name="file_manipulation" options="type=append file=ACE_wrappers-repository/Makefile.am output='\nACLOCAL = @ACLOCAL@\nACLOCAL_AMFLAGS = -I m4\n'" />

    <command name="configure"         options="--preclean" />

    <command name="make"              options="-j 2 -k" />

    <command name="auto_run_tests"    options="-a" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=5 move prettify index" />
    <command name="file_manipulation" options="type=delete file=ACE_wrappers-repository/.disable" />
    <command name="status"            options="off" />
</autobuild>
