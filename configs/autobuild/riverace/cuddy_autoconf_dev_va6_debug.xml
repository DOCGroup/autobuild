<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"  value="/acebuilds/ACE_wrappers-repository" />
        <environment name="LIBPATH"   value="/acebuilds/ACE_wrappers-repository/build/autoconf_va6_debug/lib:.:/usr/lib" />
        <environment name="CVSROOT"   value=":ext:shuston@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"   value="ssh" />
        <environment name="MPC_ROOT"  value="/acebuilds/MPC" />

        <variable name="root"         value="/acebuilds" />
        <variable name="build_name"   value="autoconf_va6_debug" />
        <variable name="project_root" value="/acebuilds/ACE_wrappers-repository" />
        <variable name="log_file"     value="ACE_wrappers-repository/autoconf_va6_debug.txt" />
        <variable name="log_root"     value="/jane/acebuilds/logs/cuddy/dev/autoconf_va6_debug" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=ACE_wrappers-repository/.disable" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <!-- Since MPC generates the Makefile.am files, delete them now and -->
    <!-- again after checking out ACE. -->
    <command name="shell"             options="find ACE_wrappers-repository -name 'Makefile*.am' -exec rm '{}' ';'" />
    <command name="cvs"               options="checkout -P MPC" />
    <command name="cvs"               options="checkout -P ACE" />
    <command name="shell"             options="find ACE_wrappers-repository -name 'Makefile*.am' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=delete file=ACE_wrappers-repository/.disable" />

    <command name="file_manipulation" options="type=mustnotexist file=ACE_wrappers-repository/build/autoconf_va6_debug/.disable" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/local.features output='ssl=1\nqos=1\n'" />
    <command name="generate_workspace" options="-feature_file /acebuilds/ACE_wrappers-repository/local.features -relative ACE_ROOT=/acebuilds/ACE_wrappers-repository -type automake -exclude build -hierarchy -make_coexistence" />

    <command name="print_os_version" />
    <command name="check_compiler"    options="vacpp" />
    <command name="print_ace_config" />

    <command name="configure"         options="CXX=xlC_r ACE_TLS_CPPFLAGS=-I/opt/freeware/include ACE_TLS_LDFLAGS=-L/opt/freeware/lib --preclean" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/build/autoconf_va6_debug/.disable output='RUNNING'" />

    <command name="make"              options="-j 2 -k" />

    <command name="auto_run_tests"    options="-a" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=5 move prettify index" />
    <command name="file_manipulation" options="type=delete file=build/autoconf_va6_debug/.disable" />
    <command name="status"            options="off" />
</autobuild>
