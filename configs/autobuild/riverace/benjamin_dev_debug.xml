<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/acebuilds/ACE_wrappers/build/debug" />
        <environment name="LD_LIBRARY_PATH" value="/acebuilds/ACE_wrappers/build/debug/ace:/usr/lib" />
        <environment name="CVSROOT"         value=":ext:shuston@cvs.doc.wustl.edu:/project/cvs-repository" />

        <variable name="root"         value="/acebuilds/ACE_wrappers" />
        <variable name="build_name"   value="debug" />
        <variable name="project_root" value="build/debug" />
        <variable name="log_file"     value="debug.txt" />
        <variable name="log_root"     value="/jane/acebuilds/logs/benjamin/dev/debug" />
        <variable name="configs"      value="Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="cvs"               options="-q update -P -d ." />

    <command name="file_manipulation" options="type=delete file=.disable" />

    <command name="file_manipulation" options="type=mustnotexist file=build/debug/.disable" />
    <command name="create_ace_build_legacy"  options="-a -v" />
    <command name="file_manipulation" options="type=create file=build/debug/.disable output='RUNNING'" />

    <command name="file_manipulation" options="type=create file=build/debug/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=build/debug/include/makeinclude/platform_macros.GNU output='exceptions=1\ndebug=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />

    <command name="print_os_version" />
    <command name="check_compiler"    options="g++" />
    <command name="print_ace_config" />

    <command name="make"              options="-k realclean" />
    <command name="make"              options="-j 2 -k" />

    <command name="auto_run_tests"    options="-a" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=7 move prettify index" />
    <command name="file_manipulation" options="type=delete file=build/debug/.disable" />
    <command name="status"            options="off" />
</autobuild>
