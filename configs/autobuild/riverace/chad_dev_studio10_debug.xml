<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/acebuilds/ACE_wrappers/build/studio10_static_debug" />
        <environment name="LD_LIBRARY_PATH" value="/acebuilds/ACE_wrappers/build/studio10_static_debug/lib:/usr/lib:/usr/sfw/lib" />
        <environment name="MPC_ROOT"        value="/acebuilds/MPC" />

        <variable name="root"         value="/acebuilds/ACE_wrappers" />
        <variable name="build_name"   value="studio10_static_debug" />
        <variable name="make_program" value="gmake" />
        <variable name="project_root" value="/acebuilds/ACE_wrappers/build/studio10_static_debug" />
        <variable name="log_file"     value="studio10_static_debug.txt" />
        <variable name="log_root"     value="/cinny/acebuilds/logs/chad/dev/studio10_static_debug" />
        <variable name="local_features" value="/acebuilds/ACE_wrappers/local.features" />
        <variable name="configs"      value="Exceptions CHECK_RESOURCES STATIC SSL" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="svn"               options="dir=/acebuilds/MPC update --non-interactive" />
    <command name="svn"               options="update --non-interactive" />

    <command name="file_manipulation" options="type=delete file=.disable" />

    <command name="file_manipulation" options="type=mustnotexist file=build/studio10_static_debug/.disable" />

    <command name="create_ace_build"  options="-a -v" />
    <command name="file_manipulation" options="type=create file=build/studio10_static_debug/.disable output='RUNNING'" />

    <command name="file_manipulation" options="type=create file=local.features output='qos=1\nipv6=1\nssl=1\n'" />
    <command name="generate_workspace" options="-feature_file /acebuilds/ACE_wrappers/local.features -relative ACE_ROOT=/acebuilds/ACE_wrappers/build/studio10_static_debug -type gnuace -exclude build,Kokyu" />

    <command name="file_manipulation" options="type=create file=build/studio10_static_debug/ace/config.h output='#include \x22ace/config-sunos5.10.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=build/studio10_static_debug/include/makeinclude/platform_macros.GNU output='kstat=1\nexceptions=1\ndebug=1\noptimize=0\nstatic_libs_only=1\nssl=1\nbuildbits=32\nSSL_ROOT=/usr/sfw\ninclude $(ACE_ROOT)/include/makeinclude/platform_sunos5_sunc++.GNU\n'" />

    <command name="print_os_version" />
    <command name="check_compiler"    options="sun_cc" />
    <command name="print_ace_config" />

    <command name="make"              options="-k realclean" />
    <command name="make"              options="-j 2 -k" />

    <command name="auto_run_tests"    options="-a" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=5 move prettify index" />
    <command name="file_manipulation" options="type=delete file=build/studio10_static_debug/.disable" />
    <command name="status"            options="off" />
</autobuild>
