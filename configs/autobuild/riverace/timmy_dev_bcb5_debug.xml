<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"     value="D:\ace\ACE_wrappers" />
        <environment name="DEBUG"        value="1" />

        <variable name="root"     value="D:\ace\ACE_wrappers" />
        <variable name="project_root" value="." />
	<variable name="log_file" value="bcb5_debug.txt" />
        <variable name="log_root" value="G:\build_logs\dev\bcb5_debug" />
        <variable name="name"     value="Windows NT4 BCB5 Debug" />
        <variable name="configs"  value="Win32 Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="make"              options=" -i -f Makefile.bor realclean" />

    <command name="log"               options="ON" />

    <command name="cvs"               options="update -P -d ." />

    <command name="print_os_version" />
    <command name="check_compiler"    options="borland" />
    <command name="print_ace_config" />

    <command name="make"              options=" -i -f Makefile.bor" />
    <command name="auto_run_tests"    options="-a -ExeSubDir Dynamic\Debug" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean=5 index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
