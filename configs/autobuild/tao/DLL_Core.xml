<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"         value="F:\bugzilla\new_DLL_Core\ACE_wrappers" />

        <variable name="root"     value="F:/bugzilla/new_DLL_Core/" />
	<variable name="log_file" value="log.txt" />
        <variable name="log_root" value="D:\Inetpub\wwwroot\bugzilla\new_dll_core" />
        <variable name="name"     value="Win2K DLL Core" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="win32make"         options="msvc_auto_compile -DLL -Debug -CORE -u -k -clean" />

    <command name="log"               options="ON" />

    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n#define TAO_HAS_SMART_PROXIES 1\n#define TAO_HAS_AMI 1\n#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n#define TAO_HAS_INTERFACE_REPOSITORY 1\n#define TAO_HAS_RT_CORBA 1\n#include \x22ace/config-win32.h\x22\n'" />

    <command name="print_ace_config" />

    <command name="win32make"         options="msvc_auto_compile -DLL -Debug -CORE -u -k" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
