<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"         value="F:\bugzilla\new_unicode\ACE_wrappers" />
        <environment name="TAO_ROOT"         value="F:\bugzilla\new_unicode\ACE_wrappers\TAO"/>
        <environment name="Path"             value="F:\bugzilla\new_unicode\ACE_wrappers\lib;F:\bugzilla\new_unicode\ACE_wrappers\bin;" type="prefix" />

        <variable name="root"     value="F:/bugzilla/new_unicode/" />
        <variable name="log_file" value="log.txt" />
        <variable name="log_root" value="D:\Inetpub\wwwroot\bugzilla\new_unicode" />
        <variable name="name"     value="Win2K Unicode" />
        <variable name="configs"  value="Win32 Exceptions" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="log"               options="ON" />

    <command name="cvs"               options="-z9 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z9 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n#define ACE_USES_WCHAR\n#define UNICODE\n#define _UNICODE\n#define TAO_HAS_SMART_PROXIES 1\n#define TAO_HAS_AMI 1\n#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n#define TAO_HAS_INTERFACE_REPOSITORY 1\n#define TAO_HAS_RT_CORBA 1\n#include \x22ace/config-win32.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='rwho=0\nqos=1\nrmcast=1\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="msvc" />
    <command name="print_ace_config" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-recurse -type vc6 -exclude TAO" />

    <command name="win32make"         options="msvc_mpc_auto_compile -ACE -Debug -k" />

    <command name="auto_run_tests"    options="-a -s \x22f:\bugzilla\sandbox\Release\sandbox.exe -t 5400000\x22" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
