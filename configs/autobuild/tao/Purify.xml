<autobuild>
    <configuration>
        <environment name="ACE_ROOT"         value="G:\purifybuilds\Purify\ACE_wrappers" />
        <environment name="TAO_ROOT"         value="G:\purifybuilds\Purify\ACE_wrappers\TAO"/>
        <environment name="Path"         value="G:\purifybuilds\Purify\ACE_wrappers\bin;F:\bugzilla\ssl\openssl-0.9.6\out32dll" type="prefix" />
        <environment name="ACE_RUN_PURIFY_CMD"         value="G:\bugzilla\purify\purify.exe" />

        <variable name="root"     value="G:/purifybuilds/Purify/" />
	<variable name="log_file" value="log.txt" />
        <variable name="log_root" value="D:\Inetpub\wwwroot\bugzilla\purify" />
        <variable name="name"     value="Win2K Purify" />
        <variable name="configs"  value="Win32 SANDBOX SSL Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="win32make"         options="msvc_mpc_auto_compile -DLL -Debug -u -k -clean" />

    <command name="log"               options="ON" />

    <command name="cvs"               options="-q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n#define TAO_HAS_SMART_PROXIES 1\n#define TAO_HAS_AMI 1\n#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n#define TAO_HAS_INTERFACE_REPOSITORY 1\n#define TAO_HAS_RT_CORBA 1\n#include \x22ace/config-win32.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='rwho=0\nqos=1\nssl=1\n\n'" />

    <command name="print_os_version" />
    <command name="print_ace_config" />

    <command name="win32make"         options="msvc_mpc_auto_compile -DLL -Debug -ACE -u -k" />
    <command name="win32make"         options="msvc_mpc_auto_compile -DLL -Debug -CORE -u -k" />
    <command name="win32make"         options="msvc_mpc_auto_compile -DLL -Debug -TAO -u -k" />

    <command name="auto_run_tests"    options="-a -s \x22f:\bugzilla\sandbox\Release\sandbox.exe -t 5400000\x22" />
    <command name="auto_run_tests"    options="-o -s \x22f:\bugzilla\sandbox\Release\sandbox.exe -t 300000\x22" />
    <command name="auto_run_tests"    options="-t -s \x22f:\bugzilla\sandbox\Release\sandbox.exe -t 300000\x22" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
