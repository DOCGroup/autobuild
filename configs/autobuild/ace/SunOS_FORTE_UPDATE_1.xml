<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/project/acetmp/bugzilla/SUNOS_FORTE_UPDATE_1_newbuild/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/project/acetmp/bugzilla/SUNOS_FORTE_UPDATE_1_newbuild/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/project/acetmp/bugzilla/SUNOS_FORTE_UPDATE_1_newbuild/ACE_wrappers/lib:/project/danzon/pkg/openssl/lib" />
        <environment name="CVSROOT"         value=":ext:wustlbuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="/project/danzon/pkg/OpenSSH/bin/ssh" />

        <variable name="root"     value="/project/acetmp/bugzilla/SUNOS_FORTE_UPDATE_1_newbuild" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/cs/group/bugzilla/.www-docs/auto_compile_logs/ace_SUNOS_FORTE_UPDATE_1_newbuild" />
        <variable name="configs"  value="SUNCC5_1 Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <!-- Delete all the Makefiles so the cvs checkout won't complain. -->
    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_MPC"/>
    <!-- Now, delete them again to insure a clean slate. -->
    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_ONLY_LATEST_AND_GREATEST\n#define ACE_USES_STD_NAMESPACE_FOR_STDCPP_LIB 1\n#define ACE_HAS_REACTOR_NOTIFICATION_QUEUE 1\n#include \x22ace/config-sunos5.7.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='TAO_IDLFLAGS+=-GT\nexceptions=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_sunos5_sunc++.GNU\n'" />

    <command name="print_os_version" />
    <command name="check_compiler"    options="sun_cc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <!-- Uses ACE.mwc -->
    <command name="generate_workspace" options="-exclude TAO,vc7_nightly.mwc,build.mwc -hierarchy -make_coexistence" />
    <!-- Uses TAO/TAO.mwc -->
    <command name="generate_workspace" options="dirs=TAO -exclude TAOACE.mwc,CIAO -hierarchy -make_coexistence" />

    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -C TAO realclean" />
    <command name="make"              options="-j 2 -k" />
    <command name="make"              options="-j 2 -k -C TAO" />

    <command name="auto_run_tests"    options="" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="rem_sems"            options="" />
    <command name="status"            options="off" />
</autobuild>
