<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/project/acetmp/bugzilla/LYNX_PPC_newbuild/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/project/acetmp/bugzilla/LYNX_PPC_newbuild/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/project/acetmp/bugzilla/cross_compile_dir/lib:/pkg/gnu2k1/lib:/pkg/gnu/lib:/project/acetmp/bugzilla/LYNX_PPC_newbuild/ACE_wrappers/ace" />
        <environment name="CVSROOT"         value=":ext:wustlbuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="/project/danzon/pkg/OpenSSH/bin/ssh" />

        <variable name="root"     value="/project/acetmp/bugzilla/LYNX_PPC_newbuild" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/cs/group/bugzilla/.www-docs/auto_compile_logs/ace_LYNX_PPC_newbuild" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-lynxos.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='LYNXTARGET=ppc\nVERSION=3.1.0\ninclude $(ACE_ROOT)/include/makeinclude/platform_lynxos.GNU\ndebug=0\nstatic_libs_only=1\noptimize=1\nTAO_IDL:=/project/acetmp/bugzilla/cross_compile_dir/bin/tao_idl\nTAO_IDLFLAGS+=-g /project/acetmp/bugzilla/cross_compile_dir/bin/gperf\n\nPSDL_TAO:=/project/acetmp/bugzilla/cross_compile_dir/bin/psdl_tao\n\n '" />

    <command name="print_os_version" />
    <command name="check_compiler"    options="gcc" />
    <command name="print_ace_config" />

    <command name="make"              options="-k reverseclean" />
    <command name="make"              options="-k -C TAO reverseclean" />
    <command name="make"              options="-j 2 -k" />
    <command name="make"              options="-j 2 -k -C TAO" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
