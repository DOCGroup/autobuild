        <environment name="CVSROOT"         value=":ext:wustlbuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />

	<environment name="ACE_ROOT"        value="/export/home/bugzilla/facet/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/export/home/bugzilla/facet/ACE_wrappers/TAO"/>
        <environment name="JACE_ROOT"       value="/export/home/bugzilla/facet/RTEvent/tao-facet-adapter/jACE" />
