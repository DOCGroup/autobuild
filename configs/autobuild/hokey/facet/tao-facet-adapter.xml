        <environment name="LD_LIBRARY_PATH" value="/export/home/bugzilla/facet/ACE_wrappers/ace" />
        <environment name="ANT_HOME"        value="/docpkg/jakarta-ant-1.5" />
        <environment name="ASPECTJ_HOME"    value="/docpkg/aspectj_1.1" />
        <environment name="JAVA_HOME"       value="/docpkg/java" />
        <environment name="LIBRARYCLASSPATH" value="/docpkg/java/jre/lib/rt.jar:." />

        <environment name="CLASSPATH"       value="/export/home/bugzilla/facet/RTEvent/facet/classes"            />
        <environment name="CLASSPATH"       value="/docpkg/jacorb/lib/idl.jar"                type="suffix"/>
        <environment name="CLASSPATH"       value="/docpkg/jacorb/lib/jacorb.jar"             type="suffix"/>
        <environment name="CLASSPATH"       value="/docpkg/junit/junit.jar"                      type="suffix"/>
        <environment name="CLASSPATH"       value="/docpkg/aspectj_1.1/lib/aspectjrt.jar"         type="suffix"/>
        <environment name="CLASSPATH"       value="/docpkg/aspectj_1.1/lib/aspectj-ant.jar"       type="suffix"/>
        <environment name="CLASSPATH"       value="/docpkg/aspectj_1.1/lib/aspectjtools.jar"      type="suffix"/>
        <environment name="CLASSPATH"       value="/docpkg/ant/lib/ant.jar"             type="suffix"/>
        <environment name="CLASSPATH"       value="/docpkg/ant/lib/ant-optional.jar"    type="suffix"/>
        <environment name="CLASSPATH"       value="."                                               type="suffix"/>

        <environment name="PATH"            value="/export/home/bugzilla/facet/ACE_wrappers/ace"          />
        <environment name="PATH"            value="/docpkg/jikes/bin"                   type="suffix"/>
        <environment name="PATH"            value="/docpkg/jacorb/bin"                 type="suffix"/>
        <environment name="PATH"            value="/docpkg/java/bin"                   type="suffix"/>
        <environment name="PATH"            value="/docpkg/aspectj_1.1/bin"                type="suffix"/>
        <environment name="PATH"            value="/docpkg/ant/bin"              type="suffix"/>
        <environment name="PATH"            value="/bin"                                     type="suffix"/>
        <environment name="PATH"            value="/usr/bin"                                 type="suffix"/>
        <environment name="PATH"            value="."                                        type="suffix"/>

        <variable name="root"     value="/export/home/bugzilla/facet" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/cs/group/bugzilla/.www-docs/auto_compile_logs/hokey_facet-adapter" />
        <variable name="configs"  value="Linux" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />
    <command name="cvs"               options="-z 3 -q update -Pd RTEvent/tao-facet-adapter" />

    <command name="make"              options="-C $TAO_ROOT/orbsvcs/orbsvcs -f Makefile.RTEvent clean" />
