<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="CVSROOT"         value=":ext:wustlbuilds@cvs.doc.wustl.edu:/project/jRate-repo/jRate-repository" />
        <environment name="CVS_RSH"         value="ssh" />

	<environment name="JRATE_HOME"      value="/export/home/bugzilla/jRate" />
        <environment name="JRATE_GCC_HOME"  value="/export/home/bugzilla/jRate-gcc"/>
        <environment name="JRATE_GCC_SRC_HOME" value="/export/home/bugzilla/jRateGCC" />

        <environment name="LD_LIBRARY_PATH" value="/export/home/bugzilla/jRate-gcc/lib"               /> 
        <environment name="LD_LIBRARY_PATH" value="/export/home/bugzilla/jRate/lib"     type="suffix" />
        <environment name="LD_LIBRARY_PATH" value="/export/home/bugzilla/jRateGCC/lib"  type="suffix" />

        <environment name="ANT_HOME"        value="/docpkg/jakarta-ant-1.5" />

        <environment name="CLASSPATH"       value="/docpkg/jakarta-ant-1.5/lib/ant.jar"                        />
        <environment name="CLASSPATH"       value="/docpkg/jakarta-ant-1.5/lib/ant-optional.jar" type="suffix" />
        <environment name="CLASSPATH"       value="." type="suffix" />

        <environment name="JAVA_HOME"       value="/docpkg/java_1.4.0" />

        <environment name="PATH"            value="/export/home/bugzilla/jRate-gcc/bin"          />
        <environment name="PATH"            value="/docpkg/jikes-1.15/bin"          type="suffix"/>
        <environment name="PATH"            value="/docpkg/java_1.4.0/bin"          type="suffix"/>
        <environment name="PATH"            value="/docpkg/jakarta-ant-1.5/bin"     type="suffix"/>
        <environment name="PATH"            value="/export/home/bugzilla/jRate/bin" type="suffix"/>
        <environment name="PATH"            value="/bin"                            type="suffix"/>
        <environment name="PATH"            value="/usr/bin"                        type="suffix"/>
        <environment name="PATH"            value="."                               type="suffix"/>

        <variable name="root"               value="/export/home/bugzilla" />
        <variable name="project_root"       value="jRate" />
        <variable name="log_file"           value="build-jRate.txt" />
        <variable name="log_root"           value="/home/cs/group/bugzilla/.www-docs/auto_compile_logs/hokey_jRate" />
        <variable name="configs"            value="Linux" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <!-- we haven't set the permissions correctly yet to checkout from cvs.doc -->
    <!-- <command name="cvs"               options="-z 3 -q checkout -P jRate" /> -->

    <command name="make"              options="jRate-gcc-cvs" />

    <command name="auto_run_tests"     />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
