<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/export/home/bugzilla/FACET/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/export/home/bugzilla/FACET/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/usr/local/gcc32/lib:/export/home/bugzilla/FACET/ACE_wrappers/ace" />
        <environment name="CVSROOT"         value=":ext:wustlbuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />
	<environment name="PATH"            value="/usr/bin:/usr/local/bin:/bin:/usr/sbin" />

        <variable name="root"     value="/export/home/bugzilla/FACET/" />
        <variable name="sam_root" value="/export/home/bugzilla/FACET/ACE_wrappers/samwise" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/cs/group/bugzilla/.www-docs/auto_compile_logs/hokey_Redhat_8.0" />
        <variable name="configs"  value="Linux" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n\ndebug=0\nexceptions=0\ninterceptors=0\n\nACE_COMPONENTS=FOR_TAO\n\nTAO_ORBSVCS=Notify Naming AV Log RTEvent CosEvent RTSchedEvent RTCORBAEvent \n\n# Perform some stricter C/C++ checking\nCCFLAGS += -Wwrite-strings -Wcast-align\n\n'" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />

    <command name="make"              options="-k reverseclean" />
    <command name="make"              options="-k -C TAO reverseclean" />
    <command name="make"              options="-j 2 -C ace" />
    <command name="make"              options="-j 2 -C apps/gperf/src" />
    <command name="make"              options="-j 1 -C TAO/tao" />
    <command name="make"              options="-j 1 -C TAO/TAO_IDL" />
    <command name="make"              options="-j 1 -C TAO/orbsvcs" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
