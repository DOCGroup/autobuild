<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/build/isisbuilds/IPV6/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/build/isisbuilds/IPV6/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"        value="/build/isisbuilds/IPV6/ACE_wrappers/TAO/CIAO"/>
        <environment name="LD_LIBRARY_PATH" value="/build/isisbuilds/utils/xerces/lib:/build/isisbuilds/IPV6/ACE_wrappers/lib:.:/usr/local/lib" />
        <environment name="XERCESCROOT"         value="/build/isisbuilds/utils/xerces" />
        <environment name="ZLIB_ROOT"       value="/usr/" />
        <environment name="ZZIP_ROOT"       value="/usr/" />

        <variable name="root"     value="/build/isisbuilds/IPV6" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/web/users/isisbuilds/auto_compile_logs/balar_IPV6" />
        <variable name="configs"  value="Linux SSL IPV6 ZLIB" />
    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32003" />

    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_USES_STD_NAMESPACE_FOR_STDCPP_LIB 1\n#define ACE_HAS_REACTOR_NOTIFICATION_QUEUE 1\n#define ACE_HAS_MINIMUM_IOSTREAMH_INCLUSION 1\n#define ACE_USES_IPV4_IPV6_MIGRATION\n#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='ssl=1\nexceptions=1\noptimize=0\ndebug=0\ncidl=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\nCCFLAGS += -Wwrite-strings -Wcast-align\nCPPFLAGS += -DACE_USE_RCSID=0\n\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=1\ncidl=1\nipv6=1\nzlib=1\nzzip=1\n'" />

    <command name="anonymous_shell"   options="/bin/cp /web/users/isisbuilds/CIDLC/gnu-linux/cidlc ACE_wrappers/TAO/CIAO/bin" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_cidlc_version" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k realclean" />

    <command name="generate_workspace" options="-exclude TAO/TAO_*.mwc,TAO/CIAO/CIAO_*.mwc -type gnuace" />

    <command name="make"              options="-k -j 4" />

    <command name="auto_run_tests"    options="-a -o -t -C" />
    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
</autobuild>
