<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"            value="/build/isisbuilds/Dynamic_Hash/ACE_wrappers" />
        <environment name="TAO_ROOT"            value="/build/isisbuilds/Dynamic_Hash/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"           value="/build/isisbuilds/Dynamic_Hash/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"           value="/build/isisbuilds/Dynamic_Hash/ACE_wrappers/TAO/CIAO/DAnCE"/>
        <environment name="LD_LIBRARY_PATH"     value="/build/isisbuilds/utils/xerces/lib:/build/isisbuilds/Dynamic_Hash/ACE_wrappers/lib:/usr/local/lib" />
        <environment name="XERCESCROOT"         value="/build/isisbuilds/utils/xerces" />

        <variable name="root"     value="/build/isisbuilds/Dynamic_Hash/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/web/users/isisbuilds/auto_compile_logs/balar_Dynamic_Hash" />
        <variable name="configs"  value="Linux Exceptions" />
    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32001" />

    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='# Perform some stricter C/C++ checking\nCCFLAGS += -Wwrite-strings -Wcast-align\n\nTAO_IDLFLAGS += -H dynamic_hash\n\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n\ndebug=0\nxerces2=1\n\n'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=1\nxerces2=1\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="generate_workspace" options="-exclude TAO/TAO_*.mwc,TAO/CIAO/CIAO_*.mwc -type gnuace" />

    <command name="make"              options="-k -j 4" />

    <command name="auto_run_tests"    options="-a -o -t -C" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=2 move prettify index" />
    <command name="status"            options="off" />
</autobuild>
