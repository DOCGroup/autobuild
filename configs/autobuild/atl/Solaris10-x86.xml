<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/jcohen/Solaris10_scoreboard/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/home/jcohen/Solaris10_scoreboard/ACE_wrappers/TAO" />
        <environment name="LD_LIBRARY_PATH" value="/home/jcohen/Solaris10_scoreboard/ACE_wrappers/lib:/usr/local/lib/:/usr/lib:/lib" />
        <environment name="CVSROOT"         value=":ext:gthaker@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="/home/jcohen/sshwrapper" />

        <environment name="PATH"            value="/usr/bin:/usr/ucb:/etc:/usr/local/bin" />

        <variable name="root"     value="/home/jcohen/Solaris10_scoreboard" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/jcohen/Solaris10_scoreboard/buildlog" />
        <variable name="configs"  value="Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-sunos5.9.h\x22\n#   if (__GNUC__ > 3 || (__GNUC__ == 3 && __GNUC_MINOR__ >= 4))\n#     define ACE_EXPLICIT_TEMPLATE_DESTRUCTOR_TAKES_ARGS\n#   endif /* __GNUC__ >= 3.4 */\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='exceptions=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_sunos5_g++.GNU\nCFLAGS+=-D_POSIX_PTHREAD_SEMANTICS\nFLAGS=-shared\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_make_version" />
    <command name="print_perl_version" />
    <command name="print_ace_config" />

    <!-- ACE -->
    <command name="generate_workspace" options="-exclude TAO" />
    <!-- TAO -->
    <command name="generate_workspace" options="dirs=TAO -exclude TAO_*.mwc,CIAO" />

    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -C TAO realclean" />
    <command name="make"              options="-k -j 2" />
    <command name="make"              options="-k -j 2 -C TAO" />

    <command name="auto_run_tests"    />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="rem_sems"            options="" />
    <command name="status"            options="off" />

</autobuild>
