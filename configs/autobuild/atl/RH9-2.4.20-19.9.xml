<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/jcohen/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/home/jcohen/ACE_wrappers/TAO" />
        <environment name="LD_LIBRARY_PATH" value="/home/jcohen/ACE_wrappers/ace" />
        <environment name="CVSROOT"         value=":ext:gthaker@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="/home/jcohen/sshwrapper" />
        <environment name="PATH"            value="/usr/local/gcc/3.3.1/bin:/usr/kerberos/bin:/usr/local/bin:/bin:/usr/bin:/usr/X11R6/bin:/home/jcohen/bin" />

        <variable name="root"     value="/home/jcohen" />
        <variable name="sam_root" value="/home/jcohen/ACE_wrappers/samwise" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/jcohen/buildlog" />
        <variable name="configs"  value="Linux Exceptions" />
        <variable name="MAIL_ADMIN" value="jcohen@atl.lmco.com" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="ON" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />
    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />

    <command name="make"              options="-k reverseclean" />
    <command name="make"              options="-k -C TAO reverseclean" />
    <command name="make"              options="-k -j 2 debug=0" />
    <command name="make"              options="-k -j 2 debug=0 -C TAO" />

    <command name="auto_run_tests"    options="" />
    <command name="process_logs"      options="clean" />
    <command name="log"               options="OFF" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />

</autobuild>
