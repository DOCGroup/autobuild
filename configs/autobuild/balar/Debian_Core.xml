<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/project/balartmp/bugzilla/Core/ACE_wrappers" />
        <environment name="LD_LIBRARY_PATH" value="/project/balartmp/bugzilla/Core/ACE_wrappers/ace" />
        <environment name="CVSROOT"         value=":ext:ucibuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />

        <variable name="root"     value="/project/balartmp/bugzilla/Core" />
        <variable name="sam_root" value="/project/balartmp/bugzilla/Core/ACE_wrappers/samwise" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/bugzilla/.www-docs/auto_compile_logs/balar_Core" />
        <variable name="configs"  value="Linux" />
        <variable name="MAIL_ADMIN" value="devo_group@cs.wustl.edu" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n\ndebug=0\n\n# Perform some stricter C/C++ checking\nCCFLAGS += -Wwrite-strings -Wcast-align\n\n'" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />

    <command name="make"              options="--k realclean" />
    <command name="make"              options="-k -C TAO realclean" />
    <command name="make"              options="-j 2 -C ace" />
    <command name="make"              options="-j 2 -C apps/gperf/src" />
    <command name="make"              options="-j 2 -C TAO/tao" />
    <command name="make"              options="-j 2 -C TAO/TAO_IDL" />
    <command name="make"              options="-j 2 -C TAO/orbsvcs/orbsvcs" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
