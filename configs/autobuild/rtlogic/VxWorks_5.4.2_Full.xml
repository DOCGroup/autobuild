<!-- $Id$ -->
<autobuild>
 <configuration>
  <environment name="ACE_ROOT"        value="/usr3/vendor/wustl/LATEST/ACE_wrappers" />
  <environment name="LD_LIBRARY_PATH" value="/usr/local/lib:/usr3/vendor/wustl/LATEST/cross_compile/ACE_wrappers/lib" />
  <environment name="CVSROOT"         value=":ext:andzik@cvs.doc.wustl.edu:/project/cvs-repository" />
  <environment name="CVS_RSH"         value="ssh" />
  <environment name="WIND_BASE"       value="/usr3/vw/t21" />
  <environment name="WIND_HOST_TYPE"  value="sun4-solaris2" />
  <environment name="WIND_REGISTRY"   value="snowmass" />
  <environment name="CPU"             value="PPC604" />

  <variable name="root"               value="/usr3/vendor/wustl/LATEST/" />
  <variable name="log_file"           value="build.txt" />
  <variable name="log_root"           value="/usr3/vendor/wustl/LATEST/" />
  <variable name="configs"            value="VxWorks" />

 </configuration>

 <command name="status"               options="on" />
 <command name="file_manipulation"    options="type=mustnotexist file=.disable" />
 <command name="file_manipulation"    options="type=create file=.disable output='RUNNING'" />
 <command name="log"                  options="on" />

 <!-- Delete all the Makefiles so the cvs checkout won't complain. -->
 <command name="shell"                options="find ACE_wrappers -name 'Makefile*' -exec rm '{}' ';'" />
 <command name="cvs"                  options="-z 9 -q checkout -P ACE_wrappers" />
 <command name="cvs"                  options="-z 9 -q checkout -P ACE_MPC"/>
 <!-- Now, delete them again to insure a clean slate. -->
 <command name="shell"                options="find ACE_wrappers -name 'Makefile*' -exec rm '{}' ';'" />

 <command name="file_manipulation"    options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-vxworks5.x.h\x22\n'" />
 <command name="file_manipulation"    options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_vxworks5.x_g++.GNU\nexceptions=0\nstatic_libs_only=1\ndebug=0\nCPPFLAGS += -DACE_ENABLE_SWAP_ON_WRITE -DACE_ENV_BKWD_COMPAT\nTAO_IDL:=/usr3/vendor/wustl/LATEST/cross_compile/bin/tao_idl\nTAO_IDLFLAGS+=-g /usr3/vendor/wustl/LATEST/cross_compile/bin/gperf\n\nPSDL_TAO:=/usr3/vendor/wustl/LATEST/cross_compile/bin/psdl_tao\n\n'" />
 <command name="print_os_version" />
 <command name="check_compiler"       options="g++ppc" />
 <command name="print_make_version" />
 <command name="print_perl_version" />
 <command name="print_ace_config" />

 <!-- Uses ACE.mwc -->
 <command name="generate_workspace"   options="-exclude TAO" />
 <!-- Uses TAO/TAO.mwc -->
 <command name="generate_workspace"   options="dirs=TAO -exclude *.mwc,CIAO" />

 <command name="make"                 options="-j 2 -k realclean" />
 <command name="make"                 options="-j 2 -k -C TAO realclean" />
 <command name="make"                 options="-j 2 -k" />
 <command name="make"                 options="-j 2 -k -C TAO/TAO_IDL" />
 <command name="make"                 options="-j 2 -k -C TAO idl_stubs" />
 <command name="make"                 options="-j 2 -k -C TAO" />

 <command name="log"                  options="off" />
 <command name="process_logs"         options="clean move prettify index" />
 <command name="file_manipulation"    options="type=delete file=.disable" />
 <command name="status"               options="off" />
</autobuild>
