<autobuild>
    <configuration>
        <environment name="ACE_ROOT"         value="/home/tao/rhel4/doc_scoreboard/native_gcc322/standard/ACE_wrappers" />
        <environment name="TAO_ROOT"         value="/home/tao/rhel4/doc_scoreboard/native_gcc322/standard/ACE_wrappers/TAO" />
        <environment name="MPC_ROOT"         value="/home/tao/rhel4/doc_scoreboard/native_gcc322/standard/ACE_wrappers/MPC" />
        <environment name="LD_LIBRARY_PATH"  value="/usr/local/gcc-3.2.2/lib:/home/tao/rhel4/doc_scoreboard/native_gcc322/standard/ACE_wrappers/ace" />
        <environment name="PATH"             value="/usr/local/gcc-3.2.2/bin:/usr/local/bin:/usr/bin:/bin:/usr/openwin/bin:/usr/X/bin:/usr/ccs/bin:/usr/ucb:." />

        <variable name="make_program"        value="gmake" />
        <variable name="root"                value="/home/tao/rhel4/doc_scoreboard/native_gcc322/standard" />
        <variable name="log_file"            value="build.txt" />
        <variable name="log_root"            value="/home/tao/rhel4/doc_scoreboard/scoreboard/lynxos_ppc/native_tao_idl_build" />
        <variable name="project_root"        value="/home/tao/rhel4/doc_scoreboard/native_gcc322/standard/ACE_wrappers" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="ON" />

    <!-- Now, delete all the Makefiles, objects and libraries to insure a clean slate. -->
    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />
    <command name="shell"             options="find ACE_wrappers -name '*.o' -exec rm '{}' ';'" />
    <command name="shell"             options="find ACE_wrappers -name '*.a' -exec rm '{}' ';'" />
    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='optimize=1\ndebug=0\ninline=0\nstatic_libs_only=1\nstatic_link=1\nstdcpplib=1\n\nssl=0\nexceptions=1\nthreads=1\ntarget_platform=Red Hat Linux Enterprise Server release 4\n\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=0\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <!-- Uses ace.mwc -->
    <command name="generate_workspace" options="dirs=ace -type gnuace" />
    <command name="generate_workspace" options="dirs=apps/gperf/src -type gnuace" />
    <command name="generate_workspace" options="dirs=TAO/TAO_IDL -type gnuace" />

    <command name="make"              options="-k -C ace realclean find=*akefile" />
    <command name="make"              options="-k -C apps/gperf/src realclean find=*akefile" />
    <command name="make"              options="-k -C TAO/TAO_IDL realclean find=*akefile" />
    <command name="make"              options="-k -C ace" />
    <command name="make"              options="-k -C apps/gperf/src" />
    <command name="make"              options="-k -C TAO/TAO_IDL" />

    <command name="process_logs"      options="clean=40" />
    <command name="log"               options="OFF" />
    <command name="process_logs"      options="clean=40 move prettify index" />
    <command name="status"            options="off" />
    <command shell "rsync -avzLe ssh --delete /home/tao/rhel4/doc_scoreboard/scoreboard/lynxos_ppc/ tao@tao:/home/tao/htdocs/doc-scoreboard/lynxos_ppc" />
    <command name="file_manipulation" options="type=delete file=.disable" />
</autobuild>
