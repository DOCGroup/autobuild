<!-- $Id$ -->

<autobuild>
    <configuration>
        <environment name="MPC_ROOT"        value="/home/tao/rhel4/doc_scoreboard/Full/ACE_wrappers/MPC" />
        <environment name="ACE_ROOT"        value="/home/tao/rhel4/doc_scoreboard/Full/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/home/tao/rhel4/doc_scoreboard/Full/ACE_wrappers/TAO"/>
        <environment name="INSLIB"          value="/home/tao/rhel4/doc_scoreboard/Full/ACE_wrappers/lib" />
        <environment name="LD_LIBRARY_PATH" value="/home/tao/rhel4/doc_scoreboard/Full/ACE_wrappers/lib" />
        <environment name="LD_LIBRARY_PATH" value="/home/tao/rhel4/doc_scoreboard/Full/ACE_wrappers/lib" />
        <environment name="CVSROOT"         value=":ext:sma@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />
        <environment name="PATH"            value="/usr/local/bin:/bin:/usr/bin:/usr/X11R6/bin" />

        <variable name="root"     value="/home/tao/rhel4/doc_scoreboard/Full" />
        <variable name="sam_root" value="/home/tao/rhel4/doc_scoreboard/Full/ACE_wrappers/samwise" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/tao/doc-scoreboard/rhel4" />
        <variable name="configs"  value="Linux Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="ON" />

    <!-- Delete all the Makefiles so the cvs checkout won't complain. -->
    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_MPC" />
    <!-- Now, delete them again to insure a clean slate. -->
    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='optimize=1\nexceptions=1\ndebug=0\nthreads=1\nshared_libs_only=1\nstdcpplib=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\ninline=0\n'" />
    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />

    <!-- Uses ACE.mwc -->
    <command name="generate_workspace" options="-exclude TAO,build.mwc" />
    <!-- Uses TAO/TAO.mwc -->
    <command name="generate_workspace" options="dirs=TAO -exclude TAO_*.mwc,CIAO,oldCIAO" />

    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -C TAO realclean" />
    <command name="make"              options="-k" />
    <command name="make"              options="-k -C TAO" />

    <command name="auto_run_tests"    options=" -a -o -t" />
    <command name="process_logs"      options="clean" />
    <command name="log"               options="OFF" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />

</autobuild>
