<autobuild>
    <configuration>
        <environment name="MPC_ROOT"         value="/usr/users/tao/hp1/doc_scoreboard/aCC367/inline/ACE_wrappers/MPC" />
        <environment name="ACE_ROOT"         value="/usr/users/tao/hp1/doc_scoreboard/aCC367/inline/ACE_wrappers" />
        <environment name="TAO_ROOT"         value="/usr/users/tao/hp1/doc_scoreboard/aCC367/inline/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"        value="/usr/users/tao/hp1/doc_scoreboard/aCC367/inline/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"       value="/usr/users/tao/hp1/doc_scoreboard/aCC367/inline/ACE_wrappers/TAO/CIAO/DAnCE"/>
        <environment name="SHLIB_PATH"       value="/usr/users/tao/hp1/doc_scoreboard/aCC367/inline/ACE_wrappers/lib:/usr/local/aCC3.67/opt/aCC/lib:/usr/local/ssl/lib" />
        <environment name="PATH"             value="/usr/local/aCC3.67/opt/aCC/bin:/usr/bin:/opt/ansic/bin:/usr/ccs/bin:/usr/contrib/bin:/usr/local/bin" />
        <environment name="SSL_ROOT"         value="/usr/local/ssl" />

        <variable name="make_program"        value="gmake" />
        <variable name="root"                value="/usr/users/tao/hp1/doc_scoreboard/aCC367/inline" />
        <variable name="log_file"            value="build.txt" />
        <variable name="log_root"            value="/usr/users/tao/hp1/doc_scoreboard/scoreboard/aCC367/inline" />
        <variable name="configs"             value="HPUX aCC SSL QUICK FIXED_BUGS_ONLY" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="ON" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />
    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <!-- Now, delete them again to insure a clean slate. -->
    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-hpux-11.00.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='optimize=1\ndebug=0\ninline=1\n\nssl=1\nrtti=1\n\ninclude $(ACE_ROOT)/include/makeinclude/platform_hpux_aCC.GNU\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="aCC" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />
    <command name="print_openssl_version"/>

    <!-- Uses ACE.mwc -->
    <command name="generate_workspace" options="-exclude TAO,build.mwc,prism -type gnuace" />
    <!-- Uses TAO/TAO.mwc -->
    <command name="generate_workspace" options="dirs=TAO -exclude TAO_*.mwc -type gnuace" />

    <command name="make"              options="-k realclean find=*akefile" />
    <command name="make"              options="-k -C TAO realclean find=*akefile" />

    <command name="make"              options="-k" />
    <command name="make"              options="-k -C TAO" />

    <command name="auto_run_tests"    options=" -a -o -t -C" />
    <command name="log"               options="OFF" />
    <command name="process_logs"      options="clean=40 move prettify index" />
    <command name="status"            options="off" />
    <command shell "rsync -avzLe ssh --delete /usr/users/tao/hp1/doc_scoreboard/scoreboard/ tao@tao:/home/tao/htdocs/doc-scoreboard/hp1" />
    <command name="file_manipulation" options="type=delete file=.disable" />
</autobuild>
