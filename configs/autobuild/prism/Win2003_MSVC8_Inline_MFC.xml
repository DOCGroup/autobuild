        <environment name="ACE_ROOT"   value="C:\\Overnight_Builds\\DOC_Group\\vc8\\inlineMFC\\ACE_wrappers" />
        <environment name="TAO_ROOT"   value="C:\\Overnight_Builds\\DOC_Group\\vc8\\inlineMFC\\ACE_wrappers\\TAO"/>
        <environment name="CIAO_ROOT"  value="C:\\Overnight_Builds\\DOC_Group\\vc8\\inlineMFC\\ACE_wrappers\\TAO\\CIAO"/>
        <environment name="DANCE_ROOT" value="C:\\Overnight_Builds\\DOC_Group\\vc8\\inlineMFC\\ACE_wrappers\\TAO\\DAnCE"/>
        <environment name="TAO_IDL3_TO_IDL2_FLAGS" value=" "/>
        <environment name="MPC_ROOT"   value="C:\\Overnight_Builds\\DOC_Group\\vc8\\inlineMFC\\ACE_wrappers\\MPC" />
        <environment name="PATH"       value="C:\\Overnight_Builds\\DOC_Group\\vc8\\inlineMFC\\ACE_wrappers\\bin;C:\\Overnight_Builds\\DOC_Group\\vc8\\inlineMFC\\ACE_wrappers\\lib;C:\\openssl-0.9.7i\\out32dll;C:\\Perl\\bin;C:\\Program Files\\Subversion\\bin" type="prefix" />
        <environment name="RSYNC_RSH"  value="C:\\cygwin\\bin\\ssh" />
        <environment name="SSL_ROOT"   value="C:\\openssl-0.9.7i" />

        <variable name="root"         value="C:\\Overnight_Builds\\DOC_Group\\vc8\\inlineMFC" />
        <variable name="log_file"     value="build.txt" />
        <variable name="log_root"     value="C:\\doc-scoreboard\\win2003\\VC8_InlineMFC" />
        <variable name="name"         value="WinXP VC8 (VS.Net2003) DLL Inline MFC" />
        <variable name="configs"      value="Win32 VC8 SANDBOX HAS_EXTENDED_FT_INTERCEPTORS SSL MFC QUICK FIXED_BUGS_ONLY NOXERCES" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="log"               options="ON" />

    <command name="win32make"         options="msvc_mpc_auto_compile -u -vc8 -ALL -Release -k -clean" />
    <command name="shell"             options="c:\\cygwin\\bin\\find ACE_wrappers -name '*.vcproj' -exec c:\\cygwin\\bin\\rm '{}' ';'" />
    <command name="shell"             options="c:\\cygwin\\bin\\find ACE_wrappers -name '*.sln' -exec c:\\cygwin\\bin\\rm '{}' ';'" />
    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n#define ACE_DISABLE_WIN32_INCREASE_PRIORITY\n#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n#define TAO_HAS_EXTENDED_FT_INTERCEPTORS 1\n#define ACE_HAS_MFC 1\n#include \"ace/config-win32.h\"\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='rwho=0\nqos=1\nmfc=1\nssl=1\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="msvc" />
    <command name="print_ace_config" />
    <command name="print_perl_version" />
    <command name="print_openssl_version"/>

    <command name="generate_workspace" options="-exclude prism,TAO/TAO_*.mwc -recurse -type vc8" />

    <command name="win32make"         options="msvc_mpc_auto_compile -u -vc8 -ALL -Release -k" />

    <!-- We are about to start our tests we can kick the next build off -->
    <command name="win32make"         options="..\\start_next_build.bat" />
    <command name="auto_run_tests"    options="-a -o -t -C -ExeSubDir Release -s \"C:\\Overnight_Builds\\DOC_Group\\autobuild\\win32sandbox\\sandbox.exe -t 5400000\"" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean=40 index" />
    <command name="status"            options="off" />
    <command shell "rsync -avzLe ssh --delete /cygdrive/c/doc-scoreboard/win2003/ tao@tao:/home/tao/htdocs/doc-scoreboard/win2003" />
    <command name="file_manipulation" options="type=delete file=.disable" />
</autobuild>
