<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/build/isisbuilds/SingleThreaded/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/build/isisbuilds/SingleThreaded/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"        value="/build/isisbuilds/SingleThreaded/ACE_wrappers/TAO/CIAO"/>
        <environment name="LD_LIBRARY_PATH" value="/build/isisbuilds/SingleThreaded/ACE_wrappers/lib:." />

        <variable name="root"     value="/build/isisbuilds/SingleThreaded" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/web/users/isisbuilds/auto_compile_logs/tango_SingleThreaded" />
        <variable name="configs"  value="Linux ST Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32007" />
    <command name="log"               options="on" />


    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='inline=0\nthreads=0\ndebug=0\ncidl=1\nexceptions=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='cidl=1\n'" />
    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="generate_workspace" options="-exclude TAO,build.mwc -type gnuace" />
    <command name="generate_workspace" options="dirs=TAO -exclude TAO_*.mwc,CIAO -type gnuace" />
    <command name="generate_workspace" options="dirs=TAO/CIAO -exclude CIAO_*.mwc,CIDLC,CCF -type gnuace" />
    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -C TAO realclean" />
    <command name="make"              options="-k -C TAO/CIAO realclean" />
    <command name="anonymous_shell"   options="/bin/cp /web/users/isisbuilds/CIDLC/gnu-linux/cidlc ACE_wrappers/TAO/CIAO/bin" />
    <command name="make"              options="-k -j 2" />
    <command name="make"              options="-k -j 2 -C TAO/TAO_IDL" />
    <command name="make"              options="-k -j 2 -C TAO" />
    <command name="make"              options="-k -j 2 -C TAO/CIAO" />

    <command name="auto_run_tests"    options="-envmod LD_ASSUME_KERNEL=2.4.19 -a -o -t -C" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
</autobuild>
