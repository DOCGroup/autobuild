<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/build/isisbuilds/CVS_Report/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/build/isisbuilds/CVS_Report/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/build/isisbuilds/CVS_Report/ACE_wrappers/lib" />
        <environment name="CVSROOT"         value=":ext:isisbuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />

        <variable name="root"     value="/build/isisbuilds/CVS_Report/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/web/users/isisbuilds/auto_compile_logs/CVS_Report" />
        <variable name="configs"  value="" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_MPC"/>

    <command name="print_os_version" />
    <command name="print_ace_config" />

    <command name="shell"    options="cd ${ACE_ROOT}; perl ${HOME}/cvschangelogbuilder-2.2/cvschangelogbuilder.pl -ssh -output=buildhtmlreport >ACE_wrappers.html" />

    <command name="shell"    options="cp ${ACE_ROOT}/ACE_wrappers.html /web/users/isisbuilds/auto_compile_logs/CVS_Report" />
    <command name="shell"    options="cp ${ACE_ROOT}/ACE_MPC.html /web/users/isisbuilds/auto_compile_logs/CVS_Report" />
    <command name="shell"    options="cp ${ACE_ROOT}/*.png /web/users/isisbuilds/auto_compile_logs/CVS_Report" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
