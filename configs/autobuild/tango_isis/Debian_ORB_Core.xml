<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/build/isisbuilds/ORB_Core/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/build/isisbuilds/ORB_Core/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"       value="/build/isisbuilds/ORB_Core/ACE_wrappers/TAO/CIAO"/>
        <environment name="XERCESCROOT"        value="/build/isisbuilds/xerces"/>
        <environment name="LD_LIBRARY_PATH" value="/build/isisbuilds/ORB_Core/ACE_wrappers/lib:/build/isisbuilds/xerces/lib" />

        <variable name="root"     value="/build/isisbuilds/ORB_Core/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/web/users/isisbuilds/auto_compile_logs/tango_ORB_Core" />
        <variable name="configs"  value="Linux Exceptions" />
    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32004" />
    <command name="log"               options="on" />

    <command name="shell"             options="find ACE_wrappers '(' -name 'GNUmakefile*' -o -name '.depend.*' ')' -exec rm '{}' ';'" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />


    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_LACKS_DEPRECATED_MACROS\n#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='cidl=1\n# Perform some stricter C/C++ checking\nCCFLAGS += -Wwrite-strings -Wcast-align\n\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n\ndebug=0\n'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=1\ncidl=1\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />

    <command name="generate_workspace" options="-exclude TAO,build.mwc -type gnuautobuild" />

    <command name="generate_workspace" options="dirs=TAO -exclude TAO_*.mwc,CIAO -type gnuautobuild" />

    <command name="generate_workspace" options="dirs=TAO/CIAO -exclude CIAO_*.mwc,tests,DAnCE,CIDLC,CCF -type gnuautobuild" />

    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -C TAO realclean" />
    <command name="anonymous_shell"   options="/bin/cp /web/users/isisbuilds/CIDLC/gnu-linux/cidlc ACE_wrappers/TAO/CIAO/bin" />
    <command name="make"              options="-k -j 4 -C ace" />
    <command name="make"              options="-k -j 4 -C tests" />
    <command name="make"              options="-k -j 4 -C protocols" />
    <command name="make"              options="-k -j 4 -C apps/gperf/src" />
    <command name="make"              options="-k -j 4 -C TAO/TAO_IDL" />
    <command name="make"              options="-k -j 4 -C TAO/tao" />
    <command name="make"              options="-k -j 4 -C TAO/tests idl_stubs" />
    <command name="make"              options="-k -j 4 -C TAO/tests" />
    <command name="auto_run_tests"    options="-a -o" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
</autobuild>
