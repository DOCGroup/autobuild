<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/build/isisbuilds/ORB_Core/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/build/isisbuilds/ORB_Core/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/build/isisbuilds/ORB_Core/ACE_wrappers/lib" />
        <environment name="CVSROOT"         value=":ext:isisbuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />

        <variable name="root"     value="/build/isisbuilds/ORB_Core/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/web/users/isisbuilds/auto_compile_logs/tango_ORB_Core" />
        <variable name="configs"  value="Linux Exceptions" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='cidl=1\n# Perform some stricter C/C++ checking\nCCFLAGS += -Wwrite-strings -Wcast-align\n\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n\ndebug=0\n\n'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=1\ncidl=1'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />

    <command name="generate_workspace" options="-exclude TAO,vc7_nightly.mwc,build.mwc -hierarchy -make_coexistence" />

    <command name="generate_workspace" options="dirs=TAO -exclude TAOACE.mwc,CIAO -hierarchy -make_coexistence" />

    <command name="generate_workspace" options="dirs=TAO/CIAO -exclude CIAOTAO.mwc,tests,examples,DAnCE,CIDLC,CCF -hierarchy -make_coexistence" />

    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -C TAO realclean" />
    <command name="anonymous_shell"   options="/bin/cp /web/users/isisbuilds/CIDLC/gnu-linux/cidlc ACE_wrappers/TAO/CIAO/bin" />
    <command name="make"              options="-k -j 4 -C ace" />
    <command name="make"              options="-k -j 4 -C tests" />
    <command name="make"              options="-k -j 4 -C apps/gperf/src" />
    <command name="make"              options="-k -j 4 -C TAO/tao" />
    <command name="make"              options="-k -j 4 -C TAO/TAO_IDL" />
    <command name="make"              options="-k -j 4 -C TAO/tests idl_stubs" />
    <command name="make"              options="-k -j 4 -C TAO/tests" />
    <command name="auto_run_tests"    options="-a -o" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
