<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/Users/jmzorko/ace_daily_build/ACE_wrappers-repository" />
        <environment name="DYLD_LIBRARY_PATH" value="/Users/jmzorko/ace_daily_build/ACE_wrappers-repository/ace" />
        <environment name="CVSROOT"         value=":pserver:anonymous@anoncvs.ociweb.com:/cvs" />
        <environment name="CVS_RSH"         value="/usr/bin/ssh" />
        <environment name="MACOSX_DEPLOYMENT_TARGET" value="10.2" />

        <variable name="root"     value="/Users/jmzorko/ace_daily_build" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/Users/jmzorko/ace_daily_build" />
        <variable name="project_root" value="/Users/jmzorko/ace_daily_build/ACE_wrappers-repository" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="log"               options="on" />

    <!-- Delete all the Makefiles so the cvs checkout won't complain. -->
    <command name="shell"             options="find ACE_wrappers -name 'Makefile*' -exec rm '{}' ';'" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_MPC"/>
    <!-- Now, delete them again to insure a clean slate. -->
    <command name="shell"             options="find ACE_wrappers -name 'Makefile*' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/ace/config.h output='#include \x22ace/config-macosx.h\x22\n#define ACE_NEEDS_DL_UNDERSCORE\n\n '" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers-repository/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_macosx.GNU\ndebug=0\nstatic_libs_only=0\noptimize=0\n\n '" />

    <command name="print_os_version" />
    <command name="check_compiler"    options="gcc" />
    <command name="print_ace_config" />

    <!-- Uses ACE.mwc -->
    <command name="generate_workspace" options="-exclude TAO,vc7_nightly.mwc,build.mwc -hierarchy -make_coexistence" />

    <command name="make"              options="-k reverseclean" />
    <command name="make"              options="-j 2 -k" />

    <command name="auto_run_tests"    options="-a" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="on" />
</autobuild>
