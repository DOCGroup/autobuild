<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/ossama/work/gcc-4.0-build/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/home/ossama/work/gcc-4.0-build/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/home/ossama/work/gcc-4.0-build/ACE_wrappers/lib:/home/ossama/GCC-4.0/lib" />
        <environment name="PATH" value="/home/ossama/GCC-4.0/bin" />
        <environment name="CVSROOT"         value=":ext:ossama@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />

        <variable name="root"     value="/home/ossama/work/gcc-4.0-build/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/ossama/work/gcc-4.0-build/" />
        <variable name="configs"  value="Linux SSL" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />
    <!-- Delete all the Makefiles so the cvs checkout won't complain. -->
    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n#define TAO_HAS_NAMED_RT_MUTEXES 1\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='ssl=1\ncidl=1\nprobe=1\n\nCXX=g++-4.0\n\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\nCCFLAGS += -pedantic -Wno-long-long -Wwrite-strings -Wcast-align -Wformat=2\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=1\ncidl=1\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_cidlc_version" />
    <command name="print_perl_version" />

    <!-- Uses ACE.mwc -->
    <command name="generate_workspace" options="-exclude TAO" />
    <!-- Uses TAO/TAO.mwc -->
    <command name="generate_workspace" options="dirs=TAO" />

    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -C TAO realclean" />

    <command name="make"              options="-k" />
    <command name="make"              options="-k -C TAO/TAO_IDL" />
    <command name="make"              options="-k -C TAO idl_stubs" />
    <command name="make"              options="-k -C TAO" />

    <command name="auto_run_tests" options="" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="ssh ossama@naboo.dre.vanderbilt.edu rm /web/users/ossama/builds/Debian_GCC_4.0/* -f" />
    <command name="shell"             options="scp -C *.txt *.html ossama@naboo.dre.vanderbilt.edu:/web/users/ossama/builds/Debian_GCC_4.0" />
</autobuild>
