<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/export1/tango/bugzilla/SUNOS_GCC_2_95/ACE_wrappers" />
        <environment name="LD_LIBRARY_PATH" value="/export1/tango/bugzilla/SUNOS_GCC_2_95/ACE_wrappers/ace:/project/danzon/pkg/OpenSSH/lib:/pkg/gnu2k1/lib:/pkg/gnu/lib" />
        <environment name="CVSROOT"         value=":ext:wustlbuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="/project/danzon/pkg/OpenSSH/bin/ssh" />

        <variable name="root"     value="/export1/tango/bugzilla/SUNOS_GCC_2_95" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/cs/group/bugzilla/.www-docs/auto_compile_logs/tango_SUNOS_GCC_2_95" />


    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />
    <command name="check_compiler"    options="gcc" />
<!--    <command name="sam" options="clean" /> -->
    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />
