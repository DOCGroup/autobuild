<!-- $Id$ -->
<!-- This build is used to just build the TAO IDL compiler      -->
<!-- and TAO psdl_tao compiler.                                 -->
<!-- so that it can be used with the Lynx cross compile build.  -->
<!-- We just need to build the apps/gperf/src, ace, and         -->
<!-- TAO/TAO_IDL directories.  We do not need to run the tests. -->
     
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/export1/project/danzontmp1/bugzilla/CROSS_COMPILE_TAO_IDL/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/export1/project/danzontmp1/bugzilla/CROSS_COMPILE_TAO_IDL/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/export1/project/danzontmp1/bugzilla/CROSS_COMPILE_TAO_IDL/ACE_wrappers/ace" />
        <environment name="CVSROOT"         value=":ext:wustlbuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="/project/danzon/pkg/OpenSSH/bin/ssh" />

        <variable name="root"     value="/export1/project/danzontmp1/bugzilla/CROSS_COMPILE_TAO_IDL" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/cs/group/bugzilla/.www-docs/auto_compile_logs/danzon_CROSS_COMPILE_TAO_IDL" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_ONLY_LATEST_AND_GREATEST\n#include \x22ace/config-sunos5.8.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='debug=0\nstatic_libs_only=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_sunos5_g++.GNU\n'" />

    <command name="print_os_version" />
    <command name="check_compiler"    options="gcc" />
    <command name="print_ace_config" />

    <command name="make"              options="-C TAO reverseclean" />
    <command name="make"              options="-C apps/gperf/src realclean" />
    <command name="make"              options="-C ace realclean" />

    <command name="make"              options="-k -C ace" />
    <command name="make"              options="-k -C apps/gperf/src" />
    <command name="make"              options="-k -C TAO/TAO_IDL" />
    <command name="make"              options="-k -C TAO/tao libTAO.a" />
    <command name="make"              options="-k -C TAO/tao/IORInterceptor" />
    <command name="make"              options="-k -C TAO/tao/Valuetype" />
    <command name="make"              options="-k -C TAO/tao/ObjRefTemplate" />
    <command name="make"              options="-k -C TAO/tao/PortableServer" />
    <command name="make"              options="-k -C TAO/orbsvcs/PSS" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
