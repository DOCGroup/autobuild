<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT" value="/project/maedhros/bugzilla/Core/ACE_wrappers" />
        <environment name="CVSROOT"  value=":ext:ucibuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"  value="/usr/bin/ssh" />

        <variable name="root"     value="/project/maedhros/bugzilla/Core" />
        <variable name="name"     value="Core" />
        <variable name="sam_root" value="/project/maedhros/bugzilla/Core/ACE_wrappers/samwise" />
        <variable name="log_file" value="maedhros_Core.txt" />
        <variable name="log_root" value="/home/bugzilla/.www-docs/auto_compile_logs/maedhros_Core" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />
<!--    <command name="sam" options="clean" /> -->
    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />
<!--    <command name="cvs"               options="-d :ext:ucibuilds@cvs.doc.wustl.edu:/project/SAM -z 3 -q checkout -P -d ACE_wrappers/samwise samwise" /> -->

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\ndebug=0\ninline=0\nstatic_libs_only=1\n'" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />

<!--    <command name="sam"               options="create" /> -->
<!--    <command name="sam"               options="sam" /> -->

    <command name="make"              options="-k reverseclean" />
    <command name="make"              options="-k -C TAO reverseclean" />
    <command name="make"              options="-j 2 -C ace" />
    <command name="make"              options="-j 2 -C apps/gperf/src" />
    <command name="make"              options="-j 2 -C TAO/tao" />
    <command name="make"              options="-j 2 -C TAO/TAO_IDL" />
    <command name="make"              options="-j 2 -C TAO/orbsvcs/orbsvcs" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="move prettify clean index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
