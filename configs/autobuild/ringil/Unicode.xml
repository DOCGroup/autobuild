<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"         value="C:\builds\unicode\ACE_wrappers" />
        <environment name="WINMAKE_COMPILER" value="msvc6" />
        <environment name="WINMAKE_CONFIGS"  value="Win32 Debug" />

        <variable name="root"     value="C:/builds/unicode/" />
	<variable name="log_file" value="log.txt" />
        <variable name="log_root" value="C:/Inetpub/wwwroot/bugzilla/unicode" />
        <variable name="name"     value="Win2000 Unicode" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="ON" /> 

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define UNICODE\n#define _UNICODE\n#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n// Required for examples from NPV1\n#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n#include \x22ace/config-win32.h\x22\n'" />

    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />

    <command name="print_ace_config" /> 

    <command name="win32make"         options="-recurse -clean" />
    <command name="win32make"         options="-recurse -auto_compile" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>






