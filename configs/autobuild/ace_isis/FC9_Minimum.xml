<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/build/isisbuilds/Minimum/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/build/isisbuilds/Minimum/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"       value="/build/isisbuilds/Minimum/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"       value="/build/isisbuilds/Minimum/ACE_wrappers/TAO/CIAO/DAnCE"/>
        <environment name="LD_LIBRARY_PATH" value="/build/isisbuilds/Minimum/ACE_wrappers/lib" />

        <variable name="root"     value="/build/isisbuilds/Minimum" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/web/users/isisbuilds/auto_compile_logs/ace_Minimum" />
        <variable name="configs"  value="Linux MINIMUM Exceptions DISABLE_TRANSPORT_CURRENT" />

    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32001" />

    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define TAO_HAS_TRANSPORT_CURRENT 0\n#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\ndebug=0\nminimum_corba=1\nec_typed_events=0\nxerces2=1\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='debug=0\nminimum_corba=1\nec_typed_events=0\ntransport_current=0\nxerces2=1\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="generate_workspace" options="-exclude TAO/TAO_*.mwc,TAO/CIAO -type gnuautobuild" />

    <command name="make"              options="-j 2 -k" />

    <command name="auto_run_tests"    options="-a -o -t" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
</autobuild>
