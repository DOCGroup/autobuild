<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT" value="/build/isisbuilds/Static_Core/ACE_wrappers" />
        <environment name="TAO_ROOT" value="/build/isisbuilds/Static_Core/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT" value="/build/isisbuilds/Static_Core/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT" value="/build/isisbuilds/Static_Core/ACE_wrappers/TAO/DAnCE"/>
        <environment name="ZLIB_ROOT"       value="/usr/" />
        <environment name="ZZIP_ROOT"       value="/build/isisbuilds/utils" />
        <environment name="LD_LIBRARY_PATH" value="/build/isisbuilds/utils/lib" />

        <variable name="root"     value="/build/isisbuilds/Static_Core" />
        <variable name="name"     value="Core" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/build/isisbuilds/Static_Core" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32001" />
    <command name="log"               options="on" />


    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\ndebug=0\ninline=0\nstatic_libs_only=1\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='debug=0\nzlib=1\nzzip=1\nxerces2=1\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_perl_version" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="generate_workspace" options="-type gnuautobuild" />

    <command name="make"              options="-j 2 -k -C ace" />
    <command name="make"              options="-j 2 -k -C apps/gperf/src" />
    <command name="make"              options="-j 2 -k -C apps/JAWS/server" />
    <command name="make"              options="-j 2 -k -C ACEXML" />
    <command name="make"              options="-j 2 -k -C tests" />
    <command name="make"              options="-j 2 -k -C protocols" />
    <command name="make"              options="-j 2 -k -C contrib" />
    <command name="make"              options="-j 2 -k -C TAO/TAO_IDL" />
    <command name="make"              options="-j 2 -k -C TAO/tao" />

    <command name="make"              options="-j 2 -k -C Kokyu" />
    <command name="make"              options="-j 2 -k -C TAO/orbsvcs/orbsvcs" />
    <command name="make"              options="-j 2 -k -C TAO/DAnCE" />
    <command name="make"              options="-j 2 -k -C TAO/CIAO" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="move prettify clean=2 index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /.svn/ --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ bczar@anduril.dre.vanderbilt.edu:/export/webusers/isisbuilds/auto_compile_logs/Static_Core" />
</autobuild>
