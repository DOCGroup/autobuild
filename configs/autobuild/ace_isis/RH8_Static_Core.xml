<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT" value="/build/isisbuilds/Static_Core/ACE_wrappers" />
        <environment name="TAO_ROOT" value="/build/isisbuilds/Static_Core/ACE_wrappers/TAO"/>
        <environment name="CVSROOT"  value=":ext:isisbuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"  value="/usr/bin/ssh" />

        <variable name="root"     value="/build/isisbuilds/Static_Core" />
        <variable name="name"     value="Core" />
        <variable name="sam_root" value="/build/isisbuilds/Static_Core/ACE_wrappers/samwise" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/web/users/isisbuilds/auto_compile_logs/Static_Core" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />
    <!-- Delete all the Makefiles so the cvs checkout won't complain. -->
    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\ndebug=0\ninline=0\nstatic_libs_only=1\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />

    <!-- Uses ACE.mwc -->
    <command name="generate_workspace" options="-exclude TAO -hierarchy -make_coexistence" />
    <!-- Uses TAO/TAO.mwc -->
    <command name="generate_workspace" options="dirs=TAO -exclude TAOACE.mwc,CIAO -hierarchy -make_coexistence" />

    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -C TAO realclean" />
    <command name="make"              options="-j 2 -k -C ace" />
    <command name="make"              options="-j 2 -k -C apps/gperf/src" />
    <command name="make"              options="-j 2 -k -C TAO/tao" />
    <command name="make"              options="-j 2 -k -C TAO/TAO_IDL" />
    <command name="make"              options="-j 2 -k -C TAO/orbsvcs/orbsvcs idl_stubs" />
    <command name="make"              options="-j 2 -k -C Kokyu" />
    <command name="make"              options="-j 2 -k -C TAO/orbsvcs/orbsvcs" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="move prettify clean index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
