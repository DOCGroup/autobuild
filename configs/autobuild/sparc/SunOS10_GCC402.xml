<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/project/builds/bczar/GCC402/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/project/builds/bczar/GCC402/ACE_wrappers/TAO" />
        <environment name="CIAO_ROOT"        value="/project/builds/bczar/GCC402/ACE_wrappers/TAO/CIAO" />
        <environment name="DANCE_ROOT"        value="/project/builds/bczar/GCC402/ACE_wrappers/TAO/CIAO/DAnCE" />
        <environment name="LD_LIBRARY_PATH" value="/project/builds/bczar/GCC402/ACE_wrappers/lib:/opt/csw/gcc3/lib:/usr/local/lib:/usr/sfw/lib" />
        <environment name="PATH"            value="/usr/local/bin:/usr/sfw/bin:/build/builds/bczar/utils/xerces/lib" type="prefix" />
        <environment name="XERCESCROOT"     value="/build/builds/bczar/utils/xerces" />
        <environment name="ZLIB_ROOT"       value="/usr/" />
        <environment name="ZZIP_ROOT"       value="/usr/local/" />

        <variable name="root"     value="/project/builds/bczar/GCC402/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/web/users/isisbuilds/auto_compile_logs/sparc_Solaris10_GCC" />
        <variable name="configs"  value="SSL Exceptions ZLIB" />
        <variable name="make_program" value="gmake" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32002" />
    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#undef TAO_IDL_PREPROCESSOR \n#define TAO_IDL_PREPROCESSOR \x22cc\x22\n#define ACE_ONLY_LATEST_AND_GREATEST\n#define ACE_USES_STD_NAMESPACE_FOR_STDCPP_LIB 1\n#define ACE_HAS_REACTOR_NOTIFICATION_QUEUE 1\n#include \x22ace/config-sunos5.10.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='LDFLAGS+=-L/usr/local/lib\nno_hidden_visibility=1\ninline=0\ndebug=1\npipes=0\nssl=1\nPLATFORM_SSL_CPPFLAGS+= -I/usr/sfw/include\nPLATFORM_SSL_LDFLAGS=-L/usr/sfw/lib\ninclude $(ACE_ROOT)/include/makeinclude/platform_sunos5_g++.GNU\nxerces2=1\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ipv6=1\nssl=1\nzlib=1\nzzip=1\nxerces2=1\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler"    options="g++" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="generate_workspace" options="-exclude TAO/TAO_*.mwc,TAO/CIAO/CIAO_*.mwc -type gnuace" />

    <command name="make"              options="-k -j 3" />

    <command name="auto_run_tests"    options=" -a -o -t -C" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=5 move prettify index" />
    <command name="status"            options="off" />
</autobuild>
