<!-- $Id$ -->

<autobuild>
    <configuration>
        <environment name="ACE_ROOT"          value="/build/builds/bczar/CIDLC/ACE_wrappers" />
        <environment name="TAO_ROOT"          value="/build/builds/bczar/CIDLC/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"         value="/build/builds/bczar/CIDLC/ACE_wrappers/TAO/CIAO"/>
        <environment name="LD_LIBRARY_PATH"   value="/build/builds/bczar/CIDLC/ACE_wrappers/ace:/build/builds/bczar/CIDLC/ACE_wrappers/lib" />
        <environment name="BOOST_ROOT"        value="/usr/local" />
        <environment name="BOOST_VERSION"     value="boost-1_33" />
        <environment name="BOOST_CFG"     value="-gcc" />
        <environment name="UTILITY_ROOT"      value="/usr/local/include/Utility" />
        <environment name="PATH"              value="/usr/local/bin:/usr/sfw/bin" type="prefix" />

        <variable name="root"         value="/build/builds/bczar/CIDLC/" />
        <variable name="log_file"     value="build.txt" />
        <variable name="log_root"     value="/web/users/isisbuilds/auto_compile_logs/sparc_CIDLC" />
        <variable name="configs"      value="SSL Exceptions" />
        <variable name="make_program" value="gmake" />
    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32001" />

    <command name="log"               options="on" />

    <!-- Delete all the Makefiles so the cvs checkout won't complain. -->
    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/ACE/sets-anon/ACE+TAO+CIAO ." />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-sunos5.10.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='debug=0\nexceptions=1\ncidl=1\nboost=1\nstatic_link=1\n# Perform some stricter C/C++ checking\n\ninclude $(ACE_ROOT)/include/makeinclude/platform_sunos5_g++.GNU\n\n'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='exceptions=1\ncidl=1\nboost=1\n'" />
    <command name="print_os_version" />
    <command name="check_compiler"    options="gcc" />
    <command name="print_ace_config" />

    <!-- This builds everthing exclude TAO directory-->
    <command name="generate_workspace" options="dirs=TAO/CIAO/CIDLC CIDLC.mwc -static" />

    <command name="make"               options="-k realclean -C TAO/CIAO/CIDLC" />
    <command name="make"               options="-k -j 4 -C TAO/CIAO/CIDLC" />

    <command name="log"                options="off" />
    <command name="process_logs"       options="clean=5 move prettify index" />
    <command name="status"             options="off" />

    <command name="shell"              options="bzip2 -k -f ACE_wrappers/TAO/CIAO/CIDLC/cidlc" />
    <command name="shell"              options="/bin/mv ACE_wrappers/TAO/CIAO/CIDLC/cidlc.bz2 /web/users/isisbuilds/CIDLC/Solaris/SPARC" />
    <command name="shell"              options="/bin/mv ACE_wrappers/TAO/CIAO/CIDLC/cidlc /web/users/isisbuilds/CIDLC/Solaris/SPARC" />
</autobuild>

