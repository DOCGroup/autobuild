<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/project/maglor/bugzilla/Static/ACE_wrappers" />
        <environment name="LD_LIBRARY_PATH" value="/project/maglor/bugzilla/Static/ACE_wrappers/ace:." />
        <environment name="CVSROOT"         value=":ext:ucibuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="/usr/bin/ssh" />

        <variable name="root"     value="/project/maglor/bugzilla/Static" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/bugzilla/.www-docs/auto_compile_logs/maglor_Static" />
        <variable name="configs"  value="Linux STATIC SSL" />
        <variable name="MAIL_ADMIN"  value="bugzilla@cs.wustl.edu" /> 

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='static_libs_only=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n\noptimize=1\ndebug=0\nexceptions=0\n#ssl=1\nCPPFLAGS += -DACE_USE_RCSID=0\n\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />

    <command name="make"              options="reverseclean" />
    <command name="make"              options="-C TAO reverseclean" />
    <command name="make"              options="-j 2 -k" />
    <command name="make"              options="-j 2 -k -C TAO" />

    <command name="auto_run_tests"    options="" />

    <!-- Forces a sync to clean state -->
    <command name="shell"             options="/bin/sync" /> 
    <command name="shell"             options="sleep 10" /> 
    <command name="shell"             options="/bin/sync" /> 
    <command name="shell"              options="/project/maglor/bugzilla/Static/ACE_wrappers/bin/footprint_stats.sh /project/maglor/bugzilla/Static/ACE_wrappers /project/doctmp/Stats" />
    <command name="shell"              options="/project/maglor/bugzilla/Static/ACE_wrappers/bin/performance_stats.sh /project/maglor/bugzilla/Static/ACE_wrappers /project/doctmp/Stats" />
    <command name="shell"              options="/project/maglor/bugzilla/Static/ACE_wrappers/bin/topinfo_stats.sh /project/maglor/bugzilla/Static/ACE_wrappers /project/doctmp/Stats bugzilla" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
