<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/jtc/ACE/acebuilds/netbsd_amd64_noinline/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/home/jtc/ACE/acebuilds/netbsd_amd64_noinline/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/home/jtc/ACE/acebuilds/netbsd_amd64_noinline/ACE_wrappers/lib" />
        <environment name="CVSROOT"         value=":ext:jtc@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />
        <environment name="MPC_ROOT"        value="/home/jtc/ACE/acebuilds/netbsd_amd64_noinline/ACE_wrappers/MPC" />

	<variable name="make_program" value = "gmake" />
        <variable name="root"     value="/home/jtc/ACE/acebuilds/netbsd_amd64_noinline/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/jtc/ACE/acebuilds/netbsd_amd64_noinline/" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />
    <!-- Delete all the Makefiles so the cvs checkout won't complain. -->
    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-netbsd.h\x22\n'"/> 
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='ssl=1\ninline=0\ninclude $(ACE_ROOT)/include/makeinclude/platform_netbsd.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=1\n'" /> 

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <!-- Uses ACE.mwc -->
    <command name="generate_workspace" options="-exclude TAO" />
    <!-- Uses TAO/TAO.mwc -->
    <command name="generate_workspace" options="dirs=TAO -exclude TAOACE.mwc,CIAO" />

    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -C TAO realclean" />

    <command name="make"              options="-j 4 -k" />
    <command name="make"              options="-j 4 -k -C TAO/TAO_IDL" />
    <command name="make"              options="-j 4 -k -C TAO idl_stubs" />
    <command name="make"              options="-j 4 -k -C TAO" />

    <command name="auto_run_tests" options=" -a -o -t -C" /> 

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync -avz --delete *.txt *.html jtc@orac.acorntoolworks.com:public_html/auto_compile_logs/netbsd_amd64_noinline/" />
</autobuild>
