<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/jtc/ACE/acebuilds/netbsd_amd64_automake/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/home/jtc/ACE/acebuilds/netbsd_amd64_automake/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/home/jtc/ACE/acebuilds/netbsd_amd64_automake/ACE_wrappers/lib"/>
        <environment name="MPC_ROOT"        value="/home/jtc/ACE/acebuilds/netbsd_amd64_automake/ACE_wrappers/MPC"/>

        <variable name="make_program" value = "gmake" />
        <variable name="root"     value="/home/jtc/ACE/acebuilds/netbsd_amd64_automake" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/jtc/ACE/acebuilds/netbsd_amd64_automake" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />
    
    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO ." />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />
    <command name="print_autotools_version" />

    <command name="shell"	      options="pwd" />
    <command name="shell"	      options="(cd ACE_wrappers; autoreconf --install --force -I m4)" />
    <command name="shell"	      options="rm -rf ACE_wrappers/build" />
    <command name="shell"	      options="mkdir ACE_wrappers/build" />
    <command name="shell"	      options="(cd ACE_wrappers/build; ../configure)" />

    <command name="make"	      options="dir=build" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --dirs --verbose --delete --include '*.txt' --include '*.html' --exclude '*' ./ jtc@orac.acorntoolworks.com:public_html/auto_compile_logs/netbsd_amd64_automake/" />
</autobuild>
