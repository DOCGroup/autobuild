<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/jtc/ACE/acebuilds/netbsd_i386_static/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/home/jtc/ACE/acebuilds/netbsd_i386_static/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/home/jtc/ACE/acebuilds/netbsd_i386_static/ACE_wrappers/lib" />
        <environment name="MPC_ROOT"        value="/home/jtc/ACE/acebuilds/netbsd_i386_static/ACE_wrappers/MPC" />

	<variable name="make_program" value = "gmake" />
        <variable name="root"     value="/home/jtc/ACE/acebuilds/netbsd_i386_static/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/jtc/ACE/acebuilds/netbsd_i386_static/" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-netbsd.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='ssl=1\nstatic=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_netbsd.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=1\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <!-- Uses ACE.mwc -->
    <command name="generate_workspace" options="-exclude TAO -type gnuace" />
    <!-- Uses TAO/TAO.mwc -->
    <command name="generate_workspace" options="dirs=TAO -exclude TAO_*.mwc,CIAO -type gnuace" />

    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -C TAO realclean" />

    <command name="make"              options="-k" />
    <command name="make"              options="-k -C TAO/TAO_IDL" />
    <command name="make"              options="-k -C TAO idl_stubs" />
    <command name="make"              options="-k -C TAO" />

    <command name="auto_run_tests" options=" -a -o -t" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --dirs --verbose --delete --include '*.txt' --include '*.html' --exclude '*' ./ jtc@orac.acorntoolworks.com:public_html/auto_compile_logs/netbsd_i386_static/" />
</autobuild>
