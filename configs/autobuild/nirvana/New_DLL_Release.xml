<autobuild>
    <configuration>
        <environment name="ACE_ROOT"         value="G:\bugzilla\New_DLL_Release\ACE_wrappers" />
        <environment name="TAO_ROOT"         value="G:\bugzilla\New_DLL_Release\ACE_wrappers\TAO"/>
        <environment name="SSL_ROOT"         value="D:\ssl\openssl-0.9.6" />
	<environment name="PATH"             value="G:\bugzilla\New_DLL_Release\ACE_wrappers\bin;G:\bugzilla\New_DLL_Release\ACE_wrappers\lib;D:\ssl\openssl-0.9.6\out32dll" type="prefix" />

        <variable name="root"     value="G:/bugzilla/New_DLL_Release/" />
	<variable name="log_file" value="log.txt" />
        <variable name="log_root" value="Z:/Another_dll_release" />
        <variable name="name"     value="WinXP DLL Release" />
        <variable name="configs"  value="SANDBOX Win32 SSL Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="win32make"         options="msvc_auto_compile -DLL -Release -u -k -clean" />

    <command name="log"               options="ON" />

    <command name="cvs"               options="-q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_DISABLES_THREAD_LIBRARY_CALLS 1\n#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n#define TAO_HAS_SMART_PROXIES 1\n#define TAO_HAS_AMI 1\n#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n#define TAO_HAS_INTERFACE_REPOSITORY 1\n#define TAO_HAS_RT_CORBA 1\n#include \x22ace/config-win32.h\x22\n'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='rwho=0\nqos=1\nssl=1\n\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="msvc" />
    <command name="print_ace_config" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-recurse -type vc6" /> 

    <command name="win32make"         options="msvc_mpc_auto_compile -ALL -Release -k" />

    <command name="auto_run_tests"    options="-a -s \x22g:\bugzilla\sandbox\Release\sandbox.exe -t 1200000\x22 -ExeSubDir Release" />
    <command name="auto_run_tests"    options="-o -s \x22g:\bugzilla\sandbox\Release\sandbox.exe -t 300000\x22 -ExeSubDir Release" />
    <command name="auto_run_tests"    options="-t -s \x22g:\bugzilla\sandbox\Release\sandbox.exe -t 300000\x22 -ExeSubDir Release" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
