<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"         value="G:\bugzilla\XML_Debug\ACE_wrappers" />
        <environment name="TAO_ROOT"         value="G:\bugzilla\XML_Debug\ACE_wrappers\TAO"/>
        <environment name="ACE_RUNTEST_SVCCONF_EXT"         value=".conf.xml" />
        <environment name="Path"         value="G:\bugzilla\XML_Debug\ACE_wrappers\bin;d:\ssl\openssl-0.9.6\out32dll" type="prefix" />

        <variable name="root"     value="G:/bugzilla/XML_Debug/" />
	<variable name="log_file" value="log.txt" />
        <variable name="log_root" value="Z:/XML_Debug" />

        <variable name="name"     value="WinXP XML Debug" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="win32make"         options="msvc_auto_compile -DLL -Debug -u -k -clean" />

    <command name="log"               options="ON" />

    <command name="cvs"               options="-q checkout -P ACE_wrappers" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_HAS_XML_SVC_CONF\n#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n#define TAO_HAS_SMART_PROXIES 1\n#define TAO_HAS_AMI 1\n#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n#define TAO_HAS_INTERFACE_REPOSITORY 1\n#define TAO_HAS_RT_CORBA 1\n#include \x22ace/config-win32.h\x22\n'" />

    <command name="print_ace_config" />

    <command name="win32make"         options="msvc_auto_compile -DLL -Debug -ACE -u -k" />
    <command name="win32make"         options="msvc_auto_compile -DLL -Debug -CORE -u -k" />
    <command name="win32make"         options="msvc_auto_compile -DLL -Debug -TAO -u -k" />

    <command name="auto_run_tests"    options="-a -s \x22G:\bugzilla\sandbox\Release\sandbox.exe -t 1200000\x22 -Config SANDBOX" />
    <command name="auto_run_tests"    options="-o -s \x22G:\bugzilla\sandbox\Release\sandbox.exe -t 300000\x22 -Config SANDBOX -Config SSL" />
    <command name="auto_run_tests"    options="-t -s \x22G:\bugzilla\sandbox\Release\sandbox.exe -t 300000\x22 -Config SANDBOX -Config SSL" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
