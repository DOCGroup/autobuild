<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"           value="/build/isisbuilds/arm/host/ACE_wrappers" />
        <environment name="TAO_ROOT"           value="/build/isisbuilds/arm/host/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"          value="/build/isisbuilds/arm/host/ACE_wrappers/TAO/CIAO"/>
        <environment name="LD_LIBRARY_PATH"    value="/build/isisbuilds/arm/host/ACE_wrappers/lib:/usr/lib/gcc/i686-pc-linux-gnu/3.4.1:/usr/local/lib:.:$LD_LIBRARY_PATH" />

        <variable name="root"     value="/build/isisbuilds/arm/host" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/web/users/isisbuilds/auto_compile_logs/lindy_arm_host" />
        <variable name="configs"  value="Linux STATIC SSL" />
    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32002" />
    <command name="log"               options="on" />
    <command name="anonymous_shell"   options="rm -rf ACE_wrappers" />
    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_USES_STD_NAMESPACE_FOR_STDCPP_LIB 1\n#define ACE_SHOULD_MALLOC_STATIC_OBJECT_LOCK 1\n#define ACE_HAS_REACTOR_NOTIFICATION_QUEUE 1\n#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='static_libs_only=1\nexceptions=1\noptimize=0\nboost=1\ninline=0\nssl=1\ndebug=0\ncidl=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\nCCFLAGS += -pedantic -Wno-long-long -Wwrite-strings -Wcast-align -Wformat=2\nCPPFLAGS += -DACE_USE_RCSID=0\n\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=0\ncidl=0\nzlib=0\nzzip=0\nboost=0\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="g++" />
    <command name="print_ace_config" />
    <command name="print_cidlc_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options=" -type gnuautobuild ace" />
    <command name="generate_workspace" options=" -type gnuautobuild apps/gperf" />
    <command name="generate_workspace" options=" -type gnuautobuild TAO/TAO_IDL" />
    <command name="generate_workspace" options=" -type gnuautobuild TAO/CIAO/tools/IDL3_to_IDL2" />

    <command name="make"              options="-j 4 -k -C ace" />
    <command name="make"              options="-j 4 -k -C apps/gperf" />
    <command name="make"              options="-j 4 -k -C TAO/TAO_IDL" />
    <command name="make"              options="-j 4 -k -C TAO/CIAO/tools/IDL3_to_IDL2" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
</autobuild>
