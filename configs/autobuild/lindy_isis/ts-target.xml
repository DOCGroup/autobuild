<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"           value="/build/isisbuilds/arm/ts-target/ACE_wrappers" />
        <environment name="TAO_ROOT"           value="/build/isisbuilds/arm/ts-target/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"          value="/build/isisbuilds/arm/ts-target/ACE_wrappers/TAO/CIAO"/>
        <environment name="PATH"               value="/opt/crosstool/gcc-4.1.1-glibc-2.3.2/arm-unknown-linux-gnu/bin" type="prefix" />
        <environment name="LD_LIBRARY_PATH"    value="/build/isisbuilds/arm/ts-target/ACE_wrappers/lib:/usr/lib/gcc/i686-pc-linux-gnu/3.4.1:/usr/local/lib:.:$LD_LIBRARY_PATH" />
        <environment name="XERCESCROOT"        value="/build/isisbuilds/arm/utils" />
        <environment name="BOOST_ROOT"         value="/build/isisbuilds/arm/utils" />
        <environment name="BOOST_VERSION"      value="boost-1_34_1" />
        <environment name="BOOST_CFG"          value="-gcc41" />
        <environment name="ZLIB_ROOT"          value="/build/isisbuilds/arm/utils/" />
        <environment name="ZZIP_ROOT"          value="/build/isisbuilds/arm/utils/" />

        <variable name="root"     value="/build/isisbuilds/arm/ts-target" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/web/users/isisbuilds/auto_compile_logs/lindy_arm_ts-target" />
        <variable name="configs"  value="Linux STATIC SSL" />
    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32002" />
    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="make"              options="realclean" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='CROSS-COMPILE=1\ndebug=1\noptimize=0\nCC=arm-unknown-linux-gnu-gcc\nCXX=arm-unknown-linux-gnu-g++\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='cidl=1\nzlib=1\nzzip=1\nboost=1\nxerces=1\n'" />

    <command name="anonymous_shell"   options="/bin/cp /web/users/isisbuilds/CIDLC/gnu-linux/cidlc ACE_wrappers/TAO/CIAO/bin" />
    <command name="anonymous_shell"   options="/bin/cp /build/isisbuilds/arm/host/ACE_wrappers/apps/gperf/src/ace_gperf ACE_wrappers/bin" />
    <command name="anonymous_shell"   options="/bin/cp /build/isisbuilds/arm/host/ACE_wrappers/TAO/TAO_IDL/tao_idl ACE_wrappers/bin" />
    <command name="anonymous_shell"   options="/bin/cp /build/isisbuilds/arm/host/ACE_wrappers/TAO/CIAO/tools/IDL3_to_IDL2/tao_idl3_to_idl2 ACE_wrappers/bin" />
    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="g++" />
    <command name="print_ace_config" />
    <command name="print_cidlc_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-exclude TAO/TAO_*.mwc,TAO/CIAO/CIAO_*.mwc,examples,TAO/tests,TAO/performance-tests,TAO/interop-tests,TAO/examples,TAO/orbsvcs/tests,TAO/orbsvcs/examples -type gnuautobuild" />

    <command name="make"              options="-j 4 -k" />
    <command name="anonymous_shell"   options="/usr/bin/rsync -rve /usr/bin/ssh --exclude='*.svn*' --exclude '*.o' --exclude '*.cpp' --exclude '*.h' --exclude '*.depend*' --exclude 'GNUmakefile*' --exclude '*.inl' -l ACE_wrappers 192.168.1.6:/data/isisbuilds" />
    <command name="anonymous_shell"   options="/usr/bin/ssh 192.168.1.6 'touch /data/isisbuilds/.enable'" />
    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
</autobuild>
