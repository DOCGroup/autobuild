<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/project/builds/isisbuilds/FP_Metrics/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/project/builds/isisbuilds/FP_Metrics/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/project/builds/isisbuilds/FP_Metrics/ACE_wrappers/lib" />
        <environment name="CVSROOT"         value=":ext:isisbuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />

        <variable name="root"     value="/project/builds/isisbuilds/FP_Metrics" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/web/users/isisbuilds/auto_compile_logs/FP_Metrics" />
        <variable name="configs"  value="Linux Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="cvs"               options="-z 9 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='static_libs_only=1\nLDFLAGS+=-Xlinker -M -Xlinker -Map -Xlinker \$@.map\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\noptimize=1\ndebug=0\nexceptions=1\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />

    <command name="generate_workspace" options="-exclude TAO/CIAO -hierarchy -make_coexistence" />

    <!-- ACE: only build the minimum, ace, ACEXML, and gperf -->
    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -C ace        --dry-run > $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C ACEXML     --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C apps/gperf --dry-run >> $ACE_ROOT/../.metrics/targets" />

    <command name="make"              options="-k -j4 -C ace" />
    <command name="make"              options="-k -j4 -C ACEXML" />
    <command name="make"              options="-k -j4 -C apps/gperf" />


    <!-- TAO: only build the minimum, tao -->
    <command name="make"              options="-k -C TAO realclean" />
    <!-- Build the TAO_IDL compiler first and gen the idl_stubs, so that --dry-run will create a list of all targets. -->
    <command name="make"              options="-k -C TAO/TAO_IDL" />
    <command name="make"              options="-k -C TAO/tests idl_stubs" />

    <command name="make"              options="-k -C TAO/tao                --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C TAO/tests/ORB_init     --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C TAO/tests/ORB_destroy  --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C TAO/tests/Hello        --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C TAO/tests/Muxing       --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C TAO/orbsvcs/orbsvcs    --dry-run >> $ACE_ROOT/../.metrics/targets" />

    <command name="make"              options="-k -j4 -C TAO/tao" />
    <command name="make"              options="-k -j4 -C TAO/tests/ORB_init" />
    <command name="make"              options="-k -j4 -C TAO/tests/ORB_destroy" />
    <command name="make"              options="-k -j4 -C TAO/tests/Hello" />
    <command name="make"              options="-k -j4 -C TAO/tests/Muxing" />
    <command name="make"              options="-k -j4 -C TAO/orbsvcs/orbsvcs" />

    <command name="log"               options="off" />

    <command name="shell"             options="$ACE_ROOT/bin/generate_compile_stats.sh $ACE_ROOT/../build.txt /web/users/isisbuilds/auto_compile_logs/FP_Metrics/metrics $ACE_ROOT/../.metrics/targets Footprint" />

    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
