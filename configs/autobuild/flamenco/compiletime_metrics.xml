<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/project/builds/isisbuilds/CP_Metrics/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/project/builds/isisbuilds/CP_Metrics/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"       value="/project/builds/isisbuilds/CP_Metrics/ACE_wrappers/TAO/CIAO"/>
        <environment name="LD_LIBRARY_PATH" value="/project/builds/isisbuilds/CP_Metrics/ACE_wrappers/lib" />
        <environment name="CVSROOT"         value=":ext:isisbuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />
        <environment name="PATH"            value="/usr/local/bin" type="prefix" />

        <variable name="root"     value="/project/builds/isisbuilds/CP_Metrics" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/web/users/isisbuilds/auto_compile_logs/CP_Metrics" />
        <variable name="configs"  value="Linux Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="cvs"               options="-z 9 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='use_dep_libs=0\ncidl=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\ndebug=0\noptimize=1\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='cidl=1\n'" />

    <command name="anonymous_shell"   options="scp -C bczar@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/CIDLC/gnu-linux/cidlc ACE_wrappers/TAO/CIAO/bin" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_cidlc_version" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-exclude TAO " />
    <command name="generate_workspace" options="dirs=TAO -exclude TAO_*.mwc,CIAO" />
    <command name="generate_workspace" options="dirs=TAO/CIAO" />

    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -C TAO realclean" />
    <command name="make"              options="-k -C TAO/CIAO realclean" />

    <command name="make"              options="-k --dry-run > $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k CXX=$ACE_ROOT/bin/g++_metric.sh" />
    <command name="make"              options="-k -C TAO/TAO_IDL" />
    <command name="make"              options="-k -C TAO idl_stubs" />
    <command name="make"              options="-k -C TAO --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C TAO/TAO_IDL realclean" />
    <command name="make"              options="-k -C TAO CXX=$ACE_ROOT/bin/g++_metric.sh" />
    <command name="make"              options="-k -C TAO/CIAO idl_stubs" />
    <command name="make"              options="-k -C TAO/CIAO --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C TAO/CIAO CXX=$ACE_ROOT/bin/g++_metric.sh" />

    <command name="log"               options="off" />

    <command name="shell"             options="$ACE_ROOT/bin/generate_compile_stats.sh $ACE_ROOT/../build.txt /web/users/isisbuilds/auto_compile_logs/CP_Metrics/metrics $ACE_ROOT/../.metrics/targets Compilation" />

    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
