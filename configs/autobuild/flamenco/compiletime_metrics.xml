<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/project/builds/isisbuilds/CP_Metrics/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/project/builds/isisbuilds/CP_Metrics/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/project/builds/isisbuilds/CP_Metrics/ACE_wrappers/ace" />
        <environment name="CVSROOT"         value=":ext:isisbuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />

        <variable name="root"     value="/project/builds/isisbuilds/CP_Metrics" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/web/users/isisbuilds/auto_compile_logs/CP_Metrics" />
        <variable name="configs"  value="Linux Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\ndebug=0\noptimize=1\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />

    <command name="generate_workspace" options="-hierarchy -make_coexistence" />

    <command name="make"              options="-k reverseclean" />
    <command name="make"              options="-k -C TAO reverseclean" />
    <command name="make"              options="-k --dry-run > $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k CXX=$ACE_ROOT/bin/g++_metric.sh" />
    <command name="make"              options="-k -C TAO/TAO_IDL" />
    <command name="make"              options="-k -C TAO idl_stubs" />
    <command name="make"              options="-k -C TAO/TAO_IDL realclean" />

    <command name="make"              options="-k -C TAO --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C TAO CXX=$ACE_ROOT/bin/g++_metric.sh" />

    <command name="log"               options="off" />

    <command name="shell"             options="$ACE_ROOT/bin/generate_compile_stats.sh $ACE_ROOT/../build.txt /web/users/isisbuilds/auto_compile_logs/CP_Metrics/metrics $ACE_ROOT/../.metrics/targets Compilation" />

    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
