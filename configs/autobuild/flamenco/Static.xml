<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/project/builds/isisbuilds/Static/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/project/builds/isisbuilds/Static/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/project/builds/isisbuilds/Static/ACE_wrappers/lib:." />
        <environment name="PATH"            value="/usr/local/bin" type="prefix" />

        <variable name="root"     value="/project/builds/isisbuilds/Static" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/web/users/isisbuilds/auto_compile_logs/flamenco_Static" />
        <variable name="configs"  value="Linux STATIC SSL Exceptions" />
    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32001" />

    <command name="log"               options="on" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define TAO_HAS_SENDFILE 0\n#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='use_dep_libs=0\nstatic_libs_only=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n\noptimize=1\ndebug=0\n#ssl=1\nCPPFLAGS += -DACE_USE_RCSID=0\n\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="g++" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <!-- ACE -->
    <command name="generate_workspace" options="-exclude TAO -type gnuace" />
    <!-- TAO -->
    <command name="generate_workspace" options="dirs=TAO -exclude CIAO,*.mwc -type gnuace" />

    <command name="make"              options="realclean" />
    <command name="make"              options="-C TAO realclean" />
    <command name="make"              options="-j 4 -k" />
    <command name="make"              options="-j 4 -k -C TAO" />

    <!-- Forces a sync to clean state -->
    <command name="shell"             options="/bin/sync" />
    <command name="shell"             options="sleep 10" />
    <command name="shell"             options="/bin/sync" />
    <command name="shell"              options="/project/builds/isisbuilds/Static/ACE_wrappers/bin/footprint_stats.sh /project/builds/isisbuilds/Static/ACE_wrappers /web/users/isisbuilds/Stats" />
    <command name="shell"              options="/project/builds/isisbuilds/Static/ACE_wrappers/bin/performance_stats.sh /project/builds/isisbuilds/Static/ACE_wrappers /web/users/isisbuilds/Stats" />
    <command name="shell"              options="/project/builds/isisbuilds/Static/ACE_wrappers/bin/topinfo_simple_stats.sh /project/builds/isisbuilds/Static/ACE_wrappers /web/users/isisbuilds/Stats isisbuil" />
    <command name="shell"              options="/project/builds/isisbuilds/Static/ACE_wrappers/bin/topinfo_iorsize_stats.sh /project/builds/isisbuilds/Static/ACE_wrappers /web/users/isisbuilds/Stats isisbuil 1" />
    <command name="shell"              options="/project/builds/isisbuilds/Static/ACE_wrappers/bin/topinfo_iorsize_stats.sh /project/builds/isisbuilds/Static/ACE_wrappers /web/users/isisbuilds/Stats isisbuil 0" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
</autobuild>
