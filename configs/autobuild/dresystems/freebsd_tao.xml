<autobuild>
 <configuration>

  <environment name="ACE_ROOT"         value="/home/dhinton/development/ace/autobuilds/freebsd_tao/ACE_wrappers" />
  <environment name="TAO_ROOT"         value="/home/dhinton/development/ace/autobuilds/freebsd_tao/ACE_wrappers/TAO"/>
  <environment name="LD_LIBRARY_PATH"  value="/usr/local/lib:/export/home/dhinton/development/ace/autobuilds/freedsb_tao/ACE_wrappers/ace" />
  <environment name="CVSROOT"          value=":ext:dhinton@cvs.doc.wustl.edu:/project/cvs-repository" />
  <environment name="CVS_RSH"          value="ssh" />

  <variable name="root"                value="/home/dhinton/development/ace/autobuilds/freebsd_tao" />
  <variable name="log_file"            value="build.txt" />
  <variable name="log_root"            value="/home/dhinton/public_html/autobuild_output/freebsd_tao" />
  <variable name="make_program"        value="gmake" />

 </configuration>

 <command name="status"                options="on" />
 <command name="file_manipulation"     options="type=mustnotexist file=.disable" />
 <command name="file_manipulation"     options="type=create file=.disable output='RUNNING'" />
 <command name="log"                   options="on" />

 <command name="cvs"                   options="-z9 -q checkout ACE_wrappers" />

 <command name="file_manipulation"     options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-freebsd.h\x22\n#define TAO_HAS_SHMIOP 0\n'" />

 <command name="file_manipulation"     options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_freebsd.GNU\ndebug=0\nexceptions=1\noptimize=0\nrmcast=1\n'" />

 <command name="print_os_version" />
 <command name="check_compiler"        options="gcc" />
 <command name="print_ace_config" />

 <!-- ACE -->
 <command name="make"                  options="-k reverseclean" />
 <command name="make"                  options="-k" />

 <!-- TAO -->
 <command name="make"                  options="-k -C TAO reverseclean" />
 <command name="make"                  options="-k -C TAO/TAO_IDL" />
 <command name="make"                  options="-k -C TAO idl_stubs" />
 <command name="make"                  options="-k -C TAO" />

 <command name="auto_run_tests"        options=""/>

 <command name="log"                   options="off" />
 <command name="process_logs"          options="clean move prettify index" />
 <command name="file_manipulation"     options="type=delete file=.disable" />
 <command name="status"                options="off" />
</autobuild>

