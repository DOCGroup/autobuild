<autobuild>
 <configuration>

  <environment name="ACE_ROOT"         value="/export/home/dhinton/development/ace/autobuilds/sol9_spro54_tao/ACE_wrappers" />
  <environment name="TAO_ROOT"         value="/export/home/dhinton/development/ace/autobuilds/sol9_spro54_tao/ACE_wrappers/TAO"/>
  <environment name="LD_LIBRARY_PATH"  value="/usr/local/lib:/export/home/dhinton/development/ace/autobuilds/sol9_spro54_tao/ACE_wrappers/ace" />
  <environment name="CVSROOT"          value=":ext:dhinton@cvs.doc.wustl.edu:/project/cvs-repository" />
  <environment name="CVS_RSH"          value="ssh" />

  <variable name="root"                value="/export/home/dhinton/development/ace/autobuilds/sol9_spro54_tao" />
  <variable name="log_file"            value="build.txt" />
  <variable name="log_root"            value="/export/home/dhinton/public_html/autobuild_output/sol9_spro54_tao" />
  <variable name="configs"             value="Linux Exceptions" />

 </configuration>

 <command name="status"                options="on" />
 <command name="file_manipulation"     options="type=mustnotexist file=.disable" />
 <command name="file_manipulation"     options="type=create file=.disable output='RUNNING'" />
 <command name="log"                   options="on" />

 <command name="cvs"                   options="-z9 -q checkout ACE_wrappers" />
 <command name="cvs"                   options="-z9 -q checkout -P ACE_MPC"/>

 <command name="file_manipulation"     options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-sunos5.9.h\x22\n'" />

 <command name="file_manipulation"     options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='TAO_IDLFLAGS += -GT \ndebug=0\nexceptions=1\noptimize=0\nrmcast=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_sunos5_sunc++.GNU\n'" />

 <command name="print_os_version" />
 <command name="check_compiler"        options="sun_cc" />
 <command name="print_ace_config" />

 <!-- ACE -->
 <command name="make"                  options="-k realclean" />
 <command name="make"                  options="-k" />

 <!-- TAO -->
 <command name="make"                  options="-k -C TAO realclean" />
 <command name="make"                  options="-k -C TAO/TAO_IDL" />
 <command name="make"                  options="-k -C TAO" />

 <command name="log"                   options="off" />
 <command name="process_logs"          options="clean move prettify index" />
 <command name="file_manipulation"     options="type=delete file=.disable" />
 <command name="status"                options="off" />
</autobuild>

