<autobuild>
 <configuration>

  <environment name="ACE_ROOT"         value="/home/dhinton/development/ace/autobuilds/no-rtcorba_no-messaging/ACE_wrappers" />
  <environment name="TAO_ROOT"         value="/home/dhinton/development/ace/autobuilds/no-rtcorba_no-messaging/ACE_wrappers/TAO"/>
  <environment name="LD_LIBRARY_PATH"  value="/usr/local/lib:/home/dhinton/development/ace/autobuilds/no-rtcorba_no-messaging/ACE_wrappers/lib" />
  <environment name="CVSROOT"          value=":ext:dhinton@cvs.doc.wustl.edu:/project/cvs-repository" />
  <environment name="CVS_RSH"          value="ssh" />

  <variable name="root"                value="/home/dhinton/development/ace/autobuilds/no-rtcorba_no-messaging" />
  <variable name="log_file"            value="build.txt" />
  <variable name="log_root"            value="/home/svn/www/autobuild_output/no-rtcorba_no-messaging" />
  <variable name="configs"             value="Linux Exceptions" />

 </configuration>

 <command name="status"                options="on" />
 <command name="file_manipulation"     options="type=mustnotexist file=.disable" />
 <command name="file_manipulation"     options="type=create file=.disable output='RUNNING'" />
 <command name="log"                   options="on" />

 <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

 <command name="cvs"                   options="-z9 -q checkout ACE_wrappers" />
 <command name="cvs"                   options="-z9 -q checkout -P ACE_MPC"/>

 <command name="file_manipulation"     options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n#define TAO_HAS_CORBA_MESSAGING 0\n#define TAO_HAS_RT_CORBA 0\n'" />

 <command name="file_manipulation"     options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\ndebug=0\nrmcast=1\n'" />


 <command name="print_os_version" />
 <command name="check_compiler"        options="gcc" />
 <command name="check_linker"          options="ld" />
 <command name="print_ace_config" />

 <!-- Uses ACE.mwc -->
 <command name="generate_workspace" options="-exclude TAO" />
 <!-- Uses TAO/TAO.mwc -->
 <command name="generate_workspace" options="dirs=TAO -exclude TAO_*.mwc,CIAO" />

 <!-- ACE -->
 <command name="make"                  options="-k realclean" />
 <command name="make"                  options="-k" />

 <!-- TAO -->
 <command name="make"                  options="-k -C TAO realclean" />
 <command name="make"                  options="-k -C TAO/TAO_IDL" />
 <command name="make"                  options="-k -C TAO" />

 <!--<command name="auto_run_tests"        options=" -a -o -t -C" />-->

 <command name="log"                   options="off" />
 <command name="process_logs"          options="clean move prettify index" />
 <command name="file_manipulation"     options="type=delete file=.disable" />
 <command name="status"                options="off" />
</autobuild>
