<autobuild>
    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make" options="-k realclean find=*akefile" />
    <command name="make" options="-k -C TAO realclean find=*akefile" />
    <command name="shell" options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />
    <!-- Uses ACE.mwc -->
    <command name="generate_workspace" options="-exclude TAO,build.mwc,prism -type gnuace" />
    <!-- Uses TAO/TAO.mwc -->
    <command name="generate_workspace" options="dirs=TAO -exclude TAO_*.mwc,TAO/CIAO/CIAO_*.mwc -type gnuace" />
    <command name="make"              options="-k" />
    <command name="make"              options="-k -C TAO" />

    <command name="auto_run_tests"    options=" -a -o -t" />
    <command name="log"               options="OFF" />
    <command name="process_logs"      options="clean=30 move prettify index" />
    <command name="status"            options="off" />
    <!-- <command shell "rsync -avzLe ssh --delete /home/tao/rhel4/doc_scoreboard/scoreboard/rhel4/ tao@tao:/home/tao/htdocs/doc-scoreboard/rhel4" /> -->
    <command shell "rsync -avzLe ssh --delete '<log_root>/' oftao@nwb-openfusion.microfocus.com:public_html/doc_group_scoreboard/<this_build>" />
    <command name="file_manipulation" options="type=delete file=.disable" />
</autobuild>
