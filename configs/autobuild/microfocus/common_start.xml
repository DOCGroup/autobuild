<autobuild>
    <configuration>
      <var builds_home="/home/oftao/doc_group" />
      <var root var="builds_home" join=dir var="this_build"  />
      <!-- Set ACE_ROOT, TAO_ROOT, MPC_ROOT, CIAO_ROOT and DANCE_ROOT -->
      <env ACE_ROOT group=default var="root" join=dir ATCD ACE />
      <env MPC_ROOT group=default var="root" join=dir MPC />
      <env TAO_ROOT group=default var="root" join=dir ATCD TAO />
      <env CIAO_ROOT group=default var="root" join=dir ATCD CIAO />
      <env DANCE_ROOT group=default  var="root" join=dir ATCD DAnCE />
      <env LD_LIBRARY_PATH group=default  var="root" join=dir ATCD ACE lib />
      <variable name="log_file" value="build.txt" />
      <var name="log_root" var="builds_home" join=dir scoreboard
                                             join=dir
                                             var="this_build" />
    </configuration>

    <command name="status" options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log" options="ON" />

    <command name="git" options="clone https://github.com/DOCGroup/MPC.git" />
    <command name="git" options="clone https://github.com/DOCGroup/ATCD.git" />
</autobuild>
