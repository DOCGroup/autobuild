<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"          value="/builds/mountain_lion_full_static_llvm/ACE_wrappers"/>
        <environment name="TAO_ROOT"          value="/builds/mountain_lion_full_static_llvm/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"         value="/builds/mountain_lion_full_static_llvm/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"        value="/builds/mountain_lion_full_static_llvm/ACE_wrappers/TAO/DAnCE"/>
        <environment name="XERCESCROOT"       value="/builds/xerces-c-3.1.1"/>
        <environment name="DYLD_LIBRARY_PATH" value="/builds/mountain_lion_full_static_llvm/ACE_wrappers/lib:/builds/xerces-c-3.1.1/lib"/>

        <variable name="root"                 value="/builds/mountain_lion_full_static_llvm" />
        <variable name="log_file"             value="build.txt" />
        <variable name="log_root"             value="/builds/mountain_lion_full_static_llvm/build/" />
    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32002" />
    <command name="make"              options="-k realclean find=*akefile" />
    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-macosx-mountainlion.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='static_libs_only=1\nxerces3=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_macosx_mountainlion.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='xerces3=1'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="clang++" />
    <command name="print_ace_config" />
    <command name="print_openssl_version"/>
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-static -type gnuautobuild" />

    <command name="make"              options="-k -j 8" />

    <command name="auto_run_tests"   options="-a -o -t -C" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
</autobuild>
