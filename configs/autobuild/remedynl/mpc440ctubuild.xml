<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="PATH"              value="/usr/local/ngclinux/powerpc/bin" type="prefix"/>
        <environment name="ACE_ROOT"          value="/exports/PPC440FP-OE/home/root/ACE/build/ACE_wrappers"/>
        <environment name="TAO_ROOT"          value="/exports/PPC440FP-OE/home/root/ACE/build/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"         value="/exports/PPC440FP-OE/home/root/ACE/build/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"        value="/exports/PPC440FP-OE/home/root/ACE/build/ACE_wrappers/TAO/DAnCE"/>
        <environment name="HOST_ROOT"         value="/home/build/ACE/host/ACE_wrappers"/>
        <environment name="LD_LIBRARY_PATH"   value="/home/build/ACE/host/ACE_wrappers/lib:/usr/local/lib:/opt/rtidds45dctu/lib/ppc4xxFPLinux2.6gcc4.5.1" />
        <environment name="NDDSHOME"          value="/opt/rtidds45dctu" />
        <environment name="NDDSARCHITECTURE"  value="ppc4xxFPLinux2.6gcc4.5.1" />
        <environment name="DDS4CCM_DEFAULT_DOMAIN_ID"        value="44"/>
        <environment name="SSL_ROOT"          value="/usr/local/ngclinux/powerpc/powerpc-ngc-linux/usr"/>
        <environment name="ZLIB_ROOT"         value="/usr/local/ngclinux/powerpc/powerpc-ngc-linux/usr"/>
        <environment name="XERCESCROOT"       value="/usr/local/ngclinux/powerpc/powerpc-ngc-linux/usr"/>
        <environment name="RSYNC_SSH"         value="/usr/bin/ssh"/>

        <variable name="root"         value="/exports/PPC440FP-OE/home/root/ACE/build/" />
        <variable name="remote_root"  value="/home/root/ACE/build/ACE_wrappers" />
        <variable name="remote_libpath"  value="/opt/rtidds45dctu/lib/ppc4xxFPLinux2.6gcc4.5.1" />
        <variable name="remote_shell" value="/usr/bin/ssh root@tgtctu.remedy.nl" />
        <variable name="log_file"     value="build.txt" />
        <variable name="log_root"     value="/exports/PPC440FP-OE/home/root/ACE/build/" />
        <variable name="configs"      value="Linux Exceptions ZLIB SSL XERCES NO_IFR NO_IDL3_TO_XMI NDDS CCM_NOEVENT" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32003" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="log"               options="on" />

    <command name="svn"               options="co https://svn.dre.vanderbilt.edu/DOC/Middleware/sets/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_HAS_REACTOR_NOTIFICATION_QUEUE 1\n#include \x22ace/config-linux.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='CROSS_COMPILE=powerpc-ngc-linux-\ndebug=0\noptimize=1\nxerces2=1\nndds=1\ndds4ccm_ndds=1\ninline=1\nssl=1\nzlib=1\nboost=0\nroot_is_symlink=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='cross_compile=1\nndds=1\nboost=0\nzlib=1\nssl=1\nxerces2=1\ndds4ccm_ndds=1\nccm_lw=1\nccm_noevent=1\n'" />

    <command name="print_os_version" />
    <command name="print_remote_os_version" />
    <command name="print_env_vars" />
    <command name="print_perl_version" />
    <command name="print_perl_version" options="remote"/>
    <command name="print_openssl_version" options="remote"/>
    <command name="print_make_version" />
    <command name="check_compiler" options="powerpc-ngc-linux-gcc" />
    <command name="print_ace_config" />

    <command name="generate_workspace" options="-type gnuautobuild" />

    <command name="make"              options="-k -j 3" />

    <command name="log"               options="off" />
    <command name="shell"             options="ssh root@tgtctu date -s `date -u +%Y.%m.%d-%H:%M`" />
    <command name="log"               options="append" />
    <command name="auto_run_remote_tests" options="-extra_env 'DDS4CCM_DEFAULT_DOMAIN_ID=44'"/>

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=5 move prettify index" />
    <command name="status"            options="off" />

    <command name="shell"             options="pwd; ls" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /.svn/ --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** /home/build/ACE/target/ qnap.remedy.nl::Buildlogs/mpc440ctubuild" />
</autobuild>
