<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/build/ACE/GCCautoconf/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/home/build/ACE/GCCautoconf/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/GCCautoconf/ACE_wrappers/lib" />
        <environment name="CVSROOT"         value=":ext:jwillemsen@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />

        <variable name="root"     value="/home/build/ACE/GCCautoconf/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/GCCautoconf/" />
        <variable name="configs"  value="Linux Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />
    
    <command name="cvs"               options="-z 9 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output=''" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="anonymous_shell" options="autoconf --version" />
    <command name="anonymous_shell" options="automake --version" />
    <command name="anonymous_shell" options="libtool --version" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="shell"             options="(cd ACE_wrappers; autoreconf --install --force -I m4)" />
    <command name="shell"             options="rm -rf ACE_wrappers/build" />
    <command name="shell"             options="mkdir ACE_wrappers/build" />
    <command name="shell"             options="(cd ACE_wrappers/build; ../configure --without-tao)" />

    <command name="make"              options="dir=build" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="ssh willemsenj@tao.dre.vanderbilt.edu rm /web/users/willemsenj/SuSE_GCC_autoconf/* -f" />
    <command name="shell"             options="scp -C *.txt *.html willemsenj@tao.dre.vanderbilt.edu:/web/users/willemsenj/SuSE_GCC_autoconf" />
</autobuild>
