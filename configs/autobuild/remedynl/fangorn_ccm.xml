<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/home/build/ACE/dds4ccm/ACE_wrappers"/>
        <environment name="TAO_ROOT"        value="/home/build/ACE/dds4ccm/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"        value="/home/build/ACE/dds4ccm/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"        value="/home/build/ACE/dds4ccm/ACE_wrappers/TAO/CIAO/DAnCE">
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/dds4ccm/ACE_wrappers/lib:/usr/local/lib:/mnt/develop/RTI/ndds.4.4d/lib/i86Linux2.6gcc4.1.1/" />
        <environment name="NDDSHOME" value="/mnt/develop/RTI/ndds.4.4d" />
        <environment name="NDDSARCHITECTURE" value="i86Linux2.6gcc4.1.1" />
        <environment name="SSL_ROOT"        value="/usr"/>
        <environment name="DDS4CCM_DEFAULT_DOMAIN_ID"        value="25"/>

        <variable name="root"     value="/home/build/ACE/dds4ccm/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/dds4ccm/" />
        <variable name="configs"  value="Linux Exceptions ZLIB SSL ZIOP NDDS" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32003" />
    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define TAO_HAS_ZIOP 1\n#define ACE_INITIALIZE_MEMORY_BEFORE_USE\n#include \x22ace/config-linux.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='ndds=1\nmcpp=1\nssl=1\nzlib=1\ninline=0\nboost=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='mcpp=0\nxerces3=1\nboost=1\nzlib=1\nssl=1\nbzip2=1\nndds=1\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_openssl_version"/>
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-C TAO/CIAO -k realclean find=*akefile" />

    <command name="generate_workspace" options="TAO/CIAO/CIAO_TAO.mwc -type gnuautobuild" />

    <command name="make"              options="-C TAO/CIAO -j 5 -k" />

    <command name="auto_run_tests"    options=" -C" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=24 move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/fangorn_ccm" />
</autobuild>
