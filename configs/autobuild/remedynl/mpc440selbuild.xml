<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="PATH"              value="/opt/angstrom/bin" type="prefix"/>
        <environment name="ACE_ROOT"          value="/home/build/ACE/latest/ACE_wrappers"/>
        <environment name="TAO_ROOT"          value="/home/build/ACE/latest/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"         value="/home/build/ACE/latest/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"        value="/home/build/ACE/latest/ACE_wrappers/TAO/DAnCE"/>
        <environment name="HOST_ROOT"         value="/home/build/ACE/host/ACE_wrappers"/>
        <environment name="LD_LIBRARY_PATH"   value="/home/build/ACE/host/ACE_wrappers/lib:/usr/local/lib:/mnt/develop/RTI/ndds.4.5b.rev01/lib/ppc4xxFPLinux2.6gcc4.3.3" />
        <environment name="NDDSHOME"          value="/mnt/develop/RTI/ndds.4.5b.rev01" />
        <environment name="NDDSARCHITECTURE"  value="ppc4xxFPLinux2.6gcc4.3.3" />
        <environment name="DDS4CCM_DEFAULT_DOMAIN_ID"        value="39"/>
        <environment name="SSL_ROOT"          value="/opt/angstrom/powerpc-angstrom-linux/usr"/>
        <environment name="ZLIB_ROOT"         value="/opt/angstrom/powerpc-angstrom-linux/usr"/>
        <environment name="XERCESCROOT"       value="/opt/angstrom/powerpc-angstrom-linux/usr"/>
        <environment name="ICECC_VERSION" value="/home/build/ACE/linux-x86-angstromgcc-4.3.3-linux-mpc440.tar.gz" />

        <variable name="root"         value="/home/build/ACE/latest/" />
        <variable name="remote_root"  value="/home/build/ACE/latest/ACE_wrappers" />
        <variable name="remote_libpath"  value="/opt/RTI/lib" />
        <variable name="remote_shell" value="ssh build@mpc440-03" />
        <variable name="log_file"     value="build.txt" />
        <variable name="log_root"     value="/home/build/ACE/latest/" />
        <variable name="configs"      value="Linux Exceptions ZLIB SSL XERCES NO_IFR NO_IDL3_TO_XMI NDDS CCM_NOEVENT" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32003" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="log"               options="on" />

    <command name="svn"               options="co https://svn.dre.vanderbilt.edu/DOC/Middleware/sets/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_HAS_REACTOR_NOTIFICATION_QUEUE 1\n#include \x22ace/config-linux.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='CROSS_COMPILE=powerpc-angstrom-linux-\nicecream=1\ndebug=0\noptimize=1\nxerces2=1\nndds=1\ndds4ccm_ndds=1\ninline=1\nssl=1\nzlib=1\nboost=0\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ndds=1\nboost=0\nzlib=1\nssl=1\nxerces2=1\ndds4ccm_ndds=1\nccm_lw=1\nccm_noevent=1\n'" />

    <command name="print_os_version" />
    <command name="print_remote_os_version" />
    <command name="print_env_vars" />
    <command name="print_perl_version" />
    <command name="print_perl_version" options="remote"/>
    <command name="print_openssl_version" options="remote"/>
    <command name="print_make_version" />
    <command name="check_compiler" options="powerpc-angstrom-linux-gcc" />
    <command name="print_ace_config" />

    <command name="generate_workspace" options="-type gnuautobuild -exclude apps/gperf/tests" />

    <command name="make"              options="-k -j 20" />

    <command name="auto_run_remote_tests" options="-extra_env 'DDS4CCM_DEFAULT_DOMAIN_ID=39'"/>

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=5 move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ qnap.remedy.nl::Buildlogs/mpc440selbuild" />
</autobuild>
