<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"              value="/home/build/ACE/valgrind/ACE_wrappers" />
        <environment name="TAO_ROOT"              value="/home/build/ACE/valgrind/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH"       value="/home/build/ACE/valgrind/ACE_wrappers/lib" />
        <environment name="CVSROOT"               value=":ext:jwillemsen@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"               value="ssh" />
        <environment name="RSYNC_RSH"             value="ssh" />
        <environment name="VALGRIND_OPTS"         value="-q --tool=addrcheck --num-callers=25 --leak-check=yes --trace-children=yes --show-reachable=yes" />
        <environment name="ACE_RUN_VALGRIND_CMD"  value="valgrind" />

        <variable name="root"     value="/home/build/ACE/valgrind/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/valgrind/" />
        <variable name="configs"  value="Linux Exceptions SSL" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />
    <!-- Delete all the Makefiles so the cvs checkout won't complain. -->
    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_HAS_VALGRIND\n#include \x22ace/config-linux.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='cidl=1\nssl=1\ninline=0\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='cidl=1\nssl=1\n'" />

    <command name="anonymous_shell"   options="scp -C willemsenj@tao.dre.vanderbilt.edu:/web/users/isisbuilds/CIDLC/gnu-linux/cidlc ACE_wrappers/TAO/CIAO/bin" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_cidlc_version" />
    <command name="print_make_version" />
    <command name="print_perl_version" />
    <command name="print_valgrind_version" />

    <command name="generate_workspace" options="-exclude TAO" />
    <command name="generate_workspace" options="dirs=TAO -exclude TAOACE.mwc,CIAO" />
    <command name="generate_workspace" options="dirs=TAO/CIAO -exclude CIAOTAO.mwc,CIDLC,CCF" />

    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -C TAO realclean" />
    <command name="make"              options="-k -C TAO/CIAO realclean" />

    <command name="make"              options="-k" />
    <command name="make"              options="-k -C TAO/TAO_IDL" />
    <command name="make"              options="-k -C TAO" />
    <command name="make"              options="-k -C TAO/CIAO" />

    <command name="auto_run_tests" options="-a -o -Config Valgrind" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=5 move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <!-- command name="shell"             options="ssh willemsenj@tao.dre.vanderbilt.edu rm /web/users/remedynl/SuSE_Valgrind/* -f" / -->
    <!-- command name="shell"             options="scp -C *.txt *.html willemsenj@tao.dre.vanderbilt.edu:/web/users/remedynl/SuSE_Valgrind" / -->
    <command name="shell"             options="rsync --progress --delete -z --include *.txt --include *.html --exclude * ./ willemsenj@tao.dre.vanderbilt.edu:/web/users/remedynl/SuSE_Valgrind" />
</autobuild>
