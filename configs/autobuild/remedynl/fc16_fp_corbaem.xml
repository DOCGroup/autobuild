<!-- $Id$ -->
<autobuild>
    <configuration>
        <variable name="name"      value="fc16_fp_corbaem" />
        <include name="buildenv.xml" />
    </configuration>

    <include name="preprocess.xml" />

    <command name="file_manipulation" options="type=create file=<ace_root>/ace/config.h output='#define TAO_HAS_ZIOP 0\n#define ACE_HAS_MONITOR_FRAMEWORK 0\n#define TAO_HAS_CORBA_MESSAGING 0\n#define ACE_LACKS_UNIX_SYSLOG\n#define ACE_NLOGGING 1\n#define TAO_HAS_SENDFILE 0\n#define TAO_HAS_MCAST_PARSER 0\n#define TAO_HAS_CORBANAME_PARSER 0\n#define TAO_HAS_CORBALOC_PARSER 0\n#define TAO_HAS_DDL_PARSER 0\n#define TAO_HAS_HTTP_PARSER 0\n#include \x22ace/config-linux.h\x22\n#undef ACE_HAS_IP_MULTICAST\n'" />
    <command name="file_manipulation" options="type=create file=<ace_root>/include/makeinclude/platform_macros.GNU output='inline=1\nOCFLAGS=-Os\nuse_dep_libs=0\nstatic_libs_only=1\nLDFLAGS+=-Xlinker -M -Xlinker -Map -Xlinker \\$@.map\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\noptimize=1\ndebug=0\nexceptions=1\n'" />
    <command name="file_manipulation" options="type=create file=<ace_root>/bin/MakeProjectCreator/config/default.features output='optimize_collocated_invocations=0\ncorba_messaging=0\ncorba_e_micro=1\ntransport_current=0\n'" />

    <include name="printbuildenv.xml" />

    <command name="generate_workspace" options="-exclude CIAO,DAnCE -type gnuautobuild" />

    <command name="anonymous_shell"    options="mkdir -p $LOG_ROOT/metrics" />

    <command name="make"              options="-k -C $ACE_ROOT/ace        --dry-run > $LOG_ROOT/metrics/targets" />
    <command name="make"              options="-k -C $ACE_ROOT/ACEXML     --dry-run >> $LOG_ROOT/metrics/targets" />
    <command name="make"              options="-k -C $ACE_ROOT/apps/gperf --dry-run >> $LOG_ROOT/metrics/targets" />

    <command name="make"              options="-k -C $ACE_ROOT/ace" />
    <command name="make"              options="-k -C $ACE_ROOT/ACEXML" />
    <command name="make"              options="-k -C $ACE_ROOT/apps/gperf" />

    <command name="make"              options="-k -C $TAO_ROOT/TAO_IDL" />
    <command name="make"              options="-k -C $TAO_ROOT/tao idl_stubs" />
    <command name="make"              options="-k -C $TAO_ROOT/tests idl_stubs" />

    <command name="make"              options="-k -C $TAO_ROOT/tao                --dry-run >> $LOG_ROOT/metrics/targets" />
    <command name="make"              options="-k -C $TAO_ROOT/tests/ORB_init     --dry-run >> $LOG_ROOT/metrics/targets" />
    <command name="make"              options="-k -C $TAO_ROOT/tests/ORB_destroy  --dry-run >> $LOG_ROOT/metrics/targets" />
    <command name="make"              options="-k -C $TAO_ROOT/tests/Hello        --dry-run >> $LOG_ROOT/metrics/targets" />
    <command name="make"              options="-k -C $TAO_ROOT/tests/Muxing       --dry-run >> $LOG_ROOT/metrics/targets" />
    <command name="make"              options="-k -C $TAO_ROOT/orbsvcs/orbsvcs    --dry-run >> $LOG_ROOT/metrics/targets" />

    <command name="make"              options="-k -C $TAO_ROOT/tao" />
    <command name="make"              options="-k -C $TAO_ROOT/tests/ORB_init" />
    <command name="make"              options="-k -C $TAO_ROOT/tests/ORB_destroy" />
    <command name="make"              options="-k -C $TAO_ROOT/tests/Hello" />
    <command name="make"              options="-k -C $TAO_ROOT/tests/Muxing" />
    <command name="make"              options="-k -C $TAO_ROOT/orbsvcs/orbsvcs" />

    <command name="anonymous_shell"   options="$ACE_ROOT/bin/generate_compile_stats.sh $LOG_ROOT/build.txt $LOG_ROOT/metrics/x/ $LOG_ROOT/metrics/targets Footprint" />

    <include name="postprocess.xml" />
</autobuild>
