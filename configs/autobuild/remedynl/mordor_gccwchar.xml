<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/home/build/ACE/gccwchar/ACE_wrappers"/>
        <environment name="TAO_ROOT"        value="/home/build/ACE/gccwchar/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/gccwchar/ACE_wrappers/lib" />
        <environment name="SHLIB_PATH"      value="/home/build/ACE/gccwchar/ACE_wrappers/lib" />
        <environment name="PATH"            value="/usr/local/bin" type="prefix" />
        <environment name="SSL_ROOT"        value="/usr"/>
        <environment name="RSYNC_RSH"       value="ssh" />

        <variable name="root"     value="/home/build/ACE/gccwchar/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/gccwchar/" />
        <variable name="configs"  value="Exceptions SSL WCHAR" />
        <variable name="make_program"  value="gmake" />

    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32001" />

    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_USES_WCHAR\n#include \x22ace/config-hpux-11.00.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='ssl=1\ninline=0\ninclude $(ACE_ROOT)/include/makeinclude/platform_hpux_gcc.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=1\nuses_wchar=1\nipv6=1\nssl=1\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_openssl_version"/>
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="generate_workspace" options="-type gnuautobuild -exclude TAO" />

    <command name="make"              options="-k" />

    <command name="auto_run_tests"    options=" -a " />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="scp -C *.txt *.html johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/HPUX_IA64_gccwchar" />
</autobuild>
