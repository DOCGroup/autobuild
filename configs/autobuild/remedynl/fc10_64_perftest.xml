<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/home/build/ACE/gcc/ACE_wrappers"/>
        <environment name="TAO_ROOT"        value="/home/build/ACE/gcc/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"       value="/home/build/ACE/gcc/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"      value="/home/build/ACE/gcc/ACE_wrappers/TAO/CIAO/DAnCE">
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/gcc/ACE_wrappers/lib:/usr/local/lib:" />
        <environment name="LD_LIBRARY_PATH" value="/mnt/develop/RTI/ndds.4.5b.rev01/lib/x64Linux2.6gcc4.3.2/:" type="prefix"/>
        <environment name="NDDSHOME" value="/mnt/develop/RTI/ndds.4.5b.rev01" />
        <environment name="NDDSARCHITECTURE" value="x64Linux2.6gcc4.3.2" />
        <environment name="DDS4CCM_DEFAULT_DOMAIN_ID"        value="38"/>

        <variable name="root"     value="/home/build/ACE/gcc/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/gcc/" />
        <variable name="configs"  value="Linux Exceptions ZLIB SSL NDDS" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32003" />
    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_HAS_REACTOR_NOTIFICATION_QUEUE 1\n#define CIAO_DDS4CCM_CONTEXT_SWITCH 0\n#include \x22ace/config-linux.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='TCPU=native\narchmodelflag=1\ntunemodelflag=1\ndebug=0\noptimize=1\nbuildbits=64\ndds4ccm_ndds=1\nndds=1\nssl=1\nzlib=1\ninline=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='xerces2=1\nzlib=1\nssl=1\nbzip2=1\ndds4ccm_ndds=1\nndds=1\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_openssl_version"/>
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-C TAO/CIAO -k realclean find=*akefile" />

    <command name="generate_workspace" options="TAO/CIAO/CIAO_TAO.mwc -type gnuautobuild" />

    <command name="make"              options="-C TAO/CIAO -j 5 -k" />

    <command name="auto_run_tests"    options=" -C" />

    <command name="anonymous_shell"   options="killall ciao_componentserver" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=5 move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/fc1064perftest" />
</autobuild>
