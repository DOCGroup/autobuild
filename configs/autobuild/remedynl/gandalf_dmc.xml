<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"     value="c:\ACE\DM\ACE_wrappers" />
        <environment name="TAO_ROOT"     value="c:\ACE\DM\ACE_wrappers/TAO"/>
        <environment name="CVSROOT"      value=":ext:jwillemsen@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"      value="ssh" />
        <environment name="RSYNC_RSH"    value="C:\cygwin\bin\ssh" />
        <environment name="Path"         value="C:\ACE\DM\ACE_wrappers\bin;C:\ACE\DM\ACE_wrappers\lib;c:\perl\bin;c:\cygwin\bin;c:\dm\bin" type="prefix" />
        <environment name="include"      value="" />
        <environment name="lib"          value="" />

        <variable name="root"     value="C:\ACE\DM\" />
	<variable name="log_file" value="log.txt" />
        <variable name="log_root" value="C:\ACE\DM\" />
        <variable name="name"     value="DigitalMars ACE" />
        <variable name="configs"  value="" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="log"               options="ON" />

    <!-- Delete all the Makefiles so the cvs checkout won't complain. -->
    <command name="shell"             options="find ACE_wrappers -iname 'GNUmakefile*' -exec rm '{}' ';'" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n#include \x22ace/config-win32.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='inline=0\ninclude $(ACE_ROOT)/include/makeinclude/platform_win32_dmc.GNU\n'" />

    <command name="print_os_version" options="useuname" />
    <command name="check_compiler" options="dm" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <!-- Uses ACE.mwc -->
    <command name="generate_workspace" options="-exclude apps/gperf/tests,TAO" />

    <command name="make"              options="-k realclean" />

    <command name="make"              options="-k" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean=5 index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="c:\cygwin\bin\rsync --progress --recursive --delete -z --exclude /ACE_wrappers/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/dm" />
</autobuild>

