<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"     value="/home/build/ACE/host/ACE_wrappers" />
        <environment name="TAO_ROOT"     value="/home/build/ACE/host/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"     value="/home/build/ACE/host/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"     value="/home/build/ACE/host/ACE_wrappers/TAO/CIAO/DAnCE"/>
        <environment name="PATH"         value="/bin" type="prefix" />
        <environment name="PATH"         value="/bin" type="prefix" />
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/host/ACE_wrappers/lib" />
        <environment name="RSYNC_RSH"    value="ssh" />

        <variable name="configs"      value="WinCE CE gcc Exceptions WCHAR" />
        <variable name="root"         value="/home/build/ACE/host/" />
        <variable name="log_file"     value="build.txt" />
        <variable name="log_root"     value="/home/build/ACE/host/" />
        <variable name="name"         value="WinCE CE gcc host" />
        <variable name="svn_program"  value="/usr/bin/svn" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32001" />

    <command name="log"               options="ON" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='debug=0\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_openssl_version"/>
    <command name="print_ace_config" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-type gnuace"/>

    <command name="make"              options="-k realclean find=*akefile" />
    <command name="make"              options="-k" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean=5 index" />
    <command name="status"            options="off" />
    <command name="shell"             options="/usr/bin/rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/cegcc052host" />
</autobuild>
