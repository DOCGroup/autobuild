<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/home/build/ACE/coverity/ACE_wrappers"/>
        <environment name="TAO_ROOT"        value="/home/build/ACE/coverity/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"        value="/home/build/ACE/coverity/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"        value="/home/build/ACE/coverity/ACE_wrappers/TAO/DAnCE"/>
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/coverity/ACE_wrappers/lib:/usr/local/lib:" />
        <environment name="LD_LIBRARY_PATH" value="/home/build/ndds/ndds.4.5d.rev11/lib/x64Linux2.6gcc4.5.1/:" type="prefix"/>
        <environment name="PATH" value="/home/build/cov-sbi-linux64-5.2.1.hotfix/bin:" type="prefix"/>
        <environment name="NDDSHOME" value="/home/build/ndds/ndds.4.5d.rev11" />
        <environment name="NDDSARCHITECTURE" value="x64Linux2.6gcc4.5.1" />
        <environment name="DDS4CCM_DEFAULT_DOMAIN_ID"        value="35"/>
        <environment name="MAILTO" value="jwillemsen@remedy.nl"/>
        <environment name="MAIL" value="mail -S smtp=zimbra.remedy.nl"/>
        <environment name="MAILFROM" value="jwillemsen@remedy.nl"/>

        <variable name="root"     value="/home/build/ACE/coverity/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/coverity/" />
        <variable name="configs"  value="Linux Exceptions ZLIB SSL ZIOP NDDS CCM_NOEVENT" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32003" />
    <command name="log"               options="on" />

    <!--command name="anonymous_shell"             options="cov-configure --comptype=gcc -co gcc" /-->
    <!--command name="anonymous_shell"             options="cov-configure --comptype=g++ -co g++" /-->

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define TAO_HAS_ZIOP 1\n#include \x22ace/config-linux.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='buildbits=64\ndds4ccm_ndds=1\nndds=1\nssl=1\nzlib=1\ninline=0\nboost=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='xerces3=1\nboost=1\nzlib=1\nssl=1\nbzip2=1\ndds4ccm_ndds=1\nndds=1\nccm_lw=1\nccm_noevent=1\n'" />
    <command name="file_manipulation" options="type=create file=rsmailfile output='v2;ACE+TAO+CIAO+DAnCE;spUCR38h;jwillemsen@remedy.nl;http://buildlogs.theaceorb.nl/fc14_coverity/project.tgz\n'" />
    <command name="file_manipulation" options="type=create file=README output='Johnny Willemsen\njwillemsen@remedy.nl\nACE+TAO+CIAO+DAnCE\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_openssl_version"/>
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-C TAO/CIAO -k realclean find=*akefile" />

    <command name="generate_workspace" options="TAO/CIAO/CIAO_TAO.mwc -type gnuautobuild" />

    <command name="anonymous_shell"   options="cov-build -e emit -o output make -C ACE_wrappers/TAO/CIAO" />

    <command name="anonymous_shell"   options="tar czvf project.tgz README emit output" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /.svn/ --exclude /emit/ --exclude /output/ --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ qnap.remedy.nl::Buildlogs/fc14_coverity" />

    <command name="anonymous_shell"   options="mail -r jwillemsen@remedy.nl -s \x22Coverity\x22 build@submit.scan.coverity.com < rsmailfile" />
</autobuild>
