<!-- $Id$ -->
<autobuild>
    <configuration>
        <variable name="name"      value="fc16_valgrind" />

        <variable name="nddsarch"  value="x64Linux2.6gcc4.5.1" />
        <variable name="nddsver"   value="ndds.4.5d.rev11" />
        <environment name="DDS4CCM_DEFAULT_DOMAIN_ID" relative_value="29"/>

        <variable    name="valgrind_opts"         value="-q --tool=memcheck --num-callers=25 --leak-check=yes --show-reachable=yes --trace-children=yes --suppressions="
                                                  join=""
                                                  variable="BUILD_CONFIG_PATH"
                                                  join="dir"
                                                  value="fc16_valgrind.supp" />
        <environment name="VALGRIND_OPTS"         variable="valgrind_opts" />
        <environment name="ACE_RUN_VALGRIND_CMD"  value="valgrind" />
        <environment name="ACE_RUNTEST_DELAY"     value="2" />

        <variable name="configs"  value="Linux Exceptions NDDS ZLIB SSL BOOST Valgrind" />

        <include name="buildenv.xml" />
    </configuration>

    <include name="preprocess.xml" />

    <command name="file_manipulation" options="type=create file=<ace_root>/ace/config.h output='#include \x22ace/config-linux.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=<ace_root>/include/makeinclude/platform_macros.GNU output='qt4=1\nQTDIR=/usr\nPLATFORM_QT_LDFLAGS = -L$(QTDIR)/lib64\noptimize=0\nvalgrind=1\nbuildbits=64\ninline=0\nssl=1\nzlib=1\nboost=1\ndds4ccm_ndds=1\nndds=1\nxerces3=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />
    <command name="file_manipulation" options="type=create file=<ace_root>/bin/MakeProjectCreator/config/default.features output='boost=1\nzlib=1\nssl=1\ndds4ccm_ndds=1\nndds=1\nxerces3=1\nqt4=1\n'" />

    <include name="printbuildenv.xml" />

    <command name="generate_workspace" options="$CIAO_ROOT/CIAO_TAO.mwc -type gnuautobuild" />

    <command name="make"              options="-C $CIAO_ROOT -k" />

    <command name="auto_run_tests"    options="-C script_path=$ACE_ROOT/bin" />

    <include name="postprocess.xml" />
</autobuild>
