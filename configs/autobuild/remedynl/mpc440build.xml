<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="PATH"              value="/opt/angstrom/bin" type="prefix"/>
        <environment name="ACE_ROOT"          value="/home/build/mpc440_build/ACE/latest/ACE_wrappers"/>
        <environment name="TAO_ROOT"          value="/home/build/mpc440_build/ACE/latest/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"         value="/home/build/mpc440_build/ACE/latest/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"        value="/home/build/mpc440_build/ACE/latest/ACE_wrappers/TAO/CIAO/DAnCE"/>
        <environment name="HOST_ROOT"         value="/home/build/mpc440_build/ACE/host/ACE_wrappers"/>
        <!-- environment name="LD_LIBRARY_PATH"   value="/home/build/mpc440_build/ACE/latest/ACE_wrappers/lib:/usr/local/lib:/mnt/develop/RTI/ndds.4.4d/lib/x64Linux2.6gcc4.1.1" / -->
        <environment name="LD_LIBRARY_PATH"   value="/home/build/mpc440_build/ACE/host/ACE_wrappers/lib:/usr/local/lib" />
        <!-- environment name="NDDSHOME"          value="/mnt/develop/RTI/ndds.4.4d" / -->
        <!-- environment name="NDDSARCHITECTURE"  value="i86Linux2.6gcc4.1.1" / -->
        <environment name="SSL_ROOT"          value="/opt/angstrom/powerpc-angstrom-linux/usr"/>
        <environment name="ZLIB_ROOT"         value="/opt/angstrom/powerpc-angstrom-linux/usr"/>
        <environment name="XERCESCROOT"       value="/opt/angstrom/powerpc-angstrom-linux/usr"/>
        <environment name="CROSS_COMPILE"     value="powerpc-angstrom-linux-"/>
        <environment name="ICECC_VERSION" value="/home/build/linux-x86-angstromgcc-4.3.3-linux-mpc440.tar.gz" />

        <variable name="root"         value="/home/build/mpc440_build/ACE/latest/" />
        <variable name="remote_root"  value="/home/build/mpc440_build/ACE/latest/ACE_wrappers" />
        <variable name="remote_shell" value="ssh build@mpc440-01" />
        <variable name="log_file"     value="build.txt" />
        <variable name="log_root"     value="/home/build/mpc440_build/ACE/latest/" />
        <variable name="configs"      value="Linux Exceptions ZLIB SSL XERCES NO_IFR NO_IDL3_TO_XMI" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32003" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="log"               options="on" />

    <command name="svn"               options="co https://svn.dre.vanderbilt.edu/DOC/Middleware/sets/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='icecream=1\ndebug=1\nxerces2=1\nndds=0\ninline=0\nssl=1\nzlib=1\nboost=0\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ndds=0\nboost=0\nzlib=1\nssl=1\nxerces2=1\n'" />

    <command name="print_os_version" />
    <command name="print_remote_os_version" />
    <command name="print_env_vars" />
    <command name="print_perl_version" />
    <command name="print_perl_version" options="remote"/>
    <command name="print_openssl_version" options="remote"/>
    <command name="print_make_version" />
    <command name="check_compiler" options="powerpc-angstrom-linux-gcc" />
    <command name="print_ace_config" />

    <command name="generate_workspace" options="-type gnuautobuild -exclude apps/gperf/tests" />

    <command name="make"              options="-k -j 20" />

    <command name="auto_run_remote_tests"/>

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/mpc440build" />
</autobuild>
