<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/home/build/ACE/branch/ACE_wrappers"/>
        <environment name="TAO_ROOT"        value="/home/build/ACE/branch/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"       value="/home/build/ACE/branch/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"      value="/home/build/ACE/branch/ACE_wrappers/TAO/DAnCE">
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/branch/ACE_wrappers/lib:/usr/local/lib:" />
        <environment name="LD_LIBRARY_PATH" value="/home/build/ndds/ndds.4.5d.rev11/lib/x64Linux2.6gcc4.5.1:" type="prefix"/>
        <environment name="NDDSHOME" value="/home/build/ndds/ndds.4.5d.rev11" />
        <environment name="NDDSARCHITECTURE" value="x64Linux2.6gcc4.5.1" />
        <environment name="DDS4CCM_DEFAULT_DOMAIN_ID"        value="42"/>
   
        <variable name="root"     value="/home/build/ACE/branch/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/branch/" />
        <variable name="configs"  value="Linux Exceptions ZLIB SSL ZIOP NDDS" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32003" />
    <command name="log"               options="on" />

    <command name="svn"               options="co https://svn.dre.vanderbilt.edu/DOC/Middleware/branches/RemedyWorkSet ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define TAO_HAS_ZIOP 1\n#define ACE_INITIALIZE_MEMORY_BEFORE_USE\n#include \x22ace/config-linux.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='buildbits=64\ndds4ccm_ndds=1\nndds=1\nssl=1\nzlib=1\ninline=0\nboost=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='xerces2=1\nboost=1\nzlib=1\nssl=1\nbzip2=1\nccm_lw=0\ndds4ccm_ndds=1\nndds=1\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/TAO/CIAO/TAO_CIAO.mwc output='workspace  {\n$(ACE_ROOT)/ace\n$(ACE_ROOT)/apps/gperf/src\n$(ACE_ROOT)/apps/JAWS/server\n$(ACE_ROOT)/protocols/ace/INet\n$(ACE_ROOT)/contrib\n$(TAO_ROOT)/tao\n$(TAO_ROOT)/TAO_IDL\n$(TAO_ROOT)/utils\n$(TAO_ROOT)/orbsvcs/orbsvcs/CosNaming.mpc\n$(TAO_ROOT)/orbsvcs/orbsvcs/CosNaming_Serv.mpc\n$(TAO_ROOT)/orbsvcs/orbsvcs/CosNaming_Skel.mpc\n$(TAO_ROOT)/orbsvcs/Naming_Service\n$(TAO_ROOT)/orbsvcs/orbsvcs/Svc_Utils.mpc\n$(TAO_ROOT)/tests\n$(CIAO_ROOT)/ccm\n$(CIAO_ROOT)/ciao\n$(DANCE_ROOT)\n$(CIAO_ROOT)/tools\n$(CIAO_ROOT)/connectors\n$(CIAO_ROOT)/tests\n$(CIAO_ROOT)/examples\n$(CIAO_ROOT)/performance-tests\n$(CIAO_ROOT)/tutorials\n}\n\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_openssl_version"/>
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-C TAO/CIAO -k realclean find=*akefile" />

    <command name="generate_workspace" options="TAO/CIAO/TAO_CIAO.mwc -type gnuautobuild" />

    <command name="make"              options="-C TAO/CIAO -j 3 -k" />

    <command name="auto_run_tests"    options=" -o -t -C" />

    <command name="anonymous_shell"             options="killall dance_locality_manager" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=5 move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ qnap.remedy.nl::Buildlogs/fc15_branch" />
</autobuild>
