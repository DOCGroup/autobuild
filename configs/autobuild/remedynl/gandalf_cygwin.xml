<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"     value="/cygdrive/c/ACE/Cygwin/ACE_wrappers" />
        <environment name="TAO_ROOT"     value="/cygdrive/c/ACE/Cygwin/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"    value="/cygdrive/c/ACE/Cygwin/ACE_wrappers/TAO/CIAO"/>
        <environment name="RSYNC_RSH"    value="C:\cygwin\bin\ssh" />
        <environment name="Path"         value="C:\ACE\Cygwin\ACE_wrappers\bin;C:\ACE\Cygwin\ACE_wrappers\lib;c:\cygwin\bin;" type="prefix" />
        <environment name="include"      value="" />
        <environment name="lib"          value="" />

        <variable name="root"     value="C:\ACE\Cygwin\" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="C:\ACE\Cygwin\" />
        <variable name="name"     value="Cygwin ACE" />
        <variable name="configs"  value="Cygwin" />
    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32001" />

    <command name="log"               options="ON" />

    <command name="anonymous_shell"   options="c:\cygwin\bin\find ACE_wrappers -iname 'GNUmakefile*' -exec c:\cygwin\bin\rm '{}' ';'" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n#include \x22ace/config-cygwin32.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='inline=0\nssl=1\nfl_reactor=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_cygwin32.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=1\n'" />

    <!-- Uses ACE.mwc -->
    <command name="generate_workspace" options="-exclude apps/gperf/tests,TAO -type gnuace" />

    <command name="print_os_version" options="useuname" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k realclean" />

    <command name="make"              options="-k" />

    <command name="auto_run_tests" options="-a -s \x22/cygdrive/c/ACE/autobuild/win32sandbox/sandbox.exe -t 5400000\x22" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean=7 index" />
    <command name="status"            options="off" />
    <command name="shell"             options="c:\cygwin\bin\rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/CygwinACE" />
</autobuild>

