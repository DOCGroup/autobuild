<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"     value="C:\ACE\VxWorks\Host\ACE_wrappers" />
        <environment name="TAO_ROOT"     value="C:\ACE\VxWorks\Host\ACE_wrappers\TAO"/>
        <environment name="CVSROOT"      value=":ext:mcorino@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"      value="c:\cygwin\bin\ssh" />
        <environment name="PATH"         value="C:\Program Files\Microsoft Visual Studio .NET 2003\Common7\IDE;C:\Program Files\Microsoft Visual Studio .NET 2003\Vc7\bin;C:\tools\nixtools;C:\ACE\VxWorks\Host\ACE_wrappers\bin;C:\ACE\VxWorks\Host\ACE_wrappers\lib" type="prefix" />

        <variable name="configs"  value="Win32 VC71 Exceptions" />
        <variable name="root"     value="C:\ACE\VxWorks\Host\" />
	<variable name="log_file" value="log.txt" />
        <variable name="log_root" value="C:\ACE\VxWorks\Host\" />
        <variable name="name"     value="WinXP VS.NET 2003 Crossbuild Host" />

        <variable name="cvs_program"  value="c:/cygwin/bin/cvs" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="win32make"         options="msvc_mpc_auto_compile -vc7 -ACE -Release -k -clean" />
    <command name="win32make"         options="msvc_mpc_auto_compile -vc7 -TAO -Release -k -clean" />

    <command name="log"               options="ON" />

    <command name="cvs"               options="-z9 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z9 -q checkout -P ACE_MPC"/>

    <command name="shell"             options="find ACE_wrappers -name *.vcproj -exec \x22rm {}\x22 \x22;\x22" />
    <command name="shell"             options="find ACE_wrappers -name *.sln -exec \x22rm {}\x22 \x22;\x22" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n#include \x22ace/config-win32.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='rwho=0\nqos=1\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="msvc" />
    <command name="print_ace_config" />
    <command name="print_cidlc_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-exclude apps/drwho,apps/FaCE,apps/Gateway,apps/JAWS,apps/JAWS2,apps/JAWS3,Kokyu,netsvcs,websvcs,tests,examples,performance-tests,TAO/tao,TAO/tests,TAO/CIAO -type vc71 -recurse"/>

    <command name="win32make"         options="msvc_mpc_auto_compile -vc7 -ACE -Release -k" />
    <command name="win32make"         options="msvc_mpc_auto_compile -vc7 -TAO -Release -k" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <!-- command name="shell"             options="ssh willemsenj@tao.dre.vanderbilt.edu rm /web/users/remedynl/VC71/* -f" / -->
    <!-- command name="shell"             options="scp -C *.txt *.html willemsenj@tao.dre.vanderbilt.edu:/web/users/remedynl/VC71" / -->
