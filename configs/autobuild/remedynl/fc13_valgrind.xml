<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/home/build/ACE/valgrind/ACE_wrappers"/>
        <environment name="TAO_ROOT"        value="/home/build/ACE/valgrind/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"        value="/home/build/ACE/valgrind/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"        value="/home/build/ACE/valgrind/ACE_wrappers/TAO/DAnCE"/>
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/valgrind/ACE_wrappers/lib:/usr/local/lib" />
        <environment name="SSL_ROOT"        value="/usr"/>

        <environment name="LD_LIBRARY_PATH" value="/mnt/develop/RTI/ndds.4.5b.rev01/lib/x64Linux2.6gcc4.3.2/:" type="prefix"/>
        <environment name="NDDSHOME" value="/mnt/develop/RTI/ndds.4.5b.rev01" />
        <environment name="NDDSARCHITECTURE" value="x64Linux2.6gcc4.3.2" />
        <environment name="DDS4CCM_DEFAULT_DOMAIN_ID"        value="18"/>

        <variable    name="valgrind_opts"         value="-q --tool=memcheck --num-callers=25 --leak-check=yes --show-reachable=yes --trace-children=yes --suppressions="
                                                  join=""
                                                  variable="BUILD_CONFIG_PATH"
                                                  join="dir"
                                                  value="fc10_64_valgrind.supp" />
        <environment name="VALGRIND_OPTS"         variable="valgrind_opts" />
        <environment name="ACE_RUN_VALGRIND_CMD"  value="valgrind" />
        <environment name="ACE_RUNTEST_DELAY"     value="2" />


        <variable name="root"     value="/home/build/ACE/valgrind/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/valgrind/" />
        <variable name="configs"  value="Linux Exceptions NDDS ZLIB SSL BOOST Valgrind" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32003" />
    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='optimize=0\nvalgrind=1\nbuildbits=64\ninline=0\nssl=1\nzlib=1\nboost=1\ndds4ccm_ndds=1\nndds=1\nxerces3=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='boost=1\nzlib=1\nssl=1\ndds4ccm_ndds=1\nndds=1\nxerces3=1\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_openssl_version"/>
    <command name="print_make_version" />
    <command name="print_perl_version" />
    <command name="print_valgrind_version" />

    <command name="make"              options="-C TAO/CIAO -k realclean find=*akefile" />

    <command name="generate_workspace" options="TAO/CIAO/CIAO_TAO.mwc -type gnuautobuild" />

    <command name="make"              options="-C TAO/CIAO -j 2 -k" />

    <command name="auto_run_tests"    options=" -C" />

    <command name="anonymous_shell"   options="killall dance_locality_manager" />
    <command name="anonymous_shell"   options="killall memcheck" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=5 move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/fc13_valgrind" />
</autobuild>
