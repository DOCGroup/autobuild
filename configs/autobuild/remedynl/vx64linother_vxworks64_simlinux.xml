<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"         value="/nfs/galadriel/VxWorks/simlinux/ACE_wrappers"/>
        <environment name="TAO_ROOT"         value="/nfs/galadriel/VxWorks/simlinux/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"        value="/nfs/galadriel/VxWorks/simlinux/ACE_wrappers/TAO/CIAO"/>
        <environment name="LD_LIBRARY_PATH"  value="/usr/local/lib" />

        <variable name="root"     value="/nfs/galadriel/VxWorks/simlinux" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/nfs/galadriel/VxWorks/simlinux" />
        <variable name="configs"  value="Linux Exceptions" />

    </configuration>

    <command name="eval"              options="/home/build/WindRiver/wrenv.sh -p vxworks-6.4 -o print_env"/>
    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_HAS_IP_MULTICAST\n#include \x22ace/config-vxworks6.4.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='pthread=1\nrtp=1\nHOST_ROOT:=/home/build/ACE/VxWorks/host/ACE_wrappers\ndebug=0\ninline=0\noptimize=0\nTOOL = gnu\nTAO_IDL := $(HOST_ROOT)/bin/tao_idl\nTAO_IDL_DEP := $(TAO_IDL)\nTAO_IDLFLAGS += -g $(HOST_ROOT)/bin/ace_gperf\nCPU = SIMPENTIUM\ninclude $(ACE_ROOT)/include/makeinclude/platform_vxworks6.4.GNU\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="ccpentium" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-exclude TAO -type gnuace" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="make"              options="-k" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/VxWorks/simlinux" />
</autobuild>
