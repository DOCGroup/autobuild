<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/home/build/ACE/ACE_wrappers"/>
        <environment name="TAO_ROOT"        value="/home/build/ACE/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"        value="/home/build/ACE/ACE_wrappers/TAO/CIAO"/>
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/ACE_wrappers/lib" />
        <environment name="PATH"            value="/home/build/ACE/ACE_wrappers/lib" type="prefix" />

        <variable name="root"     value="/home/build/ACE/ACE_wrappers/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/" />
        <variable name="configs"  value="Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="cvs"               options="-z 9 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-openvms.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='inline=0\ndebug=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_openvms.GNU\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="cxx" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k -C ace realclean" />
    <command name="make"              options="-k -C tests realclean" />

    <command name="make"              options="-k -C ace" />
    <command name="make"              options="-k -C tests" />

    <command name="auto_run_tests"    options=" -a" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
</autobuild>
