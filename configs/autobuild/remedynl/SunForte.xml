<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/home/build/ACE/nightly/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/home/build/ACE/nightly/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/nightly/ACE_wrappers/lib"/>
        <environment name="CVSROOT"         value="jwillemsen@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />

        <variable name="root"     value="/home/build/ACE/nightly" />
	<variable name="log_file" value="log.txt" />
        <variable name="log_root" value="/home/build/ACE/nightly" />
        <variable name="configs"  value="Exceptions" />
        <variable name="name"     value="Sun Forte" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="log"               options="ON" />

    <!-- Delete all the Makefiles so the cvs checkout won't complain. -->
    <command name="shell"             options="find ACE_wrappers -name 'Makefile*' -exec rm '{}' ';'" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_wrappers" />
    <!-- Now, delete them again to insure a clean slate. -->
    <command name="shell"             options="find ACE_wrappers -name 'Makefile*' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-sunos5.8.h\x22\n#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='templates=implicit\nrtti=1\ninline=0\nexceptions=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_sunos5_sunc++.GNU\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="sun_cc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <!-- Uses ACE.mwc -->
    <command name="generate_workspace" options="-exclude TAO,vc7_nightly.mwc -hierarchy -make_coexistence" />
    <!-- Uses TAO/TAO.mwc -->
    <command name="generate_workspace" options="dirs=TAO -exclude TAOACE.mwc,CIAO -hierarchy -make_coexistence" />

    <command name="make"              options="-k reverseclean" />
    <command name="make"              options="-k -C TAO reverseclean" />

    <command name="make"              options="-k" />
    <command name="make"              options="-k -C TAO/TAO_IDL" />
    <command name="make"              options="-k -C TAO idl_stubs" />
    <command name="make"              options="-k -C TAO" />

    <command name="auto_run_tests"    options="" /> 

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean=1 index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="ssh bugzilla@charanga.cs.wustl.edu rm .www-docs/auto_compile_logs/remedy.nl_SUNOS_Forte/* -f" />
    <command name="shell"             options="scp *.txt *.html bugzilla@charanga.cs.wustl.edu:.www-docs/auto_compile_logs/remedy.nl_SUNOS_Forte" />
</autobuild>




