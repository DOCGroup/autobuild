<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"     value="C:/ACE/VxWorks/ACE_wrappers" />
        <environment name="TAO_ROOT"     value="C:/ACE/VxWorks/ACE_wrappers/TAO"/>
        <environment name="CVSROOT"      value=":ext:jwillemsen@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"      value="plink" />
        <environment name="Path"         value="C:\ACE\VxWorks\ACE_wrappers\bin;C:\ACE\VxWorks\ACE_wrappers\lib;c:\program files\putty;C:\T22-Proto\host\x86-win32\bin;C:\T22-Proto\Sniff4.1\bin\gnu-win32;" type="prefix" />
        <environment name="include"      value="" />
        <environment name="lib"          value="" />

	<environment name="BUILD"    value="all" />

        <variable name="root"     value="C:\ACE\VxWorks\" />
	<variable name="log_file" value="log.txt" />
        <variable name="log_root" value="C:\ACE\VxWorks\" />
        <variable name="name"     value="VxWorks" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="log"               options="ON" />

    <!-- Delete all the Makefiles so the cvs checkout won't complain. -->
    <command name="shell"             options="find ACE_wrappers -name 'Makefile*' -exec rm '{}' ';'" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_wrappers" />
    <!-- Now, delete them again to insure a clean slate. -->
    <command name="shell"             options="find ACE_wrappers -name 'Makefile*' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-vxworks5.x.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='debug=0\nCPU=SIMNT\nWIND_BASE=c:/T22-Proto\nWIND_HOST_TYPE=x86-win32\ninclude $(ACE_ROOT)/include/makeinclude/platform_vxworks5.x_g++.GNU\n'" />

    <command name="print_os_version"/>
    <command name="check_compiler" options="ccsimpc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <!-- Uses ACE.mwc -->
    <command name="generate_makefile" options="-recurse=TAO,vc7_nightly.mwc -make_coexistence" />
    <!-- Uses TAO/TAO.mwc -->
    <command name="generate_makefile" options="dirs=TAO -recurse=TAOACE.mwc,CIAO -make_coexistence" />

    <command name="make"              options="-k realclean" /> 
    <command name="make"              options="-k -C TAO realclean" /> 

    <command name="make"              options="-k" />
    <command name="make"              options="-k -C TAO/tao" /> 

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean=1 index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="plink bugzilla@charanga.cs.wustl.edu rm .www-docs/auto_compile_logs/remedy.nl_VxWorks/* -f" />
    <command name="shell"             options="pscp -C *.txt *.html bugzilla@charanga.cs.wustl.edu:.www-docs/auto_compile_logs/remedy.nl_VxWorks" />
</autobuild>




