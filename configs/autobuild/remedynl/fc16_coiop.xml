<!-- $Id$ -->
<autobuild>
    <configuration>
        <variable name="home"         environment="HOME" />
        <variable name="build_root"   relative_value="<home>/ACE/COIOP" />
        <variable name="configs"      value="Linux SSL COIOP" />

        <variable name="root"         relative_value="<build_root>" />
        <variable name="log_file"     value="build.txt" />
        <variable name="log_root"     relative_value="<build_root>" />
        <variable name="doc_root"     value="<build_root>/DOC_ROOT" />
        <variable name="project_root" relative_value="<doc_root>" />

        <environment name="BUILD_ROOT"      relative_value="<build_root>" />
        <environment name="DOC_ROOT"        relative_value="<doc_root>" />
        <environment name="ACE_ROOT"        relative_value="<doc_root>/ACE" />
        <environment name="TAO_ROOT"        relative_value="<doc_root>/TAO"/>
        <environment name="CIAO_ROOT"       relative_value="<doc_root>/CIAO"/>
        <environment name="DANCE_ROOT"      relative_value="<doc_root>/DAnCE"/>
        <environment name="MPC_ROOT"        relative_value="<build_root>/MPC"/>
        <environment name="LD_LIBRARY_PATH" value="${ACE_ROOT}/lib:" type="prefix" />
        <environment name="RSYNC_RSH"       value="ssh" />
        <environment name="QT4_SUFFIX"      value="-qt4" />
    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32004" />

    <command name="log"               options="on" />

    <command name="anonymous_shell"   options="rm -rf $DOC_ROOT" />
    <command name="anonymous_shell"   options="rm -rf $MPC_ROOT" />

    <command name="git"               options="clone --depth 1 http://:@git.remedy.nl/git/atcd.git DOC_ROOT" />
    <command name="git"               options="clone --depth 1 http://:@git.remedy.nl/git/mpc.git MPC" />

        <command name="print_env_vars" />

    <command name="file_manipulation" options="type=create file=$(ACE_ROOT)/ace/config.h output='#include \x22ace/config-linux.h\x22\n#define TAO_HAS_IIOP 0\n#define TAO_HAS_UIOP 0\n#define TAO_HAS_DIOP 0\n#define TAO_HAS_COIOP 1\n#define TAO_HAS_SHMIOP 0\n'"/>
    <command name="file_manipulation" options="type=create file=$(ACE_ROOT)/include/makeinclude/platform_macros.GNU output='boost=1\nssl=1\nprobe=1\nqt4=1\nQTDIR=/usr\nPLATFORM_QT_LDFLAGS = -L$(QTDIR)/lib64\n\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\nCCFLAGS += -pedantic -Wno-long-long -Wno-variadic-macros -Wwrite-strings -Wcast-align\n\n'" />
    <command name="file_manipulation" options="type=create file=$(ACE_ROOT)/bin/MakeProjectCreator/config/default.features output='boost=1\nssl=1\nqt4=1\n\n'" />
    <command name="file_manipulation" options="type=create file=$(ACE_ROOT)/TAO_COIOP.mwc output='workspace {\nace\napps/gperf/src\n$(TAO_ROOT)/TAO_IDL\n$(TAO_ROOT)/tao\n$(TAO_ROOT)/tests/COIOP\n}\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_openssl_version"/>
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="$ACE_ROOT/TAO_COIOP.mwc -type gnuace" />

    <command name="make"              options="-k -C ACE" />

    <command name="auto_run_tests"    options="-l TAO/tests/COIOP/COIOP.lst" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /.svn/ --exclude /$DOC_ROOT/ --exclude /$MPC_ROOT/ --include *.txt --include *.html --exclude ** ./ qnap.remedy.nl::Buildlogs/fc16_COIOP" />
</autobuild>
