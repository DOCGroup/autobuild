<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/build/ACE/COIOP/ATCD/ACE" />
        <environment name="TAO_ROOT"        value="/home/build/ACE/COIOP/ATCD/TAO"/>
        <environment name="CIAO_ROOT"       value="/home/build/ACE/COIOP/ATCD/CIAO"/>
        <environment name="DANCE_ROOT"      value="/home/build/ACE/COIOP/ATCD/DAnCE"/>
        <environment name="MPC_ROOT"        value="/home/build/ACE/COIOP/MPC"/>
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/COIOP/ATCD/ACE/lib:" type="prefix" />
        <environment name="RSYNC_RSH"       value="ssh" />
        <environment name="QT4_SUFFIX"      value="-qt4" />

        <variable name="root"         value="/home/build/ACE/COIOP/" />
        <variable name="log_file"     value="build.txt" />
        <variable name="log_root"     value="/home/build/ACE/COIOP/" />
        <variable name="configs"      value="Linux SSL COIOP" />
        <variable name="project_root" value="/home/build/ACE/COIOP/ATCD" />

    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32004" />

    <command name="log"               options="on" />

    <command name="git"               options="clone --depth 1 http://:@git.remedy.nl/git/atcd.git ATCD" />
    <command name="git"               options="clone --depth 1 http://:@git.remedy.nl/git/mpc.git MPC" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=create file=ATCD/ACE/ace/config.h output='#include \x22ace/config-linux.h\x22\n#define TAO_HAS_IIOP 0\n#define TAO_HAS_UIOP 0\n#define TAO_HAS_DIOP 0\n#define TAO_HAS_COIOP 1\n#define TAO_HAS_SHMIOP 0\n'"/>
    <command name="file_manipulation" options="type=create file=ATCD/ACE/include/makeinclude/platform_macros.GNU output='boost=1\nssl=1\nprobe=1\nqt4=1\nQTDIR=/usr\nPLATFORM_QT_LDFLAGS = -L$(QTDIR)/lib64\n\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\nCCFLAGS += -pedantic -Wno-long-long -Wno-variadic-macros -Wwrite-strings -Wcast-align\n\n'" />
    <command name="file_manipulation" options="type=create file=ATCD/ACE/bin/MakeProjectCreator/config/default.features output='boost=1\nssl=1\nqt4=1\n\n'" />
    <command name="file_manipulation" options="type=create file=ATCD/ACE/TAO_COIOP.mwc output='workspace {\nace\napps/gperf/src\n$(TAO_ROOT)/TAO_IDL\n$(TAO_ROOT)/tao\n$(TAO_ROOT)/tests/COIOP\n}\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_openssl_version"/>
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="$ACE_ROOT/TAO_COIOP.mwc -type gnuautobuild" />

    <command name="make"              options="-k" />

    <command name="auto_run_tests"    options="-l TAO/tests/COIOP/COIOP.lst" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /.svn/ --exclude /ATCD/ --exclude /MPC/ --include *.txt --include *.html --exclude ** ./ qnap.remedy.nl::Buildlogs/fc16_COIOP" />
</autobuild>
