<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/home/build/ACE/GCC/ACE_wrappers"/>
        <environment name="TAO_ROOT"        value="/home/build/ACE/GCC/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"       value="/home/build/ACE/GCC/ACE_wrappers/TAO/CIAO"/>
        <environment name="DDS_ROOT"        value="/home/build/ACE/GCC/ACE_wrappers/TAO/DDS"/>
        <environment name="LD_LIBRARY_PATH" value="/usr/local/lib64:/home/build/ACE/GCC/ACE_wrappers/lib" />
        <environment name="CVSROOT"         value=":ext:jwillemsen@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />

        <variable name="root"     value="/home/build/ACE/GCC/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/GCC/" />
        <variable name="configs"  value="Linux Exceptions SSL" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="cvs"               options="-z 9 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_MPC"/>
    <command name="cvs"               options="-z 9 -q checkout -P TAO_DDS"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define TAO_USE_DOTTED_DECIMAL_ADDRESSES 1\n#define ACE_HAS_LINUX_NPTL\n#include \x22ace/config-linux.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='no_hidden_visibility=1\nbuildbits=64\noptimize=0\ncidl=1\nssl=1\ninline=0\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='boost=1\nipv6=1\ncidl=1\nssl=1\nzlib=1\n'" />

    <command name="anonymous_shell"   options="scp -C johnnyw@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/CIDLC/gnu-linux/cidlc ACE_wrappers/TAO/CIAO/bin" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_cidlc_version" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k realclean" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="generate_workspace" options="-exclude TAO/TAO_*.mwc,TAO/CIAO/CIAO_*.mwc -include $DDS_ROOT" />

    <command name="make"              options="-k" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/SuSE_x86_64_gcc" />
</autobuild>
