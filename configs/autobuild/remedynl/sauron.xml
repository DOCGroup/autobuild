<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/aceroot/ACE_wrappers"/>
        <environment name="TAO_ROOT"        value="/aceroot/ACE_wrappers/TAO"/>
        <environment name="MPC_ROOT"        value="/aceroot/ACE_wrappers/MPC"/>
        <environment name="CIAO_ROOT"       value="/aceroot/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"       value="/aceroot/ACE_wrappers/TAO/DAnCE"/>
        <environment name="LD_LIBRARY_PATH" value="/aceroot/ACE_wrappers/lib" />
        <environment name="PATH"            value="/gnu/bin:/aceroot/ACE_wrappers/lib" type="prefix" />
        <environment name="TMPDIR"          value="/aceroot"/>
        <environment name="GNV_CC_INCLUDE_LENGTH_MAX" value="4096"/>
        <environment name="GNV_CC_DEFINE_LENGTH_MAX" value="4096"/>
        <environment name="GNV_LINK_RELATIVE_NAMES" value="1"/>
        <environment name="GNV_LINK_AUTO_SYMVEC_NODUPS" value="1"/>
        <environment name="SSL$LIBCRYPTO"   value="SYS$SHARE:SSL$LIBCRYPTO_SHR32.EXE"/>
        <environment name="SSL$LIBSSL"      value="SYS$SHARE:SSL$LIBSSL_SHR32.EXE"/>

        <variable name="root"     value="/aceroot/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/aceroot/" />
        <variable name="configs"  value="OpenVMS FIXED_BUGS_ONLY" />
    </configuration>

    <command name="status"            options="on" />

    <command name="log"               options="On" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler"    options="deccxx" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k realclean" />

    <command name="shell"             options="bash -c \x22cp /dnfs1/openvms/v82ia64/ace_vms_update.tar .\x22" />
    <command name="shell"             options="bash -c \x22gnutar -xf ace_vms_update.tar -g /dev/null\x22" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-openvms.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='INSLIB = $(ACE_ROOT)/lib\ndebug=1\ninline=0\nssl=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_openvms.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ssl=1\nexclude_inet=1\n'" />

    <command name="generate_workspace" options="-exclude TAO/CIAO -exclude TAO/DAnCE -type gnuautobuild -value_template vms_old_make=1" />

    <command name="make"              options="-k" />

    <command name="auto_run_tests"    options=" -a -o -t" />

    <command name="log"               options="off" />

    <command name="process_logs"      options="move prettify clean=5 index" />

    <command name="status"            options="off" />
</autobuild>
