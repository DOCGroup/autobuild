<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"     value="D:\ACE\VC71\ACE_wrappers" />
        <environment name="TAO_ROOT"     value="D:\ACE\VC71\ACE_wrappers\TAO"/>
        <environment name="CVSROOT"      value=":ext:jwillemsen@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"      value="plink" />
        <environment name="PATH"         value="D:\Program Files\Microsoft Visual Studio .NET 2003\Common7\IDE;D:\Program Files\Microsoft Visual Studio .NET 2003\Vc7\bin;D:\ACE\VC71\ACE_wrappers\bin" type="prefix" />

        <variable name="configs"  value="Win32 VC71" />
        <variable name="root"     value="D:\ACE\VC71\" />
	<variable name="log_file" value="log.txt" />
        <variable name="log_root" value="D:\ACE\VC71\" />
        <variable name="name"     value="Win2K VS.NET 2003" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="log"               options="ON" />

    <command name="cvs"               options="-z9 -q checkout -P ACE_wrappers" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n#include \x22ace/config-win32.h\x22\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="msvc" />
    <command name="print_ace_config" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-type vc71 ace/ace.mwc" />
    <command name="generate_workspace" options="-type vc71 tests/tests.mwc" />
    <command name="vc7make"           options="/rebuild debug ace/ace.sln" />
    <command name="vc7make"           options="/rebuild debug tests/tests.sln" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean=1 index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="plink bugzilla@charanga.cs.wustl.edu rm .www-docs/auto_compile_logs/remedy.nl_Win2K_VC71/* -f" />
    <command name="shell"             options="pscp -C *.txt *.html bugzilla@charanga.cs.wustl.edu:.www-docs/auto_compile_logs/remedy.nl_Win2K_VC71" />
</autobuild>
