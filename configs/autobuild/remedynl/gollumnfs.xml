<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/dnfs1/openvms/v82x/ACE_wrappers"/>
        <environment name="TAO_ROOT"        value="/dnfs1/openvms/v82x/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"       value="/dnfs1/openvms/v82x/ACE_wrappers/TAO/CIAO"/>
        <environment name="LD_LIBRARY_PATH" value="/dnfs1/openvms/v82x/ACE_wrappers/lib" />
        <environment name="PATH"            value="/gnu/bin:/dnfs1/openvms/v82x/ACE_wrappers/lib" type="prefix" />
        <environment name="GNV_CC_INCLUDE_LENGTH_MAX" value="4096"/>
        <environment name="GNV_CC_DEFINE_LENGTH_MAX" value="4096"/>

        <variable name="root"     value="/dnfs1/openvms/v82x/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/dnfs1/openvms/v82x/" />
        <variable name="configs"  value="Exceptions OpenVMS" />

    </configuration>

    <command name="status"            options="on" />

    <command name="log"               options="On" />

    <command name="print_os_version" />
    <command name="check_compiler"    options="deccxx" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />


    <command name="make"              options="-k -C ace realclean" />
    <command name="make"              options="-k -C tests realclean" />
    <command name="make"              options="-k -C apps/gperf realclean" />
    <command name="make"              options="-k -C TAO/TAO_IDL realclean" />
    <command name="make"              options="-k -C TAO/tao realclean" />
    <command name="make"              options="-k -C TAO/tests realclean" />

    <!--
    <command name="make"              options="-k -C ace" />
