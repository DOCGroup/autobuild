<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"     value="/root/ACE/host/ACE_wrappers"/>
        <environment name="TAO_ROOT"     value="/root/ACE/host/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"    value="/root/ACE/host/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"   value="/root/ACE/host/ACE_wrappers/TAO/DAnCE"/>
        <environment name="LD_LIBRARY_PATH" value="/root/ACE/host/ACE_wrappers/lib" />
        <environment name="PATH"         value="/usr/bin" type="prefix"/>
        <environment name="RSYNC_RSH"       value="/usr/bin/ssh" />

        <variable name="root"     value="/root/ACE/host/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/root/ACE/host/" />
        <variable name="configs"  value="Linux Exceptions NOXERCES" />
    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32003" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="log"               options="ON" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />
    <command name="svn"               options="status . " />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define TAO_USE_DOTTED_DECIMAL_ADDRESSES 1\n#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='debug=0\ninline=0\nboost=0\noptimize=1\nxerces2=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/ACE_Host.mwc output='workspace {\nace\napps/gperf/src\nTAO/TAO_IDL\nTAO/CIAO/tools/IDL3_to_IDL2\nTAO/DAnCE/tools/XML\nTAO/CIAO/tools/IDL3_to_XMI\n}\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='boost=0\nxerces2=1\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="ACE_Host.mwc -type gnuautobuild" />

    <command name="make"              options="-k -j 20" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /.svn/ --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ jwillemsen@naboo.dre.vanderbilt.edu:/web/users/jwillemsen/ibmcellbuild_host" />
</autobuild>

