<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/home/build/ACE/dds4ccm/ACE_wrappers"/>
        <environment name="TAO_ROOT"        value="/home/build/ACE/dds4ccm/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"        value="/home/build/ACE/dds4ccm/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"        value="/home/build/ACE/dds4ccm/ACE_wrappers/TAO/CIAO/DAnCE">
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/dds4ccm/ACE_wrappers/lib:/usr/local/lib" />
        <environment name="SSL_ROOT"        value="/usr"/>

        <variable name="root"     value="/home/build/ACE/dds4ccm/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/dds4ccm/" />
        <variable name="configs"  value="Linux Exceptions NOXERCES ZLIB SSL ZIOP" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32003" />
    <command name="log"               options="on" />

    <command name="svn"               options="co https://svn.dre.vanderbilt.edu/DOC/Middleware/branches/dds_ports/sets/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define TAO_HAS_ZIOP 1\n#define ACE_INITIALIZE_MEMORY_BEFORE_USE\n#include \x22ace/config-linux.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='mcpp=1\nssl=1\nzlib=1\ncidl=1\ninline=0\nboost=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='mcpp=1\nxerces3=1\nboost=1\ncidl=0\nzlib=1\nssl=1\nbzip2=1\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_openssl_version"/>
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-C TAO/CIAO -k realclean find=*akefile" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="generate_workspace" options="TAO/CIAO/CIAO_TAO.mwc -type gnuace" />

    <command name="make"              options="-C TAO/CIAO -k" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=200 move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/faragorn_dds4ccm" />
</autobuild>
