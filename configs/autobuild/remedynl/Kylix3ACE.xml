<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/build/ACE/KylixACE/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/home/build/ACE/KylixACE/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/usr/local/kylix3/bin:/home/build/ACE/KylixACE/ACE_wrappers/lib" />
        <environment name="PATH"            value="/home/build/ACE/KylixACE/ACE_wrappers/bin:/bin:/usr/local/kylix3/bin:/usr/local/kylix3/lib:/usr/local/bin:/usr/bin" />
        <environment name="CVSROOT"         value=":ext:jwillemsen@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />

        <variable name="root"     value="/home/build/ACE/KylixACE/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/KylixACE/" />
        <variable name="configs"  value="Linux" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />
    <!-- Delete all the Makefiles so the cvs checkout won't complain. -->
    <command name="shell"             options="find ACE_wrappers -name 'Makefile*' -exec rm '{}' ';'" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_wrappers" />
    <!-- Now, delete them again to insure a clean slate. -->
    <command name="shell"             options="find ACE_wrappers -name 'Makefile*' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_linux_borland.GNU\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="kylix" />
    <command name="check_linker" options="ilink" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <!-- Uses ACE.mwc -->
    <command name="generate_makefile" options="-recurse=TAO,vc7_nightly.mwc -make_coexistence" />

    <command name="make"              options="-k realclean" />

    <command name="make"              options="-k" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=10 move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="ssh bugzilla@charanga.cs.wustl.edu rm .www-docs/auto_compile_logs/remedy.nl_SuSE81_Kylix3ACE/* -f" />
    <command name="shell"             options="scp -C *.txt *.html bugzilla@charanga.cs.wustl.edu:.www-docs/auto_compile_logs/remedy.nl_SuSE81_Kylix3ACE" />

</autobuild>
