<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"         value="D:\ACE_wrappers" />
        <environment name="Path"         value="D:\progra~1\borland\cbuild~\bin;D:\progra~\borland\cbuild~\lib;D:\progra~\borland\cbuild~1\projects\bpl;D:\ACE_wrappers\bin\Dynamic\Debug;D:\ACE_wrappers\bin\Dynamic\Release;" type="prefix" />

	<environment name="BUILD"  value="nightlybuild" />
	<environment name="DEBUG"  value="1" />
	<environment name="DYNAMIC"  value="1" />
	<environment name="BCBVER"  value="6" />

        <variable name="root"     value="D:\" />
	<variable name="log_file" value="log.txt" />
        <variable name="log_root" value="D:\" />
        <variable name="name"     value="WinXP BCB6 Debug" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="make"         options=" -i -f Makefile.bor -DDEBUG=1 realclean" />

    <command name="log"               options="ON" />

    <command name="cvs"               options="-q checkout -P ACE_wrappers" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n#define TAO_HAS_SMART_PROXIES 1\n#define TAO_HAS_AMI 1\n#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n#define TAO_HAS_INTERFACE_REPOSITORY 1\n#define TAO_HAS_RT_CORBA 1\n#include \x22ace/config-win32.h\x22\n'" />

    <command name="print_ace_config" />

    <command name="make"         options=" -i -f Makefile.bor -DDEBUG=1 all" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean=1 index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="pscp *.txt *.html charanga:.www-docs/auto_compile_logs/remedy.nl_WinXP_BCB6_Dynamic_Debug" />
</autobuild>




