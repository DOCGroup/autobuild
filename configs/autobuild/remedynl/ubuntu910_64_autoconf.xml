<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/home/build/ACE/autoconf/ACE_wrappers"/>
        <environment name="TAO_ROOT"        value="/home/build/ACE/autoconf/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"        value="/home/build/ACE/autoconf/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"        value="/home/build/ACE/autoconf/ACE_wrappers/TAO/CIAO/DAnCE"/>
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/autoconf/ACE_wrappers/lib:/usr/local/lib" />
        <environment name="SSL_ROOT"        value="/usr"/>

        <variable name="root"     value="/home/build/ACE/autoconf" />
        <variable name="project_root" value="/home/build/ACE/autoconf/" />
        <variable name="build_name"   value="ub910_64" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/autoconf" />
        <variable name="configs"  value="Linux Exceptions SSL BOOST" />
    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32003" />
    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE ." />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_autotools_version" />
    <command name="print_ace_config" />
    <command name="print_openssl_version"/>
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="shell"             options="cd ACE_wrappers; autoreconf --install --force -I m4" />
    <command name="shell"             options="mkdir ACE_wrappers/build" />
    <command name="shell"             options="cd ACE_wrappers/build; ../configure" />
    <command name="make"              options="dir=build -j 2 -k" />

    <command name="auto_run_tests"    options="dir build -a" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/ubuntu_910_64_autoconf" />
</autobuild>
