    <command name="print_os_version" />
    <command name="check_compiler" options="msvc" />
    <command name="print_ace_config" />
    <command name="print_cidlc_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-type vc9 -recurse -exclude TAO/TAO_*.mwc,TAO/CIAO/CIAO_*.mwc"/>

    <command name="win32make"          options="msvc_mpc_auto_compile -vc9 -ALL -Debug -k" />

    <command name="auto_run_tests"     options="-a -o -t -s \x22C:\ACE\autobuild\win32sandbox\sandbox.exe -t 5400000\x22" />

    <command name="log"                options="OFF" />
    <command name="process_logs"       options="move prettify clean index" />
    <command name="status"             options="off" />
    <command name="shell"              options="c:\cygwin\bin\rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/VC90_IPV6" />
