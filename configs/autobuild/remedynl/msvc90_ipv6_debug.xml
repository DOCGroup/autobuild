    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define _WIN32_WINNT 0x0501\n#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n#include \x22ace/config-win32.h\x22\n'" />
