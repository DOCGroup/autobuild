<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/build/ACE/Kylix/ACE_wrappers" />
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/Kylix/ACE_wrappers/ace" />
        <environment name="CVSROOT"         value=":ext:jwillemsen@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />

        <variable name="root"     value="/home/build/ACE/Kylix/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/Kylix/" />
        <variable name="configs"  value="Linux" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />
    <command name="cvs"               options="-z9 -q checkout -P ACE_wrappers" />

    <command name="shell"             options="/usr/local/kylix3/bin/kylixpath" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux-common.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_linux_borland.GNU\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="kylix" />
    <command name="print_make_version" />
    <command name="print_ace_config" />
    <command name="print_perl_version" />

    <command name="make"              options="-k reverseclean" />
    <command name="make"              options="-C ace" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=1 move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="ssh bugzilla@charanga.cs.wustl.edu rm .www-docs/auto_compile_logs/remedy.nl_SuSE81_Kylix3/* -f" />
    <command name="shell"             options="scp -C *.txt *.html bugzilla@charanga.cs.wustl.edu:.www-docs/auto_compile_logs/remedy.nl_SuSE81_Kylix3" />

</autobuild>
