<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/cygdrive/c/ACE/GCC/ACE_wrappers"/>
        <environment name="TAO_ROOT"        value="/cygdrive/c/ACE/GCC/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/cygdrive/c/ACE/GCC/ACE_wrappers/lib" />
        <environment name="PATH"            value="/cygdrive/c/cygwin/bin:/cygdrive/c/ACE/GCC/ACE_wrappers/lib" type="prefix" />
        <environment name="RSYNC_RSH"       value="ssh" />

        <variable name="root"     value="/cygdrive/c/ACE/GCC/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/cygdrive/c/ACE/GCC/" />
        <variable name="configs"  value="Cygwin Exceptions" />

    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32001" />

    <command name="log"               options="on" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-cygwin32.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='inline=0\ninclude $(ACE_ROOT)/include/makeinclude/platform_cygwin32.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output=''" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-exclude TAO -type gnuace" />

    <command name="make"              options="-k" />

    <command name="auto_run_tests"     options="-a -s \x22C:\\ACE\\autobuild\\win32sandbox\\sandbox.exe -t 5400000\x22" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/Cygwin" />
</autobuild>
