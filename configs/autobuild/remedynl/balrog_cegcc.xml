<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/home/build/ACE/cegccx86/ACE_wrappers"/>
        <environment name="TAO_ROOT"        value="/home/build/ACE/cegccx86/ACE_wrappers/TAO"/>
        <environment name="PATH"            value="/home/build/cegcc/bin/" type="prefix" />
        <environment name="SSL_ROOT"        value="/usr"/>

        <variable name="root"     value="/home/build/ACE/cegccx86/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/cegccx86/" />
        <variable name="configs"  value="Linux Exceptions NOXERCES ZLIB SSL ZIOP" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32003" />
    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO ." />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="i386-mingw32ce-g++" />
    <command name="print_ace_config" />
    <command name="print_openssl_version"/>
    <command name="print_cidlc_version" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="generate_workspace" options="-exclude TAO -type gnuace" />

    <command name="make"              options="-k" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/cegccx86" />
</autobuild>
