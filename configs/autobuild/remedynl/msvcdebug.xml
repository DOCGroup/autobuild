<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"         value="C:\ACE\msvc6\ACE_wrappers" />
        <environment name="TAO_ROOT"         value="C:\ACE\msvc6\ACE_wrappers\TAO"/>
        <environment name="CVSROOT"          value=":ext:jwillemsen@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"          value="plink" />

        <variable name="root"     value="C:/ACE/msvc6/" />
	<variable name="log_file" value="log.txt" />
        <variable name="log_root" value="C:/ACE/msvc6/" />
        <variable name="name"     value="WinXP Lib Debug" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="win32make"         options="msvc_auto_compile -DLL -Debug -u -k -clean" />

    <command name="log"               options="ON" />

    <command name="cvs"               options="-z 9 -q checkout -P ACE_wrappers" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n#include \x22ace/config-win32.h\x22\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="msvc" />
    <command name="print_ace_config" />

    <command name="win32make"         options="msvc_auto_compile -DLL -Debug -ACE -u -k" />
    <command name="win32make"         options="msvc_auto_compile -DLL -Debug -CORE -u -k" />
    <command name="win32make"         options="msvc_auto_compile -DLL -Debug -TAO -u -k" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean=1 index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="plink bugzilla@charanga.cs.wustl.edu rm .www-docs/auto_compile_logs/remedy.nl_WinXP_MSVC6/* -f" />
    <command name="shell"             options="pscp -C *.txt *.html bugzilla@charanga.cs.wustl.edu:.www-docs/auto_compile_logs/remedy.nl_WinXP_MSVC6" />
</autobuild>
