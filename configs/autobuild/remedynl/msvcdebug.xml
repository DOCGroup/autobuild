<autobuild>
    <configuration>
        <environment name="ACE_ROOT"         value="C:\ACE\MSVC6dd\ACE_wrappers" />
        <environment name="TAO_ROOT"         value="C:\ACE\MSVC6dd\ACE_wrappers\TAO"/>
        <environment name="Path"             value="C:\VC71_dlls;C:\ACE\MSVC6dd\ACE_wrappers\bin;C:\ACE\MSVC6dd\ACE_wrappers\lib;C:\Perl\bin;C:\cygwin\bin;C:\openssl-0.9.7d\out32dll" type="prefix" />
        <environment name="CVSROOT"          value=":ext:jwillemsen@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"          value="ssh" />
        <environment name="SSL_ROOT"         value="C:\openssl-0.9.7d" />
        <environment name="XERCESCROOT"      value="C:\xerces-c-src_2_5_0" />

        <variable name="root"     value="C:/ACE/MSVC6dd/" />
	<variable name="log_file" value="log.txt" />
        <variable name="log_root" value="C:/ACE/MSVC6dd/" />
        <variable name="name"     value="WinXP DLL Debug" />
        <variable name="configs"  value="Win32 SANDBOX Exceptions SSL" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="win32make"         options="msvc_mpc_auto_compile -ALL -Debug -k -clean" />

    <command name="log"               options="ON" />

    <command name="shell"             options="find ACE_wrappers -iname '*.ds[pw]' -exec rm '{}' ';'" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n#include \x22ace/config-win32.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='cidl=1\nrwho=0\nqos=1\nmfc=1\nssl=1\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="msvc" />
    <command name="print_ace_config" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-exclude TAO/CIAO/CIDLC -recurse -make_coexistence -type vc6" />

    <command name="anonymous_shell"   options="scp -C willemsenj@tao.dre.vanderbilt.edu:/web/users/isisbuilds/CIDLC/Win32/cidlc.exe ACE_wrappers/TAO/CIAO/bin" />
    <command name="anonymous_shell"   options="chmod 777 ACE_wrappers/TAO/CIAO/bin/cidlc.exe" />

    <command name="win32make"         options="msvc_mpc_auto_compile -ALL -Debug -k" />

    <command name="auto_run_tests"    options="-s \x22c:\ace\autobuild\win32sandbox\sandbox.exe -t 1200000\x22" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="ssh willemsenj@tao.dre.vanderbilt.edu rm /web/users/remedynl/MSVC6dd/* -f" />
    <command name="shell"             options="scp -C *.txt *.html willemsenj@tao.dre.vanderbilt.edu:/web/users/remedynl/MSVC6dd" />
    <command name="shell"             options="ssh willemsenj@tao.dre.vanderbilt.edu chmod 755 /web/users/remedynl/MSVC6dd/*" />
</autobuild>
