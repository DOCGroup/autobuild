<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/build/ACE/linuxnonet/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/home/build/ACE/linuxnonet/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"        value="/home/build/ACE/linuxnonet/ACE_wrappers/TAO/CIAO"/>
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/linuxnonet/ACE_wrappers/lib" />
        <environment name="RSYNC_RSH"       value="ssh" />

        <variable name="root"     value="/home/build/ACE/linuxnonet/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/linuxnonet/" />
        <variable name="configs"  value="Linux STATIC NO_MCAST ACE_FOR_TAO NO_NETWORK" />

    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32001" />

    <command name="log"               options="on" />

    <command name="make"              options="-k realclean" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_LACKS_NETWORKING\n#include \x22ace/config-linux.h\x22\n#define TAO_HAS_IIOP 0\n#define TAO_HAS_UIOP 0\n#define TAO_HAS_DIOP 0\n#define TAO_HAS_COIOP 1\n#define TAO_HAS_SHMIOP 0\n#undef ACE_HAS_WCHAR\n#define ACE_LACKS_UNIX_SIGNALS\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='ace_for_tao=1\nstatic_libs_only=1\ninline=0\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ace_for_tao=1\nssl=0\ncidl=0\nrwho=0\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/linuxnonet.mwc output='workspace {\nace\napps/gperf/src\nTAO/TAO_IDL\nTAO/tao\nTAO/tests/COIOP\ntests\nTAO/orbsvcs/orbsvcs/Svc_Utils.mpc\nTAO/orbsvcs/orbsvcs/CosNaming.mpc\nTAO/orbsvcs/orbsvcs/CosNaming_Skel.mpc\nTAO/orbsvcs/orbsvcs/CosNaming_Serv.mpc\nTAO/orbsvcs/tests/COIOP_Naming_Test\n}\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="linuxnonet.mwc -type gnuace" />

    <command name="make"              options="-j 5 -k" />

    <command name="auto_run_tests"    options="-a -l $ACE_ROOT/TAO/tests/COIOP/COIOP.lst" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/RHEL5_linuxnonet" />
</autobuild>
