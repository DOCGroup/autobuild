<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"         value="C:\ACE\MSVC6ddu\ACE_wrappers" />
        <environment name="TAO_ROOT"         value="C:\ACE\MSVC6ddu\ACE_wrappers\TAO"/>
        <environment name="Path"             value="C:\ACE\MSVC6ddu\ACE_wrappers\bin;C:\ACE\MSVC6ddu\ACE_wrappers\lib;C:\Perl\bin;C:\cygwin\bin;" type="prefix" /> 
        <environment name="CVSROOT"          value=":ext:jwillemsen@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"          value="ssh" />

        <variable name="root"     value="C:/ACE/MSVC6ddu/" />
	<variable name="log_file" value="log.txt" />
        <variable name="log_root" value="C:/ACE/MSVC6ddu/" />
        <variable name="name"     value="WinXP DLL Debug WChar" />
        <variable name="configs"   value="Win32 SANDBOX Exceptions" /> 
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="win32make"         options="msvc_mpc_auto_compile -ALL -Debug -k -clean" />

    <command name="log"               options="ON" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define UNICODE\n#define _UNICODE\n#define ACE_HAS_TOKENS_LIBRARY\n#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n#include \x22ace/config-win32.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='rwho=0\nqos=1\nmfc=1\n'" />

    <command name="shell"             options="find ACE_wrappers -iname '*.ds[pw]' -exec rm '{}' ';'" /> 
    <command name="cvs"               options="-z 9 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_MPC"/>

    <command name="print_os_version" />
    <command name="check_compiler" options="msvc" />
    <command name="print_ace_config" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-exclude TAO/CIAO -recurse -make_coexistence -type vc6" /> 

    <command name="win32make"         options="msvc_mpc_auto_compile -ALL -Debug -k" />

    <command name="auto_run_tests"    options="-a -s \x22c:\ace\autobuild\win32sandbox\sandbox.exe -t 1200000\x22" /> 

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="ssh willemsenj@tao.dre.vanderbilt.edu rm /web/users/willemsenj/MSVC6ddu/* -f" />
    <command name="shell"             options="scp -C *.txt *.html willemsenj@tao.dre.vanderbilt.edu:/web/users/willemsenj/MSVC6ddu" />
</autobuild>
