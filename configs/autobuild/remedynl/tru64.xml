<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/usr/users/build/ACE/nightly/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/usr/users/build/ACE/nightly/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/usr/users/build/ACE/nightly/ACE_wrappers/lib:/usr/local/bin"/>
        <environment name="CVSROOT"         value=":ext:jwillemsen@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />

        <variable name="root"     value="/usr/users/build/ACE/nightly" />
	<variable name="log_file" value="log.txt" />
        <variable name="log_root" value="/usr/users/build/ACE/nightly" />
        <variable name="configs"  value="Exceptions" />
        <variable name="name"     value="Tru64" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="log"               options="ON" />

    <!-- Delete all the Makefiles so the cvs checkout won't complain. -->
    <command name="shell"             options="find ACE_wrappers -name 'GNUMakefile*' -exec rm '{}' ';'" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_MPC"/>

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-tru64.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_tru64_cxx.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ec_typed_events=1\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="cxx" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <!-- Uses ACE.mwc -->
    <command name="generate_workspace" options="-exclude tests,TAO -hierarchy -make_coexistence" />

    <command name="make"              options="-k reverseclean" />

    <command name="make"              options="-k" />

    <command name="auto_run_tests"    options="" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean=4 index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="ssh willemsenj@tao.dre.vanderbilt.edu rm /web/users/willemsenj/Tru64/* -f" />
    <command name="shell"             options="scp -C *.txt *.html willemsenj@tao.dre.vanderbilt.edu:/web/users/willemsenj/Tru64" />
</autobuild>


