<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/nfs/galadriel/VxWorks67rkp/ACE_wrappers"/>
        <environment name="TAO_ROOT"        value="/nfs/galadriel/VxWorks67rkp/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"        value="/nfs/galadriel/VxWorks67rkp/ACE_wrappers/TAO/CIAO"/>
        <environment name="HOST_ROOT"        value="/nfs/galadriel/VxWorks/host/ACE_wrappers"/>
        <environment name="LD_LIBRARY_PATH" value="/nfs/galadriel/VxWorks67rkp/ACE_wrappers/lib:/usr/local/lib" />

        <variable name="root"     value="/nfs/galadriel/VxWorks67rkp/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/nfs/galadriel/VxWorks67rkp/" />
        <variable name="configs"  value="Linux Exceptions NOXERCES" />

    </configuration>

    <command name="eval"              options="/home/build/WindRiver/wrenv.sh -p vxworks-6.7 -o print_env"/>
    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32003" />
    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_HAS_IP_MULTICAST\n#include \x22ace/config-vxworks.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='pthread=0\nrtp=0\ndebug=0\nstatic_libs=1\ninline=0\noptimize=0\nTOOL = gnu\npthread=1\nTAO_IDLFLAGS += -g $(HOST_ROOT)/bin/ace_gperf\nCPU = PPC32\ninclude $(ACE_ROOT)/include/makeinclude/platform_vxworks.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='cidl=1\n'" />

    <command name="anonymous_shell"   options="scp -C johnnyw@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/CIDLC/gnu-linux/cidlc ACE_wrappers/TAO/CIAO/bin" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="c++ppc" />
    <command name="print_ace_config" />
    <command name="print_cidlc_version" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="generate_workspace" options="-exclude TAO -type gnuace" />

    <command name="make"              options="-k" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/VxWorks67rkp" />
</autobuild>
