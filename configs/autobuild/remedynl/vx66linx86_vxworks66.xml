<!-- $Id$ -->
<autobuild>
    <configuration>
      <environment name="ACE_ROOT"        value="/nfs/galadriel/VxWorks66lin_x86/ACE_wrappers"/>
      <environment name="TAO_ROOT"        value="/nfs/galadriel/VxWorks66lin_x86/ACE_wrappers/TAO"/>
      <environment name="CIAO_ROOT"        value="/nfs/galadriel/VxWorks66lin_x86/ACE_wrappers/TAO/CIAO"/>
      <environment name="HOST_ROOT"        value="/home/build/ACE/VxWorks/host/ACE_wrappers"/>
      <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/VxWorks/host/ACE_wrappers/lib:/usr/local/lib" />
        <environment name="ACE_RUN_VX_TGTHOST" value="10.2.0.73"/>
        <environment name="ACE_RUN_VX_TGTSVR_ROOT" value="/nfsace/galadriel/VxWorks66lin_x86/ACE_wrappers"/>
        <environment name="ACE_TEST_VERBOSE" value="1"/>
        <environment name="ACE_RUN_VX_IBOOT" value="10.2.0.132:80"/>
        <environment name="ACE_RUN_VX_REBOOT_TIME" value="35"/>
        <environment name="ACE_RUN_VX_TGT_REBOOT"      value="1"/>

        <variable name="root"     value="/nfs/galadriel/VxWorks66lin_x86/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/nfs/galadriel/VxWorks66lin_x86/" />
        <variable name="configs"  value="VxWorks_RTP Exceptions STATIC VxWorks64 NOXERCES" />

    </configuration>

    <command name="eval"              options="/home/build/WindRiver/wrenv.sh -p vxworks-6.6 -o print_env"/>
    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32002" />
    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_HAS_IP_MULTICAST\n#include \x22ace/config-vxworks.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='static_libs=1\ndebug=1\ninline=0\noptimize=0\nTOOL = gnu\nCPU = PENTIUM4\ninclude $(ACE_ROOT)/include/makeinclude/platform_vxworks.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output=''" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="ccpentium" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="generate_workspace" options="-exclude TAO/CIAO -type gnuautobuild" />

    <command name="make"              options="-k" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/VxWorks66lin_x86" />
</autobuild>
