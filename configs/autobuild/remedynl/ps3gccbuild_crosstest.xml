<autobuild>
    <configuration>
        <environment name="PATH"              value="/opt/ppc64/toolchain/bin" type="prefix"/>
        <environment name="ACE_ROOT"          value="/home/build/ACE/crossbuild/ACE_wrappers"/>
        <environment name="TAO_ROOT"          value="/home/build/ACE/crossbuild/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"         value="/home/build/ACE/crossbuild/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"        value="/home/build/ACE/crossbuild/ACE_wrappers/TAO/CIAO/DAnCE"/>
        <environment name="HOST_ROOT"         value="/home/build/ACE/host/ACE_wrappers"/>
        <environment name="LD_LIBRARY_PATH"   value="/home/build/ACE/host/ACE_wrappers/lib:/usr/local/lib:/mnt/develop/RTI/ndds.4.5b.rev01/lib/cell64Linux2.6ppu4.1.1" />
        <environment name="NDDSHOME"          value="/mnt/develop/RTI/ndds.4.5b.rev01" />
        <environment name="NDDSARCHITECTURE"  value="cell64Linux2.6ppu4.1.1" />
        <environment name="DDS4CCM_DEFAULT_DOMAIN_ID"        value="33"/>
        <environment name="SSL_ROOT"          value="/opt/ppc64/sysroot/usr"/>
        <environment name="ZLIB_ROOT"         value="/opt/ppc64/sysroot/usr"/>
        <environment name="XERCESCROOT"       value="/opt/ppc64/sysroot/usr"/>
        <environment name="CROSS_COMPILE"     value="powerpc64-unknown-linux-gnu-"/>
        <environment name="ICECC_VERSION"     value="/home/build/linux-x86-gcc-4.4.2-linux-ppc.tar.gz" />
        
        <environment name="DOC_TEST_1"              value="DOC_TEST_1" />
        <environment name="DOC_TEST_1_ACE_ROOT"     value="/home/build/ACE/host/ACE_wrappers" />
        <environment name="DOC_TEST_1_OS"           value="local" />
        
        <environment name="default_OS"              value="remote" />
        <environment name="default_REMOTE_FILETEST" value="1" />
        <environment name="default_REMOTE_SHELL"    value="ssh build@ps3-3" />
        <environment name="default_EXTRA_ENV"       value="DDS4CCM_DEFAULT_DOMAIN_ID=33" />
        <environment name="default_HOSTNAME"        value="ps3-3.remedy.nl" />

        <variable name="root"         value="/home/build/ACE/crossbuild/" />
        <variable name="remote_root"  value="/home/build/ACE/crossbuild/ACE_wrappers" />
        <variable name="remote_shell" value="ssh build@ps3-3.remedy.nl" />
        <variable name="log_file"     value="build.txt" />
        <variable name="log_root"     value="/home/build/ACE/crosstest/" />
        <variable name="configs"      value="Linux Exceptions ZLIB SSL XERCES NO_IFR NO_IDL3_TO_XMI NDDS" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32003" />

    <command name="log"               options="on" />

    <command name="print_os_version" />
    <command name="print_remote_os_version" />
    <command name="print_env_vars" />
    <command name="print_perl_version" />
    <command name="print_perl_version" options="remote"/>
    <command name="print_openssl_version" options="remote"/>
    <command name="print_make_version" />
    <command name="check_compiler" options="powerpc64-unknown-linux-gnu-gcc" />
    <command name="print_ace_config" />

    <command name="auto_run_tests" options="-o"/>

    <!-- command name="anonymous_shell"   options="ssh build@ps3-3.remedy.nl killall ciao_componentserver" / -->

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean=5 move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/ps3gccbuild_crosstest" />
</autobuild>
