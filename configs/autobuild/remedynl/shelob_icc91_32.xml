<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/home/build/ACE/icc91_32/ACE_wrappers"/>
        <environment name="TAO_ROOT"        value="/home/build/ACE/icc91_32/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"        value="/home/build/ACE/icc91_32/ACE_wrappers/TAO/CIAO"/>
        <environment name="LD_LIBRARY_PATH" value="/opt/intel/cc/9.1.051/lib:/home/build/ACE/icc91_32/ACE_wrappers/lib:/usr/local/lib" />
        <environment name="PATH"            value="/opt/intel/cc/9.1.051/bin" type="prefix" />
        <environment name="SSL_ROOT"        value="/usr"/>

        <variable name="root"     value="/home/build/ACE/icc91_32/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/icc91_32/" />
        <variable name="configs"  value="Linux Exceptions NOXERCES ZLIB SSL" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32003" />
    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_HAS_BROKEN_THREAD_KEYFREE\n#define ACE_INITIALIZE_MEMORY_BEFORE_USE\n#include \x22ace/config-linux.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='ssl=1\nzlib=1\ncidl=1\ninline=0\nboost=0\nxerces=0\nCFLAGS+=-Wp64\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux_icc.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='boost=0\ncidl=1\nxerces=0\nzlib=1\nssl=1\n'" />

    <command name="anonymous_shell"   options="scp -C johnnyw@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/CIDLC/gnu-linux/cidlc ACE_wrappers/TAO/CIAO/bin" />

    <command name="print_os_version" />
    <command name="check_compiler" options="icc" />
    <command name="print_ace_config" />
    <command name="print_cidlc_version" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k realclean" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="generate_workspace" options="-exclude TAO/TAO_*.mwc,TAO/CIAO/CIAO_*.mwc -type gnuace" />

    <command name="make"              options="-k -j 9" />

    <command name="auto_run_tests"    options=" -a -o -t -C" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/RHEL5_icc91_32" />
</autobuild>
