<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/build/ACE/CIDLC/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/home/build/ACE/CIDLC/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"        value="/home/build/ACE/CIDLC/ACE_wrappers/TAO/CIAO"/>
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/CIDLC/ACE_wrappers/ace;/home/build/ACE/CIDLC/ACE_wrappers/lib" />

        <variable name="root"     value="/home/build/ACE/CIDLC/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/CIDLC/" />
        <variable name="configs"  value="Linux Exceptions" />
    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32001" />
    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='debug=0\nexceptions=1\ncidl=1\nboost=1\nstatic_link=1\n# Perform some stricter C/C++ checking\n\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='exceptions=1\ncidl=1\nboost=1\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />

    <command name="generate_workspace" options="dirs=TAO/CIAO/CIDLC CIDLC.mwc -type gnuace" />

    <command name="make"              options="-k realclean -C TAO/CIAO/CIDLC" />
    <command name="make"              options="-k -C TAO/CIAO/CIDLC" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />

    <command name="shell"             options="bzip2 -k -f ACE_wrappers/TAO/CIAO/CIDLC/cidlc" />
    <command name="shell"             options="scp ACE_wrappers/TAO/CIAO/bin/cidlc bczar@www.dre.vanderbilt.edu:/web/users/isisbuilds/CIDLC/gnu-linux-rite" />
    <command name="shell"             options="scp ACE_wrappers/TAO/CIAO/bin/cidlc.bz2 bczar@www.dre.vanderbilt.edu:/web/users/isisbuilds/CIDLC/gnu-linux-rite" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/linux_CIDLC" />
</autobuild>
