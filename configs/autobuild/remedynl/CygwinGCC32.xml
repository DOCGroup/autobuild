<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"     value="D:/Cygwin/ACE_wrappers" />
        <environment name="TAO_ROOT"     value="D:/Cygwin/ACE_wrappers/TAO"/>
        <environment name="CVSROOT"      value=":ext:wustl:/project/cvs-repository" />
        <environment name="CVS_RSH"      value="plink" />
        <environment name="Path"         value="c:\cygwin\bin;D:\Cygwin\ACE_wrappers\bin;D:\Cygwin\ACE_wrappers\lib;c:\putty" type="prefix" />
        <environment name="include"      value="" />
        <environment name="lib"          value="" />

	<environment name="BUILD"    value="all" />

        <variable name="root"     value="D:\Cygwin\" />
	<variable name="log_file" value="log.txt" />
        <variable name="log_root" value="D:\Cygwin\" />
        <variable name="name"     value="Cygwin GCC 3.2" />
        <variable name="configs"  value="Cygwin" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="log"               options="ON" />

    <!-- Delete all the Makefiles so the cvs checkout won't complain. -->
    <command name="shell"             options="find ACE_wrappers -name 'Makefile*' -exec rm '{}' ';'" />
    <command name="cvs"               options="-z 9 -q checkout -P ACE_wrappers" />
    <!-- Now, delete them again to insure a clean slate. -->
    <command name="shell"             options="find ACE_wrappers -name 'Makefile*' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define TAO_HAS_SMART_PROXIES 1\n#define TAO_HAS_AMI 1\n#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n#define TAO_HAS_INTERFACE_REPOSITORY 1\n#define TAO_HAS_RT_CORBA 1\n#include \x22ace/config-cygwin32.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='include $(ACE_ROOT)/include/makeinclude/platform_cygwin32.GNU\n'" />

    <command name="print_os_version" options="useuname" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <!-- Uses ACE.mwc -->
    <command name="generate_makefile" options="-recurse=TAO,vc7_nightly.mwc -make_coexistence" />
    <!-- Uses TAO/TAO.mwc -->
    <command name="generate_makefile" options="dirs=TAO -recurse=TAOACE.mwc,CIAO -make_coexistence" />

    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -C TAO realclean" />

    <command name="make"              options="-k" />
    <command name="make"              options="-k -C TAO/TAO_IDL" />
    <command name="make"              options="-k -C TAO idl_stubs" />
    <command name="make"              options="-k -C TAO" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean=4 index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="ssh bugzilla@charanga.cs.wustl.edu rm .www-docs/auto_compile_logs/remedy.nl_WinNT4_CygwinGCC32/* -f" />
    <command name="shell"             options="scp -C *.txt *.html bugzilla@charanga.cs.wustl.edu:.www-docs/auto_compile_logs/remedy.nl_WinNT4_CygwinGCC32" />
</autobuild>




