<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/aceroot/ACE_wrappers"/>
        <environment name="TAO_ROOT"        value="/aceroot/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"       value="/aceroot/ACE_wrappers/TAO/CIAO"/>
        <environment name="LD_LIBRARY_PATH" value="/aceroot/ACE_wrappers/lib" />
        <environment name="PATH"            value="/gnu/bin:/aceroot/ACE_wrappers/lib" type="prefix" />
        <environment name="GNV_CC_INCLUDE_LENGTH_MAX" value="4096"/>
        <environment name="GNV_CC_DEFINE_LENGTH_MAX" value="4096"/>
        <environment name="GNV_LINK_RELATIVE_NAMES" value="1"/>
        <environment name="GNV_LINK_AUTO_SYMVEC_NODUPS" value="1"/>
        <environment name="SSL$LIBCRYPTO"   value="SYS$SHARE:SSL$LIBCRYPTO_SHR32.EXE"/>
        <environment name="SSL$LIBSSL"      value="SYS$SHARE:SSL$LIBSSL_SHR32.EXE"/>

        <variable name="root"     value="/aceroot/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/aceroot/" />
        <variable name="configs"  value="Exceptions OpenVMS" />
        <variable name="test_excludes" value="TAO/examples TAO/utils" />

    </configuration>

    <command name="status"            options="on" />

    <command name="log"               options="On" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler"    options="deccxx" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k -C ace realclean find=*akefile" />
    <command name="make"              options="-k -C ACEXML realclean find=*akefile" />
    <command name="make"              options="-k -C Kokyu realclean find=*akefile" />
    <command name="make"              options="-k -C protocols realclean find=*akefile" />
    <command name="make"              options="-k -C tests realclean find=*akefile" />
    <command name="make"              options="-k -C apps/gperf realclean find=*akefile" />
    <command name="make"              options="-k -C TAO/TAO_IDL realclean find=*akefile" />
    <command name="make"              options="-k -C TAO/tao realclean find=*akefile" />
    <command name="make"              options="-k -C TAO/orbsvcs realclean find=*akefile" />
    <command name="make"              options="-k -C TAO/tests realclean find=*akefile" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-openvms.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='debug=0\ninline=1\nssl=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_openvms.GNU\n'" />
    
    <command name="make"              options="-k -C ace" />
    <command name="make"              options="-k -C ACEXML" />
    <command name="make"              options="-k -C Kokyu" />
    <command name="make"              options="-k -C protocols" />
    <command name="make"              options="-k -C tests" />
    <command name="make"              options="-k -C apps/gperf" />
    <command name="make"              options="-k -C TAO/TAO_IDL" />
    <command name="make"              options="-k -C TAO/tao" />
    <command name="make"              options="-k -C TAO/orbsvcs" />
    <command name="make"              options="-k -C TAO/tests" />

    <command name="log"               options="off" />

    <command name="process_logs"      options="move prettify clean index" />
    <command name="file_manipulation" options="type=delete file=.disable" />

    <command name="status"            options="off" />
</autobuild>
