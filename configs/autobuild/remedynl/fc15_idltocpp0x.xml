<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/build/ACE/versioned/ACE_wrappers" />
        <environment name="MPC_ROOT"        value="/home/build/ACE/versioned/ACE_wrappers/MPC" />
        <environment name="TAO_ROOT"        value="/home/build/ACE/versioned/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"        value="/home/build/ACE/versioned/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"        value="/home/build/ACE/versioned/ACE_wrappers/TAO/DAnCE"/>
        <environment name="IDL2Cxx0x_ROOT"        value="/home/build/ACE/IDLtoCPP0x/IDLtoCPP"/>
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/versioned/ACE_wrappers/lib" />
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/IDLtoCPP0x/IDLtoCPP/lib" type="prefix"/>
        <environment name="LD_LIBRARY_PATH" value="/home/build/ndds/ndds.4.5d.rev11/lib/x64Linux2.6gcc4.5.1/:" type="prefix"/>
        <environment name="NDDSHOME" value="/home/build/ndds/ndds.4.5d.rev11" />
        <environment name="NDDSARCHITECTURE" value="x64Linux2.6gcc4.5.1" />
        <environment name="DDS4CCM_DEFAULT_DOMAIN_ID"        value="39"/>
        <environment name="QT4_SUFFIX"      value="-qt4" />

        <variable name="root"     value="/home/build/ACE/IDLtoCPP0x/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/IDLtoCPP0x/" />
        <variable name="configs"  value="Linux SSL NDDS ZLIB" />
        <variable name="base"     value="IDLtoCPP" />

    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32002" />

    <command name="log"               options="on" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="svn"               options="co http://svn.remedy.nl/repos/idl2c++x0/trunk IDLtoCPP" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="IDLtoCPP -type gnuace" />

    <command name="make"              options="-k c++0x=1" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /.svn/ --exclude /IDLtoCPP*/ --include *.txt --include *.html --exclude ** ./ qnap.remedy.nl::Buildlogs/fc15_idltocpp0x" />
</autobuild>
