<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"     value="/export/home/build/ACE/host/ACE_wrappers"/>
        <environment name="TAO_ROOT"     value="/export/home/build/ACE/host/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"    value="/export/home/build/ACE/host/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"    value="/export/home/build/ACE/host/ACE_wrappers/TAO/CIAO/DAnCE"/>
        <environment name="LD_LIBRARY_PATH" value="/usr/local/lib:/export/home/build/ACE/host/ACE_wrappers/lib" type="prefix"/>
        <environment name="PATH" value="/usr/local/bin:/opt/gcc/bin:" type="prefix"/>

        <variable name="root"     value="/export/home/build/ACE/host/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/export/home/build/ACE/host/" />
        <variable name="configs"  value="Exceptions NOXERCES" />
        <variable name="svn_program"  value="/usr/local/bin/svn" />
    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32002" />

    <command name="log"               options="ON" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-sunos5.10.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='no_hidden_visibility=1\ndebug=1\ninline=0\ncidl=1\nboost=0\nxerces=0\noptimize=0\ninclude $(ACE_ROOT)/include/makeinclude/platform_sunos5_sunc++.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/ACE_Host.mwc output='workspace {\nace\napps/gperf/src\nTAO/TAO_IDL\nTAO/tao\n}\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='boost=0\ncidl=1\nxerces=0\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="sun_cc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="ACE_Host.mwc -type gnuace" />

    <command name="make"              options="-k -j 5" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean index" />
    <command name="status"            options="off" />
    <command name="shell"             options="/usr/local/bin/rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/VxWorks66sol_ppc_host_isengard" />
</autobuild>

