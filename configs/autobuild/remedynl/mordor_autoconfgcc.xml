<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/build/ACE/autoconfgcc/ACE_wrappers" />
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/autoconfgcc/ACE_wrappers/lib" />
        <environment name="PATH"            value="/opt/aCC/bin/:/usr/local/bin" type="prefix" />
        <environment name="RSYNC_RSH"       value="ssh" />

        <variable name="root"     value="/home/build/ACE/autoconfgcc" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/autoconfgcc" />
        <variable name="configs"  value="Exceptions" />
        <variable name="make_program"  value="gmake" />

    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32004" />

    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output=''" />

    <command name="print_os_version" />
    <command name="check_compiler" options="aCC" />
    <command name="print_ace_config" />
    <command name="print_autotools_version" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="shell"             options="cd ACE_wrappers; autoreconf --install --force -I m4" />
    <command name="shell"             options="rm -rf ACE_wrappers/build" />
    <command name="shell"             options="mkdir ACE_wrappers/build" />
    <command name="shell"             options="cd ACE_wrappers/build; ../configure CXX=aCC" />
    <command name="make"              options="dir=build clean -k" />
    <command name="make"              options="dir=build -j 2 -k" />

    <command name="log"               options="off" />

    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />

    <command name="shell"             options="scp -C *.txt *.html johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/HPUX_IA64_autoconf" />
</autobuild>
