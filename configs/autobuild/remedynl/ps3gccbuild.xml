<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="PATH"              value="/opt/ppc64/toolchain/bin" type="prefix"/>
        <environment name="ACE_ROOT"          value="/home/build/ACE/crossbuild/ACE_wrappers"/>
        <environment name="TAO_ROOT"          value="/home/build/ACE/crossbuild/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"         value="/home/build/ACE/crossbuild/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"        value="/home/build/ACE/crossbuild/ACE_wrappers/TAO/CIAO/DAnCE"/>
        <environment name="HOST_ROOT"         value="/home/build/ACE/host/ACE_wrappers"/>
        <environment name="LD_LIBRARY_PATH"   value="/home/build/ACE/host/ACE_wrappers/lib:/usr/local/lib:/mnt/develop/RTI/ndds.4.5b.rev01/lib/cell64Linux2.6ppu4.1.1" />
        <environment name="NDDSHOME"          value="/mnt/develop/RTI/ndds.4.5b.rev01" />
        <environment name="NDDSARCHITECTURE"  value="cell64Linux2.6ppu4.1.1" />
        <environment name="DDS4CCM_DEFAULT_DOMAIN_ID"        value="33"/>
        <environment name="SSL_ROOT"          value="/opt/ppc64/sysroot/usr"/>
        <environment name="ZLIB_ROOT"         value="/opt/ppc64/sysroot/usr"/>
        <environment name="XERCESCROOT"       value="/opt/ppc64/sysroot/usr"/>
        <environment name="CROSS_COMPILE"     value="powerpc64-unknown-linux-gnu-"/>

        <variable name="root"         value="/home/build/ACE/crossbuild/" />
        <variable name="remote_root"  value="/home/build/ACE/crossbuild/ACE_wrappers" />
        <variable name="remote_shell" value="ssh build@ps3-3.remedy.nl" />
        <variable name="log_file"     value="build.txt" />
        <variable name="log_root"     value="/home/build/ACE/crossbuild/" />
        <variable name="configs"      value="Linux Exceptions ZLIB SSL XERCES NO_IFR NO_IDL3_TO_XMI NDDS" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32003" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="log"               options="on" />

    <command name="svn"               options="co https://svn.dre.vanderbilt.edu/DOC/Middleware/sets/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='CPPFLAGS += -DACE_HAS_BUILTIN_ATOMIC_OP=1 -DACE_HAS_GCC_ATOMIC_BUILTINS=1\nCCFLAGS += -std=gnu++0x\nbuildbits=64\ndebug=1\nxerces2=1\nndds=1\ninline=0\nssl=1\nzlib=1\nboost=0\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ndds=1\nboost=0\nzlib=1\nssl=1\nxerces2=1\n'" />

    <command name="print_os_version" />
    <command name="print_remote_os_version" />
    <command name="print_env_vars" />
    <command name="print_perl_version" />
    <command name="print_perl_version" options="remote"/>
    <command name="print_openssl_version" options="remote"/>
    <command name="print_make_version" />
    <command name="check_compiler" options="powerpc64-unknown-linux-gnu-gcc" />
    <command name="print_ace_config" />

    <command name="generate_workspace" options="-type gnuautobuild -exclude apps/gperf/tests" />

    <command name="make"              options="-k -j 3" />

    <command name="auto_run_remote_tests" options="-extra_env 'DDS4CCM_DEFAULT_DOMAIN_ID=33'"/>

    <!-- command name="anonymous_shell"   options="ssh build@ps3-3.remedy.nl killall ciao_componentserver" / -->

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/ps3gccbuild" />
</autobuild>
