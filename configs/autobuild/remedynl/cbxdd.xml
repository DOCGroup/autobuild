<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"     value="C:\ACE\CBXdd\ACE_wrappers" />
        <environment name="TAO_ROOT"     value="C:\ACE\CBXdd\ACE_wrappers\TAO"/>
        <environment name="CVSROOT"      value=":ext:jwillemsen@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"      value="ssh" />
        <environment name="PATH"         value="C:\CBuilderX\bin;C:\CBuilderX\lib;C:\ACE\CBXdd\ACE_wrappers\lib\Dynamic\Debug;C:\ACE\CBXdd\ACE_wrappers\bin\Dynamic\Debug;C:\ACE\CBXdd\ACE_wrappers\lib;C:\ACE\CBXdd\ACE_wrappers\bin;" type="prefix" />

	<environment name="BUILD"    value="all" />
	<environment name="DEBUG"    value="1" />
	<environment name="DYNAMIC"  value="1" />
	<environment name="BCBVER"   value="6" />

        <variable name="make_program" value="bmake" />
        <variable name="configs"      value="Win32 CBorlandX Exceptions" />
        <variable name="root"         value="C:\ACE\CBXdd\" />
	<variable name="log_file"     value="log.txt" />
        <variable name="log_root"     value="C:\ACE\CBXdd\" />
        <variable name="name"         value="WinXP CBuilderX Debug" />
    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="make"              options=" -i -f Makefile.bor realclean" />

    <command name="log"               options="ON" />

    <!--  Delete all the bor files so the cvs checkout won't complain. --> 
    <command name="shell"             options="find ACE_wrappers -name '*.bor' -exec rm '{}' ';'" /> 
    <command name="cvs"               options="-z9 -q checkout -P ACE_wrappers" />

    <!--  Now, delete them again to insure a clean slate.   --> 
    <command name="shell"             options="find ACE_wrappers -name '*.bor' -exec rm '{}' ';'" /> 

    <!--  Now, checkout include/makeinclude to get all Borland needed files   --> 
    <command name="cvs"               options="-z9 update ACE_wrappers/include/makeinclude" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n#define TAO_HAS_SMART_PROXIES 1\n#define TAO_HAS_AMI 1\n#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n#define TAO_HAS_INTERFACE_REPOSITORY 1\n#define TAO_HAS_RT_CORBA 1\n#define TAO_EC_ENABLE_DEBUG_MESSAGES 1\n#include \x22ace/config-win32.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='rwho=0\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="borland" />
    <command name="check_linker" options="ilink32" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-exclude ASNMP,TAO/CIAO -make_coexistence -type borland" /> 

    <command name="make"              options=" -i -f Makefile.bor" />

    <command name="auto_run_tests"    options="-a -s \x22C:\ACE\autobuild\win32sandbox\sandbox.exe -t 1200000\x22 -ExeSubDir Dynamic\Debug" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="ssh willemsenj@tao.dre.vanderbilt.edu rm /web/users/willemsenj/CBXdd/* -f" />
    <command name="shell"             options="scp -C *.txt *.html willemsenj@tao.dre.vanderbilt.edu:/web/users/willemsenj/CBXdd" />
</autobuild>

