<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/home/build/ACE/ICC101/ACE_wrappers"/>
        <environment name="TAO_ROOT"        value="/home/build/ACE/ICC101/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"       value="/home/build/ACE/ICC101/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"       value="/home/build/ACE/ICC101/ACE_wrappers/TAO/CIAO/DAnCE"/>
        <environment name="LD_LIBRARY_PATH" value="/opt/intel/cc/10.1.017/lib:/home/build/ACE/ICC101/ACE_wrappers/lib" />
        <environment name="PATH"            value="/opt/intel/cc/10.1.017/bin" type="prefix" />
        <environment name="RSYNC_RSH"       value="ssh" />
        <environment name="INTEL_LICENSE_FILE"      value="/opt/intel/licenses" />

        <variable name="root"     value="/home/build/ACE/ICC101/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/ICC101/" />
        <variable name="configs"  value="Linux Exceptions NOXERCES" />

    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32001" />

    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='ssl=1\nCFLAGS+=-Wp64\ncidl=1\ninline=0\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux_icc.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='cidl=1\nssl=1\n'" />

    <command name="anonymous_shell"   options="scp -C johnnyw@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/CIDLC/gnu-linux-ia64/cidlc ACE_wrappers/TAO/CIAO/bin" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="icc" />
    <command name="print_ace_config" />
    <command name="print_openssl_version"/>
    <command name="print_cidlc_version" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="generate_workspace" options="-type gnuace" />

    <command name="make"              options="-k -j 8" />

    <command name="auto_run_tests"    options=" -a -o" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/RH5_IA64_ICC101" />
</autobuild>
