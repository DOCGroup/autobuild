<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/export/home/build/ACE/purify/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/export/home/build/ACE/purify/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"        value="/export/home/build/ACE/purify/ACE_wrappers/TAO/CIAO"/>
        <environment name="DANCE_ROOT"        value="/export/home/build/ACE/purify/ACE_wrappers/TAO/DAnCE"/>
        <environment name="LD_LIBRARY_PATH" value="/export/home/build/ACE/purify/ACE_wrappers/lib"/>
        <environment name="PATH" value="/opt/rational/releases/PurifyPlus.7.0.0.0-014.G/sun4_solaris2/bin" type="prefix" />
        <environment name="ACE_RUNTEST_DELAY" value="5" />

        <variable name="root"     value="/export/home/build/ACE/purify" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/export/home/build/ACE/purify" />
        <variable name="configs"  value="Exceptions" />
        <variable name="name"     value="Sun Forte" />
        <variable name="make_program" value = "gmake" />

    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32002" />

    <command name="log"               options="ON" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-sunos5.10.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='fast=0\nbuildbits=64\natomic_ops_sparc=1\ninline=1\ndebug=0\npurify=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_sunos5_sunc++.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ec_typed_events=1\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="sun_cc" />
    <command name="print_ace_config" />
    <command name="print_purify_version" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k -j 5 realclean find=*akefile" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="generate_workspace" options="-type gnuautobuild" />

    <command name="make"              options="-k -j 5" />

    <command name="auto_run_tests"    options=" -a -o" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean=2 index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/sol10purify" />
</autobuild>


