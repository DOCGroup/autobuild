<!-- $Id$ -->
<autobuild>
    <configuration>
        <variable name="name"          value="fc16_fuzz" />
        <variable name="configs"       value="Linux" />

        <include name="buildenv.xml" />
    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32004" />
    <command name="log"               options="on" />
    <command name="anonymous_shell"   options="rm -rf $DOC_ROOT" />
    <command name="anonymous_shell"   options="rm -rf $MPC_ROOT" />
    <command name="git"               options="clone --depth 1 http://:@git.remedy.nl/git/atcd.git $DOC_ROOT_NAME" />
    <command name="git"               options="clone --depth 1 http://:@git.remedy.nl/git/mpc.git $MPC_NAME" />

    <include name="printbuildenv.xml" />

    <command name="fuzz"              options="" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /.svn/ --exclude $DOC_ROOT_NAME --exclude $MPC_NAME --include *.txt --include *.html --exclude ** ./ $RSYNC_HOST/$BUILD_NAME" />
</autobuild>
