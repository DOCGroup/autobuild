<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/build/ACE/doxygen/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/home/build/ACE/doxygen/ACE_wrappers/TAO"/>

        <environment name="PATH"            value="/usr/local/bin:" type="prefix" />
        <environment name="QT4_SUFFIX"      value="-qt4" />

        <variable name="root"     value="/home/build/ACE/doxygen" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/doxygen" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32001" />
    <command name="log"               options="on" />

    <command name="shell"             options="rm -rf ACE_wrappers/html" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/html/robots.txt output='User-agent: *\nDisallow: /\n'"/>
    <command name="shell"             options="cp $HOME/favicon.ico ACE_wrappers/html" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="print_ace_config" />
    <command name="check_compiler" options="doxygen" />

    <command name="shell" options="$HOME/ACE/autobuild/configs/autobuild/remedynl/fc14_doxygen.pl" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /.svn/ --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ qnap.remedy.nl::Buildlogs/fc14_doxygen" />
</autobuild>
