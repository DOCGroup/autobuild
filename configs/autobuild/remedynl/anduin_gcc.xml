<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/export/home/build/ACE/GCC/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/export/home/build/ACE/GCC/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/export/home/build/ACE/GCC/ACE_wrappers/lib:/usr/local/lib:"/>
        <environment name="PATH" value="/usr/local/bin:/opt/csw/gcc4/bin:" type="prefix"/>

        <variable name="root"     value="/export/home/build/ACE/GCC" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/export/home/build/ACE/GCC" />
        <variable name="configs"  value="Exceptions" />
        <variable name="name"     value="Sun GCC" />
        <variable name="make_program"     value="gmake" />
    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32002" />

    <command name="log"               options="ON" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-sunos5.10.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='no_hidden_visibility=1\natomic_ops_sparc=1\ninline=0\nbuildbits=64\ninclude $(ACE_ROOT)/include/makeinclude/platform_sunos5_g++.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ec_typed_events=1\n'" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="g++" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k -j 5 realclean find=*akefile" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="generate_workspace" options="-exclude TAO -type gnuautobuild" />

    <command name="make"              options="-k -j 5" />

    <command name="auto_run_tests"    options=" -a" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean=5 index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ qnap.remedy.nl::Buildlogs/Solaris10_x86_gcc" />
</autobuild>


