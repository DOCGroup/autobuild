<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/build/ACE/footprint/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/home/build/ACE/footprint/ACE_wrappers/TAO"/>
        <environment name="CIAO_ROOT"       value="/home/build/ACE/footprint/ACE_wrappers/TAO/CIAO"/>
        <environment name="LD_LIBRARY_PATH" value="/home/build/ACE/footprint/ACE_wrappers/lib" />

        <variable name="root"     value="/home/build/ACE/footprint/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/footprint/" />
        <variable name="configs"  value="Linux Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_NLOGGING 1\n#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='use_dep_libs=0\ncidl=1\nstatic_libs_only=1\nLDFLAGS+=-Xlinker -M -Xlinker -Map -Xlinker \$@.map\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux.GNU\noptimize=1\ndebug=0\nexceptions=1\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='cidl=1\n'" />

    <command name="anonymous_shell"   options="scp -C johnnyw@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/CIDLC/gnu-linux/cidlc ACE_wrappers/TAO/CIAO/bin" />

    <command name="print_os_version" />
    <command name="check_compiler" options="gcc" />
    <command name="print_ace_config" />
    <command name="print_cidlc_version" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-exclude TAO/TAO_*.mwc,TAO/CIAO/CIAO_*.mwc" />

    <!-- ACE: only build the minimum, ace, ACEXML, and gperf -->
    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -C ace        --dry-run > $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C ACEXML     --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C apps/gperf --dry-run >> $ACE_ROOT/../.metrics/targets" />

    <command name="make"              options="-k -j4 -C ace" />
    <command name="make"              options="-k -j4 -C ACEXML" />
    <command name="make"              options="-k -j4 -C apps/gperf" />

    <!-- TAO: only build the minimum, tao -->
    <command name="make"              options="-k -C TAO realclean" />
    <!-- Build the TAO_IDL compiler first and gen the idl_stubs, so that --dry-run will create a list of all targets. -->
    <command name="make"              options="-k -C TAO/TAO_IDL" />
    <command name="make"              options="-k -C TAO/CIAO/tools/IDL3_to_IDL2" />
    <command name="make"              options="-k -C TAO/tao idl_stubs" />
    <command name="make"              options="-k -C TAO/tests idl_stubs" />
    <command name="make"              options="-k -C TAO/CIAO idl_stubs" />

    <command name="make"              options="-k -C TAO/tao                --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C TAO/tests/ORB_init     --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C TAO/tests/ORB_destroy  --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C TAO/tests/Hello        --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C TAO/tests/Muxing       --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C TAO/orbsvcs/orbsvcs    --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C TAO/CIAO/ciao          --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C TAO/CIAO/ciaosvcs      --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C TAO/CIAO/tools         --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C TAO/CIAO/DAnCE         --dry-run >> $ACE_ROOT/../.metrics/targets" />
    <command name="make"              options="-k -C TAO/CIAO/tests/Minimum --dry-run >> $ACE_ROOT/../.metrics/targets" />

    <command name="make"              options="-k -j4 -C TAO/tao" />
    <command name="make"              options="-k -j4 -C TAO/tests/ORB_init" />
    <command name="make"              options="-k -j4 -C TAO/tests/ORB_destroy" />
    <command name="make"              options="-k -j4 -C TAO/tests/Hello" />
    <command name="make"              options="-k -j4 -C TAO/tests/Muxing" />
    <command name="make"              options="-k -j4 -C TAO/orbsvcs/orbsvcs" />

    <command name="make"              options="-k -j4 -C TAO/CIAO" />

    <command name="log"               options="off" />

    <command name="shell"             options="$ACE_ROOT/bin/generate_compile_stats.sh $ACE_ROOT/../build.txt /home/build/ACE/footprint/metrics $ACE_ROOT/../.metrics/targets Footprint" />

    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />

    <command name="shell"             options="rsync --progress --delete -z --recursive /home/build/ACE/footprint/metrics/* johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/Stats" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /ACE_wrappers/ --exclude /metrics/ --exclude /.metrics/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/Statcompile" />

    <command name="status"            options="off" />
</autobuild>
