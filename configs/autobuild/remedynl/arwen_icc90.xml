<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"        value="/home/build/ACE/ICC/ACE_wrappers"/>
        <environment name="TAO_ROOT"        value="/home/build/ACE/ICC/ACE_wrappers/TAO"/>
        <environment name="LD_LIBRARY_PATH" value="/opt/intel/cc/9.0/lib:/home/build/ACE/ICC/ACE_wrappers/lib" />
        <environment name="PATH"            value="/opt/intel/cc/9.0/bin" type="prefix" />
        <environment name="RSYNC_RSH"       value="ssh" />

        <variable name="root"     value="/home/build/ACE/ICC/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/home/build/ACE/ICC/" />
        <variable name="configs"  value="Linux Exceptions" />

    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32002" />

    <command name="log"               options="on" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'"/>
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='CFLAGS+=-Wp64\ninline=0\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux_icc.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output=''" />

    <command name="print_os_version" />
    <command name="print_env_vars" />
    <command name="check_compiler" options="icc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <command name="make"              options="-k realclean find=*akefile" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="generate_workspace" options="-exclude TAO/TAO_*.mwc,TAO/CIAO -type gnuautobuild" />

    <command name="make"              options="-k" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
    <command name="shell"             options="rsync --progress --recursive --delete -z --exclude /.svn/ --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ qnap.remedy.nl::Buildlogs/RHW4_IA64_ICC" />
</autobuild>
