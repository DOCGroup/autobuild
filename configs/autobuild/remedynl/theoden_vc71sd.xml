<!-- $Id$ -->
<autobuild>
    <configuration>
        <environment name="ACE_ROOT"     value="C:\ACE\VC71sd\ACE_wrappers" />
        <environment name="TAO_ROOT"     value="C:\ACE\VC71sd\ACE_wrappers\TAO"/>
        <environment name="CIAO_ROOT"    value="C:\ACE\VC71sd\ACE_wrappers\TAO\CIAO"/>
        <environment name="RSYNC_RSH"    value="C:\cygwin\bin\ssh" />
        <environment name="PATH"         value="C:\Program Files\Microsoft Visual Studio .NET 2003\Common7\IDE;C:\Program Files\Microsoft Visual Studio .NET 2003\Vc7\bin;C:\ACE\VC71sd\ACE_wrappers\bin;C:\ACE\VC71sd\ACE_wrappers\lib" type="prefix" />

        <variable name="configs"  value="Win32 VC71 Exceptions STATIC" />
        <variable name="root"     value="C:\ACE\VC71sd\" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="C:\ACE\VC71sd\" />
        <variable name="name"     value="WinXP VS.NET 2003 Static Debug" />
        <variable name="svn_program"  value="c:\cygwin\bin\svn" />
    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32001" />

    <command name="win32make"         options="msvc_static_compile -v -vc7 -Debug -k -clean -name_modifier *_Static" />

    <command name="log"               options="ON" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="shell"             options="c:\cygwin\bin\find ACE_wrappers -name '*.vcproj*' -exec c:\cygwin\bin\rm '{}' ';'" />
    <command name="shell"             options="c:\cygwin\bin\find ACE_wrappers -name '*.sln*' -exec c:\cygwin\bin\rm '{}' ';'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n#define ACE_DISABLE_WIN32_INCREASE_PRIORITY\n#include \x22ace/config-win32.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="msvc" />
    <command name="print_ace_config" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-exclude TAO/CIAO -type vc71 -recurse -static -name_modifier *_Static -apply_project -exclude TAO/TAO_*.mwc,TAO/CIAO/CIAO_*.mwc"/>

    <command name="win32make"         options="msvc_static_compile -vc7 -Debug -CORE -k -name_modifier *_Static" />
    <command name="win32make"         options="msvc_static_compile -vc7 -Debug -ACE -k -name_modifier *_Static" />
    <command name="win32make"         options="msvc_static_compile -vc7 -Debug -TAO -k -name_modifier *_Static" />

    <command name="auto_run_tests"    options="-ExeSubDir Static_Debug -a -o -t -s \x22C:\ACE\autobuild\win32sandbox\sandbox.exe -t 5400000\x22" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean index" />
    <command name="status"            options="off" />
    <command name="shell"             options="c:\cygwin\bin\rsync --progress --recursive --delete -z --exclude /ACE_wrappers*/ --include *.txt --include *.html --exclude ** ./ johnnyw@naboo.dre.vanderbilt.edu:/web/users/remedynl/VC71sd" />
</autobuild>
