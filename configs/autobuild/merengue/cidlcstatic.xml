<!-- $Id$ -->
<autobuild>
   <configuration>
      <environment name="ACE_ROOT" value="C:\ACE\CIDLC\ACE_wrappers"/>
      <environment name="TAO_ROOT" value="C:\ACE\CIDLC\ACE_wrappers\TAO"/>
      <environment name="CIAO_ROOT" value="C:\ACE\CIDLC\ACE_wrappers\TAO\CIAO"/>
      <environment name="CVSROOT"      value=":ext:bugzilla@cvs.doc.wustl.edu:/project/cvs-repository" />
      <environment name="CVS_RSH"      value="C:\bin\plink.exe" />
      <environment name="PATH" value="C:\WINDOWS\system32;C:\WINDOWS;C:\WINDOWS\System32\Wbem;C:\Program Files\Microsoft Visual Studio .NET 2003\Common7\IDE;C:\Program Files\Microsoft Visual Studio .NET 2003\Vc7\bin;C:\ACE\CIDLC\ACE_wrappers\bin;C:\ACE\CIDLC\ACE_wrappers\lib;C:\Perl\bin" type="prefix"/>
      <environment name="BOOST_ROOT" value="C:\Boost"/>
      <environment name="BOOST_VERSION" value="boost-1_32"/>

      <variable name="configs" value="Win32 SANDBOX Exceptions" />
      <variable name="root" value="C:\ACE\CIDLC\"/>
      <variable name="log_file" value="log.txt"/>
      <variable name="log_root" value="C:\ACE\CIDLC\"/>
      <variable name="project_root" value="C:\ACE\CIDLC\ACE_wrappers"/>
      <variable name="name" value="WinXP VS.NET 2003 - CIDLC Build" />
   </configuration>

   <command name="status" options="on" />
   <command name="file_manipulation" options="type=mustnotexist file=.disable"/>
   <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
   <command name="win32make"         options="msvc_mpc_auto_compile -vc7 -dir ACE_wrappers\TAO\CIAO\CIDLC -clean" />
   <command name="log"    options="ON" />
   <command name="cvs"    options="-z9 -q checkout -P ACE_wrappers" />
   <command name="cvs"    options="-z9 -q checkout -P ACE_MPC" />
   <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n#include \x22ace/config-win32.h\x22\n'" />
   <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='rwho=0\nqos=1\nboost=1\ncidl=1\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="msvc" />
    <command name="print_ace_config" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-type vc71 -static TAO\CIAO\CIDLC\CIDLC.mwc"/>

    <command name="win32make"         options="msvc_mpc_auto_compile -vc7 -s -dir ACE_wrappers\TAO\CIAO\CIDLC -k" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="pscp ACE_wrappers\TAO\CIAO\bin\cidlc.exe bczar@www.dre.vanderbilt.edu:/web/users/isisbuilds/CIDLC/Win32" />
    <command name="shell"             options="pscp *.txt bczar@www.dre.vanderbilt.edu:/web/users/isisbuilds/auto_compile_logs/Win32_CIDLC" />
    <command name="shell"             options="pscp *.html bczar@www.dre.vanderbilt.edu:/web/users/isisbuilds/auto_compile_logs/Win32_CIDLC" />
</autobuild>
