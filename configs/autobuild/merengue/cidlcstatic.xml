<!-- $Id$ -->
<autobuild>
   <configuration>
      <environment name="ACE_ROOT"  value="C:\ACE\CIDLC\ACE_wrappers"/>
      <environment name="TAO_ROOT"  value="C:\ACE\CIDLC\ACE_wrappers\TAO"/>
      <environment name="CIAO_ROOT" value="C:\ACE\CIDLC\ACE_wrappers\TAO\CIAO"/>
      <environment name="RSYNC_RSH"    value="c:\Cygwin\bin\ssh" />
      <environment name="PATH"      value="C:\Program Files\Microsoft Visual Studio .NET 2003\Common7\IDE;C:\Program Files\Microsoft Visual Studio .NET 2003\Vc7\bin;C:\ACE\CIDLC\ACE_wrappers\bin;C:\ACE\CIDLC\ACE_wrappers\lib;C:\Perl\bin;c:\cygwin\bin" type="prefix"/>
      <environment name="BOOST_ROOT"              value="C:\Boost-1.32"/>
      <environment name="BOOST_VERSION"           value="boost-1_32"/>
      <environment name="BOOST_CFG"               value="-vc71-mt" />
      <environment name="BOOST_STATIC_LIB_PREFIX" value="lib" />
      <variable name="configs" value="Win32 VC71 Exceptions" />
      <variable name="root" value="C:\ACE\CIDLC\"/>
      <variable name="project_root" value="C:\ACE\CIDLC\ACE_wrappers"/>
      <variable name="log_file" value="log.txt"/>
      <variable name="log_root" value="C:\ACE\CIDLC\"/>
      <variable name="name" value="WinXP VS.NET 2003 - CIDLC Build" />
   </configuration>

   <command name="status" options="on" />

   <command name="process_listener"  options="localhost:32001" />

   <command name="win32make"         options="msvc_mpc_auto_compile -vc7 -dir TAO\CIAO\CIDLC -clean" />
   <command name="log"    options="ON" />
   <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/ACE/sets-anon/ACE+TAO+CIAO ." />
   <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#define ACE_DISABLE_WIN32_ERROR_WINDOWS\n#define ACE_HAS_STANDARD_CPP_LIBRARY 1\n#include \x22ace/config-win32.h\x22\n'" />
   <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='rwho=0\nqos=1\nboost=1\ncidl=1\nstatic=1\n'" />

    <command name="print_os_version" />
    <command name="check_compiler" options="msvc" />
    <command name="print_ace_config" />
    <command name="print_perl_version" />

    <command name="generate_workspace" options="-type vc71 -static TAO\CIAO\CIDLC\CIDLC.mwc"/>

    <command name="win32make"         options="msvc_mpc_auto_compile -vc7 -s -dir TAO\CIAO\CIDLC -k" />

    <command name="log"               options="OFF" />
    <command name="process_logs"      options="move prettify clean index" />
    <command name="shell"             options="c:\cygwin\bin\scp ACE_wrappers\TAO\CIAO\bin\cidlc.exe bczar@www.dre.vanderbilt.edu:/web/users/isisbuilds/CIDLC/Win32/cidlc.exe" />
    <command name="status"            options="off" />
    <command name="shell"             options="c:\cygwin\bin\rsync --progress --recursive --delete -z --exclude /ACE_wrappers/ --include *.txt --include *.html --exclude ** ./ bczar@naboo.dre.vanderbilt.edu:/web/users/isisbuilds/auto_compile_logs/Win32_CIDLC" />
</autobuild>
