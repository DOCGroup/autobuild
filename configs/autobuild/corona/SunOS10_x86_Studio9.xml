<!-- $Id$ -->
<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/build/isisbuilds/Studio/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/build/isisbuilds/Studio/ACE_wrappers/TAO" />
        <environment name="CIAO_ROOT"        value="/build/isisbuilds/Studio/ACE_wrappers/TAO/CIAO" />
        <environment name="LD_LIBRARY_PATH" value="/build/isisbuilds/Studio/ACE_wrappers/lib:/opt/SUNWspro/lib:/build/isisbuilds/utils/xerces-studio/lib:/usr/local/lib:" />
        <environment name="PATH"            value="/usr/local/bin:/build/isisbuilds/utils/xerces-studio/lib" type="prefix" />
        <environment name="XERCESCROOT"     value="/build/isisbuilds/utils/xerces-studio" />
        <environment name="ZLIB_ROOT"       value="/usr/" />
        <environment name="ZZIP_ROOT"       value="/usr/local/" />

        <variable name="root"     value="/build/isisbuilds/Studio/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/web/users/isisbuilds/auto_compile_logs/corona_Solaris10_X86_STUDIO9" />
        <variable name="configs"  value="SSL Exceptions" />
        <variable name="make_program" value="gmake" />

    </configuration>

    <command name="status"            options="on" />
    <command name="process_listener"  options="localhost:32001" />
    <command name="log"               options="on" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#undef TAO_IDL_PREPROCESSOR \n#define TAO_IDL_PREPROCESSOR \x22cc\x22\n#define ACE_ONLY_LATEST_AND_GREATEST\n#define ACE_USES_STD_NAMESPACE_FOR_STDCPP_LIB 1\n#define ACE_HAS_REACTOR_NOTIFICATION_QUEUE 1\n#define ACE_HAS_DEV_POLL 1\n#include \x22ace/config-sunos5.10.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='inline=0\nexceptions=1\ndebug=0\nssl=1\nPLATFORM_SSL_CPPFLAGS+= -I/usr/sfw/include\nPLATFORM_SSL_LDFLAGS+=-L/usr/sfw/lib\ninclude $(ACE_ROOT)/include/makeinclude/platform_sunos5_sunc++.GNU\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/bin/MakeProjectCreator/config/default.features output='ipv6=1\nssl=1\nzlib=1\nzzip=1\n'" />

    <command name="print_os_version" />
    <command name="check_compiler"    options="sun_cc" />
    <command name="print_ace_config" />
    <command name="print_make_version" />
    <command name="print_perl_version" />

    <!-- Uses ACE.mwc -->
    <command name="generate_workspace" options="-exclude TAO -type gnuace" />
    <!-- Uses TAO/TAO.mwc -->
    <command name="generate_workspace" options="dirs=TAO -exclude TAO_*.mwc,CIAO -type gnuace" />
    <command name="generate_workspace" options="dirs=TAO/CIAO -exclude CIAO_*.mwc,CIAO.mwc,CCF,CIDLC -type gnuace" />
    <command name="anonymous_shell"   options="/bin/cp /web/users/isisbuilds/CIDLC/Solaris/x86/cidlc ACE_wrappers/TAO/CIAO/bin" />
    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -C TAO realclean" />
    <command name="make"              options="-k -C TAO/CIAO realclean" />

    <command name="make"              options="-j 2 -k" />
    <command name="make"              options="-j 2 -k -C TAO" />
    <command name="make"              options="-j 2 -k -C TAO/CIAO" />

    <command name="auto_run_tests"    options=" -a -o -t -C" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
</autobuild>
