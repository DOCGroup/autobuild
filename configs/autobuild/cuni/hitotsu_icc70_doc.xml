<autobuild>
    <configuration>

        <environment name="ACE_ROOT"        value="/home/docgroup/builds/ICC70/ACE_wrappers" />
        <environment name="TAO_ROOT"        value="/home/docgroup/builds/ICC70/ACE_wrappers/TAO"/>
        <environment name="CVSROOT"         value="isisbuilds@cvs.doc.wustl.edu:/project/cvs-repository" />
        <environment name="CVS_RSH"         value="ssh" />
        <environment name="LD_LIBRARY_PATH" value="/home/docgroup/builds/ICC70/ACE_wrappers/ace:$LD_LIBRARY_PATH" />

        <variable name="root"         value="/home/docgroup/builds/ICC70"/>
        <variable name="build_name"   value="icc70" />
        <variable name="log_file"     value="build.txt" />
        <variable name="log_root"     value="/home/docgroup/builds/ICC70/" />
	<variable name="configs"  value="Linux Exceptions" />

    </configuration>

    <command name="status"            options="on" />
    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />
    <command name="log"               options="on" />

    <!-- Delete all the Makefiles so the cvs checkout won't complain. -->
    <command name="shell"             options="find ACE_wrappers -name 'Makefile*' -exec rm '{}' ';'" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_wrappers" />
    <command name="cvs"               options="-z 3 -q checkout -P ACE_MPC"/>
    <!-- Now, delete them again to insure a clean slate. -->
    <command name="shell"             options="find ACE_wrappers -name 'Makefile*' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=delete file=.disable" />

    <command name="file_manipulation" options="type=mustnotexist file=.disable" />
    <command name="file_manipulation" options="type=create file=.disable output='RUNNING'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-linux.h\x22\n'" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='debug=0\nexceptions=1\nrt_corba=1\nsmart_proxies=1\ninterface_repo=1\ninterceptors=1\nssl=1\ninclude $(ACE_ROOT)/include/makeinclude/platform_linux_icc.GNU\n\n'" />

    <command name="print_os_version" />
    <command name="check_compiler"    options="ecc" />
    <command name="print_ace_config" />

    <!-- Uses ACE.mwc -->
    <command name="generate_workspace" options="-exclude TAO,build.mwc" />
    <!-- Uses TAO/TAO.mwc -->
    <command name="generate_workspace" options="dirs=TAO -exclude *.mwc,CIAO" />

    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -C TAO realclean" />
    <command name="make"              options="-j 4 -k" />
    <command name="make"              options="-j 4 -k -C TAO" />

    <command name="auto_run_tests"    options=" -a -o -t -C" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="file_manipulation" options="type=delete file=.disable" />
    <command name="status"            options="off" />
    <command name="shell"             options="scp -C *.txt *.html isisbuilds@tao.dre.vanderbilt.edu:/web/users/isisbuilds/auto_compile_logs/hitotsu_icc70" />
</autobuild>
