<autobuild>
    <configuration>

        <environment name="ACE_ROOT"          value="/build/isisbuilds/gcc3.3/ACE_wrappers" />
        <environment name="TAO_ROOT"          value="/build/isisbuilds/gcc3.3/ACE_wrappers/TAO" />
        <environment name="CIAO_ROOT"          value="/build/isisbuilds/gcc3.3/ACE_wrappers/TAO/CIAO" />
        <environment name="DYLD_LIBRARY_PATH" value="/build/isisbuilds/gcc3.3/ACE_wrappers/lib:/build/isisbuilds/utils/xerces/lib:/build/isisbuilds/utils/boost/lib:/opt/loca/lib" />
        <environment name="PATH"              value="/opt/local/bin:/usr/bin/:/bin" />
        <environment name="XERCESCROOT"       value="/build/isisbuilds/utils/xerces" />
        <environment name="BOOST_ROOT"        value="/build/isisbuilds/utils/boost" />
        <environment name="UTILITY_ROOT"      value="/build/isisbuilds/utils/Utility" />
        <environment name="SSL_ROOT"          value="/usr" />
        <environment name="MACOSX_DEPLOYMENT_TARGET" value="10.4" />

        <variable name="root"     value="/build/isisbuilds/gcc3.3/" />
        <variable name="log_file" value="build.txt" />
        <variable name="log_root" value="/web/users/isisbuilds/auto_compile_logs/cosmic_gcc3.3" />
        <variable name="project_root" value="/build/isisbuilds/gcc3.3/ACE_wrappers" />

    </configuration>

    <command name="status"            options="on" />

    <command name="process_listener"  options="localhost:32001" />

    <command name="log"               options="on" />

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />
    <command name="svn"               options="co svn://svn.dre.vanderbilt.edu/DOC/Middleware/sets-anon/ACE+TAO+CIAO ." />

    <!-- Now, delete them again to insure a clean slate. -->

    <command name="shell"             options="find ACE_wrappers -name 'GNUmakefile*' -exec rm '{}' ';'" />

    <command name="file_manipulation" options="type=create file=ACE_wrappers/ace/config.h output='#include \x22ace/config-macosx-tiger.h\x22\n\n '" />
    <command name="file_manipulation" options="type=create file=ACE_wrappers/include/makeinclude/platform_macros.GNU output='CC=gcc-3.3\nCXX=g++3.3\ninclude $(ACE_ROOT)/include/makeinclude/platform_macosx_tiger.GNU\ndebug=0\nstatic_libs_only=0\noptimize=0\n\n '" />
    <command name="print_os_version" />
    <command name="check_compiler"    options="gcc" />
    <command name="print_ace_config" />

    <!-- Uses ACE.mwc -->
    <command name="generate_workspace" options="-exclude TAO -type gnuautobuild" />
    <!-- Uses TAO/TAO.mwc -->
    <command name="generate_workspace" options="dirs=TAO -exclude TAO_ACE.mwc,CIAO -type gnuautobuild" />
    <!--  Uses TAO/CIAO -->
    <command name="generate_workspace" options="dirs=TAO/CIAO -exclude CIAO_TAO.mwc,CIDLC,CCF -type gnuautobuild" />

    <!-- Clean workspace -->
    <command name="make"              options="-k realclean" />
    <command name="make"              options="-k -C TAO realclean" />
    <command name="make"              options="-k -C TAO/CIAO realclean" />

    <command name="make"              options="-j 2 -k" />
    <command name="make"              options="-k -j 4 -C TAO/TAO_IDL" />
    <command name="make"              options="-k -j 4 -C TAO" />

    <!-- Build CIAO -->
    <command name="anonymous_shell"   options="/bin/cp /web/users/isisbuilds/CIDLC/Darwin/PowerPC/cidlc ACE_wrappers/TAO/CIAO/bin" />
    <command name="make"              options="-k -j 4 -C TAO/CIAO" />

    <command name="auto_run_tests"    options="-a -o -t -C" />

    <command name="log"               options="off" />
    <command name="process_logs"      options="clean move prettify index" />
    <command name="status"            options="off" />
</autobuild>
